<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="product_template_form_view_forlife">
            <field name="name">product.template.inherit.tolerance</field>
            <field name="model">product.template</field>
            <field name="priority">22</field>
            <field name="inherit_id" ref="account.product_template_form_view"/>
            <field name="arch" type="xml">
                <page name="invoicing" position="after">
                    <page name="tolerance" string="Tolerance">
                        <group>
                            <group>
                                <label for="tolerance"/>
                                <div class="o_row">
                                    <field class="oe_inline" nolabel="1" name="tolerance"/>
                                    <span>%</span>
                                </div>
                            </group>
                        </group>

                            <group string="Tolerance">
                                <field name="tolerance_ids">
                                    <tree editable="bottom">
                                        <field name="partner_id"/>
                                        <field name="tolerance"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="partner_id"/>
                                            <field name="tolerance"/>
                                        </group>
                                    </form>
                                </field>
                            </group>

                    </page>
                </page>
            </field>
        </record>
    </data>
</odoo>