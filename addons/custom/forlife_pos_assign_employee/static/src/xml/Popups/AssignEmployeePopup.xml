<?xml version="1.0" encoding="utf-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="AssignEmployeePopup" owl="1">
        <div class="popup assign-employee-popup">
            <header class="title">
                <t t-esc="props.title"/>
            </header>
            <main class="body">
                <select t-model="state.employeeID" class="configurator_select assign-employee">
                    <t t-foreach="employees" t-as="employee" t-key="employee.id">
                        <option t-att-value="employee.id"><t t-esc="employee.code"/> - <t t-esc="employee.name"/></option>
                    </t>
                </select>
            </main>
            <footer class="footer">
                <div class="button cancel" t-on-click="cancel">
                    <t t-esc="props.cancelTitle"/>
                </div>
                <div class="button confirm highlight" t-on-click="confirm">
                    <t t-esc="props.assignTitle"/>
                </div>
                <div class="button confirm highlight" t-on-click="confirm_all">
                    <t t-esc="props.assignAllTitle"/>
                </div>
                <div class="button confirm highlight" t-on-click="confirm_default">
                    <t t-esc="props.assignDefaultTitle"/>
                </div>
            </footer>
        </div>
    </t>
</templates>