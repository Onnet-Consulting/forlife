<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="employee_transfer_view_tree" model="ir.ui.view">
            <field name="name">employee_transfer_view_tree</field>
            <field name="model">employee.transfer</field>
            <field name="arch" type="xml">
                <tree string="employee_transfer_tree" editable="top" create="1">
                    <field name="bo_plan_id" options="{'no_create': True, 'no_open': True}"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="store_source_id" context="{'show_code_name': 1}" options="{'no_create': True, 'no_open': True}"/>
                    <field name="store_dest_id" context="{'show_code_name': 1}" options="{'no_create': True, 'no_open': True}"/>
                    <field name="employee_id" context="{'show_code_name': 1}" options="{'no_create': True, 'no_open': True}"/>
                    <field name="job_id" options="{'no_create': True, 'no_open': True}"/>
                    <button name="btn_confirm_employee_transfer" class="oe_highlight" type="object" string="Confirm" title="Confirm" aria-label="Confirm"/>
                </tree>
            </field>
        </record>

        <record id="employee_transfer_action" model="ir.actions.act_window">
            <field name="name">Employee Transfer</field>
            <field name="res_model">employee.transfer</field>
            <field name="view_mode">tree</field>
            <field name="context">{'show_code_name': 1}</field>
        </record>

        <record id="employee_transfer_view_form" model="ir.ui.view">
            <field name="name">employee_transfer_view_form</field>
            <field name="model">employee.transfer</field>
            <field name="arch" type="xml">
                <form string="employee_transfer_form">
                    <sheet>
                        <group>
                            <field name="revenue_target"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="OK" type="object" name="btn_confirm_employee_transfer" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="employee_transfer_action_confirm" model="ir.actions.act_window">
            <field name="name">Employee Transfer</field>
            <field name="res_model">employee.transfer</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>