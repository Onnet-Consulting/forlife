<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="business_objective_employee_view_tree" model="ir.ui.view">
            <field name="name">business_objective_employee_view_tree</field>
            <field name="model">business.objective.employee</field>
            <field name="arch" type="xml">
                <tree string="business_objective_employee_tree" editable="top" create="0">
                    <field name="bo_plan_id" options="{'no_open': True}" readonly="1"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="store_id" context="{'show_code_name': 1}" options="{'no_create': True, 'no_open': True}"/>
                    <field name="sale_province_id" options="{'no_create': True, 'no_open': True}"/>
                    <field name="employee_id" context="{'show_code_name': 1}" options="{'no_create': True, 'no_open': True}"/>
                    <field name="job_id" options="{'no_create': True, 'no_open': True}"/>
                    <field name="revenue_target"/>
                    <button name="btn_employee_transfer" class="oe_highlight" type="object" string=" Transfer" title="Transfer" aria-label="Transfer" icon="fa-share"/>
                </tree>
            </field>
        </record>

        <record id="business_objective_employee_action" model="ir.actions.act_window">
            <field name="name">BO Employee</field>
            <field name="res_model">business.objective.employee</field>
            <field name="view_mode">tree</field>
            <field name="context">{'show_code_name': 1}</field>
            <field name="view_id" ref="business_objective_employee_view_tree"/>
        </record>

        <record id="bo_employee_view" model="ir.actions.act_window">
            <field name="name">BO Employee</field>
            <field name="res_model">business.objective.employee</field>
            <field name="view_mode">tree</field>
            <field name="context">{'show_code_name': 1}</field>
            <field name="view_id" ref="business_objective_employee_view_tree"/>
            <field name="domain">[('bo_plan_id', '=', active_id)]</field>
        </record>

    </data>
</odoo>