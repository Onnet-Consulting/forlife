<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="ComboDetailsPopup" owl="1">
            <div class="popup discounted-product-info-popup">
                <header class="title">
                    Chi tiết Combo/Sản phẩm được áp dụng
                </header>
                <div class="section-product-info-title body">
                    <div class="column flex-start">
                        <strong t-esc="props.program.display_name"/>
                        <span><t t-if="props.program.combo_code" t-esc="props.program.combo_code"/></span>
                    </div>
                    <div t-if="props.program.promotion_type != 'pricelist'" class="column flex-end">
                        <strong>
                            <t t-esc="props.qty_per_combo"/> SP / Combo
                        </strong>
                    </div>
                </div>
                <hr/>
                <main class="body">
                    <div style="text-align: left;"><strong>Số lượng Combo/SP: <t t-esc="props.qty_of_combo"/></strong></div>
                    <table style="width:100%;" class="payment-list">
                        <thead>
                            <tr height="50px">
                                <th>Sản phẩm</th>
                                <th style="text-align: center;">Số lượng</th>
                                <th style="text-align: center;">Giá ban đầu</th>
                                <th style="text-align: center;">Giá sau giảm</th>
                                <th style="text-align: center;">Tiền giảm</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="i" t-value="1"/>
                            <t t-foreach="props.details" t-as="line" t-key="i">
                                <t t-set="i" t-value="i+1"/>
                                <tr height="50px" class="payment-item">
                                    <td class="section-title-line" t-esc="line.product.display_name"/>
                                    <td class="section-title-line" style="text-align: center;" t-esc="line.quantity"/>
                                    <td class="section-title-line" style="text-align: center;" t-esc="line.pre_price != null and this.env.pos.format_currency(line.pre_price) or ''"/>
                                    <td class="section-title-line" style="text-align: center;" t-esc="line.new_price != null and this.env.pos.format_currency(line.new_price) or ''"/>
                                    <td class="section-title-line" style="text-align: center;" t-esc="this.env.pos.format_currency(line.discount_amount*line.quantity)"/>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </main>
                <footer class="footer">
                    <div class="button cancel" t-on-click="cancel">
                        Đóng
                    </div>
                </footer>
            </div>
    </t>
</templates>
