<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="promotion_program_view_form" model="ir.ui.view">
        <field name="name">promotion.program.view.form</field>
        <field name="model">promotion.program</field>
        <field name="arch" type="xml">
            <form string="Promotion">

                <header>
                    <field name="show_gen_code" invisible="1"/>
                    <button name="%(promotion_generate_code_action)d" string="Generate Codes"
                            class="btn-primary" type="action"
                            attrs="{'invisible': [('show_gen_code', '=', False)]}"/>
                    <button name="action_recompute_new_field_binary" string="Debug-Recompute Field Binary"
                            class="btn-secondary" type="object" groups="base.group_no_one"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_open_promotion_codes" icon="fa-tags"
                                attrs="{'invisible': [('with_code', '=', False), ('promotion_type', '!=', 'code')]}"
                        >
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value">
                                    <field name="code_count"/>
                                </span>
                                <span class="o_stat_text" >
                                Promotion Codes</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_open_issued_vouchers" icon="fa-ticket"
                                attrs="{'invisible': [('reward_type', '!=', 'cart_get_voucher')]}"
                        >
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value">
                                    <field name="voucher_count"/>
                                </span>
                                <span class="o_stat_text" >
                                Issued Voucher</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_open_orders" icon="fa-list"
                                attrs="{'invisible': [('total_order_count', '=', 0)]}"
                        >
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value">
                                    <field name="total_order_count"/>
                                </span>
                                <span class="o_stat_text" >
                                POS Orders</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_open_pricelist_items" icon="fa-list"
                                attrs="{'invisible': [('promotion_type', '!=', 'pricelist')]}"
                        >
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value">
                                    <field name="pricelist_item_count"/>
                                </span>
                                <span class="o_stat_text" >
                                Pricelist Items</span>
                            </div>
                        </button>
                    </div>
                    <field name="active" invisible="1"/>
                    <field name="discount_apply_on" invisible="1"/>
                    <div class="oe_title">
                        <label for="name" string="Program Name"/>
                        <h1>
                            <field name="name" placeholder="e.g. 10% discount on laptops"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                            <label for="promotion_type"/>
                            <div>
                                <field name="promotion_type"/>
                            </div>
                            <field name="currency_id" invisible="1"/>
                            <field name="currency_symbol" invisible="1"/>
                            <field name="campaign_id" readonly="1" attrs="{'invisible': [('campaign_id', '=', False)]}"/>
<!--                            <field name="applicability" string="Use points on" groups="base.group_no_one" widget="radio" force_save="1"/>-->
<!--                            <field name="customer_domain" widget="domain"-->
<!--                                   options="{'model': 'res.partner', 'in_dialog': true}"/>-->
                            <label for="limit_usage"
                                   attrs="{'invisible': [('promotion_type', '!=', 'code'), ('with_code', '=', False)]}"/>
                            <span attrs="{'invisible': [('promotion_type', '!=', 'code'), ('with_code', '=', False)]}">
                                <field name="limit_usage" class="oe_inline"/>
                                <span attrs="{'invisible': [('limit_usage', '=', False)]}"> to <field name="max_usage" class="oe_inline"/> usages</span>
                            </span>
                            <label for="limit_usage_per_order"
                                   attrs="{'invisible': [('promotion_type', '!=', 'combo')]}"/>
                            <span attrs="{'invisible': [('promotion_type', '!=', 'combo')]}">
                                <field name="limit_usage_per_order" class="oe_inline"/>
                                <span attrs="{'invisible': [('limit_usage_per_order', '=', False)]}"> to <field name="max_usage_per_order" class="oe_inline"/> combo/SP</span>
                            </span>
                            <label for="limit_usage_per_customer"
                                   attrs="{'invisible': [('promotion_type', 'not in', ('code','combo', 'cart')), '|',('with_code', '=', False), ('promotion_type', '!=', 'pricelist')]}"/>
                            <span  attrs="{'invisible': [('promotion_type', 'not in', ('code','combo', 'cart')), '|',('with_code', '=', False), ('promotion_type', '!=', 'pricelist')]}">
                                <field name="limit_usage_per_customer" class="oe_inline"/>
                                <span attrs="{'invisible': [('limit_usage_per_customer', '=', False)]}"> to <field name="max_usage_per_customer" class="oe_inline"/> Combo/Order</span>
                            </span>
                            <label for="limit_usage_per_program"
                                   attrs="{'invisible': [('promotion_type', 'not in', ('code','combo', 'cart')), '|',('with_code', '=', False), ('promotion_type', '!=', 'pricelist')]}"/>
                            <span  attrs="{'invisible': [('promotion_type', 'not in', ('code','combo', 'cart')), '|',('with_code', '=', False), ('promotion_type', '!=', 'pricelist')]}">
                                <field name="limit_usage_per_program" class="oe_inline"/>
                                <span attrs="{'invisible': [('limit_usage_per_program', '=', False)]}"> to <field name="max_usage_per_program" class="oe_inline"/> Combo/Order</span>
                            </span>
                            <field name="company_id" invisible="1"/>
                            <field name="apply_online"/>
                            <field name="for_new_customer" attrs="{'invisible': ['|', ('promotion_type', '!=', 'code'), ('apply_online', '!=', True)]}"/>
                        </group>
                        <group>
                            <field name="brand_id" invisible="1" required="0"/>
                            <field name="store_ids" widget="many2many_tags" invisible="1"/>
                            <field name="combo_code" attrs="{'invisible': [('promotion_type', '!=', 'combo')]}"/>
                            <label for="registering_tax"/>
                            <div>
                                <field name="registering_tax" nolabel="1" class="oe_inline"/>
                                <field name="tax_from_date" class="oe_inline"
                                       attrs="{'required': [('registering_tax', '=', True)], 'invisible': [('registering_tax', '=', False)]}"/>
                                <span class="oe_inline" attrs="{'invisible': [('registering_tax', '=', False)]}">To&amp;nbsp;</span>
                                <field name="tax_to_date" class="oe_inline"
                                       attrs="{'required': [('registering_tax', '=', True)], 'invisible': [('registering_tax', '=', False)]}"/>
                            </div>
                        </group>
                    </group>
                    <group string="Combo" attrs="{'invisible': [('promotion_type', '!=', 'combo')]}">
                            <field name="with_code" attrs="{'invisible': [('promotion_type', '!=', 'combo')]}"/>
                            <label for="combo_line_ids" attrs="{'invisible': [('promotion_type', '!=', 'combo')]}"/>
                            <field name="combo_line_ids" colspan="2" mode="tree" nolabel="1" attrs="{'invisible': [('promotion_type', '!=', 'combo')]}"
                                   add-label="Add a product"
                                   class="o_loyalty_kanban_inline"/>
                    </group>
                    <group string="Conditions" attrs="{'invisible': [('promotion_type', 'not in', ('code', 'cart', 'pricelist'))]}">
                        <field name="with_code" attrs="{'invisible': [('promotion_type', 'not in', ('cart', 'code', 'pricelist'))]}"/>
                        <field name="order_amount_min" attrs="{'invisible': [('promotion_type', 'not in', ('cart'))]}"/>
<!--                        <field name="incl_reward_in_order" attrs="{'invisible': [('promotion_type', 'not in', ('cart'))]}"/>-->
                        <field name="only_condition_product" attrs="{'invisible': [('promotion_type', 'not in', ('cart'))]}"/>
                        <field name="is_original_price" attrs="{'invisible': [('promotion_type', 'not in', ('cart'))]}"/>
                        <field name="incl_reward_in_order_type"
                               attrs="{'invisible': [('promotion_type', 'not in', ('cart'))], 'required': [('promotion_type', '=', 'cart')]}"/>
<!--                        <field name="product_ids"-->
<!--                               attrs="{ 'invisible': [('promotion_type', 'not in', ('code', 'cart'))],-->
<!--                                        'required': [('promotion_type', '=', 'code'), ('discount_apply_on', '=', 'specific_products')]}">-->
<!--                            <tree limit="20">-->
<!--                                <field name="name"/>-->
<!--                                <field name="barcode"/>-->
<!--                                <field name="lst_price"/>-->
<!--                            </tree>-->
<!--                        </field>-->
                        <field name="json_valid_product_ids" invisible="1"/>
<!--                        <field name="product_categ_ids" widget="many2many_tags"-->
<!--                              attrs="{'invisible': [('promotion_type', 'not in', ('code', 'cart'))]}"/>-->
                        <field name="min_quantity" attrs="{'invisible': [('promotion_type', 'not in', ('code', 'cart'))]}"/>
                        <label for="product_count" attrs="{'invisible': [('promotion_type', 'not in', ('code', 'cart'))]}"/>
                        <div class="o_row" attrs="{'invisible': [('promotion_type', 'not in', ('code', 'cart'))]}">
                            <button name="action_open_condition_product" type="object" string="Products" class="btn-secondary" attrs="{'invisible':[('product_count','=',0)]}">
                              <field name="product_count" string="Products"/>
                            </button>
                            <button name="action_open_condition_product" type="object" string="Import Products" class="btn-secondary"
                                    attrs="{'invisible': [('promotion_type', 'not in', ('code', 'cart'))]}">
                                <span>Import Products</span>
                            </button>
                        </div>
                    </group>
                        <group string="Rewards">
                            <field name="discount_based_on"
                                   attrs="{'invisible': ['&amp;', ('reward_type', 'not in',
                                            ('code_amount', 'code_percent', 'cart_discount_amount', 'cart_discount_percent',
                                            'cart_discount_fixed_price', 'cart_get_x_free')),
                                            ('promotion_type', '!=', 'pricelist')],
                                            'readonly': [('promotion_type', '=', 'pricelist')]}" force_save="1"/>
                            <field name="discount_apply_on"
                                   attrs="{'invisible': [('reward_type', 'not in', ('code_amount', 'code_percent'))]}"/>
                            <field name="reward_type" attrs="{'invisible': [('promotion_type', '=', 'pricelist')]}"/>
                            <field name="progressive_reward_compute"
                                attrs="{'invisible': [('reward_type', 'not in', ('cart_discount_percent', 'cart_discount_fixed_price', 'cart_get_x_free'))]}"/>
                            <field name="disc_amount" widget="monetary" options="{'currency_field': 'currency_id'}"
                                   attrs="{'invisible': [('reward_type', 'not in', ('combo_amount', 'code_amount', 'cart_discount_amount'))]}"/>

                            <field name="voucher_program_id"
                                   attrs="{'invisible': [('reward_type', '!=', 'cart_get_voucher')], 'required': [('reward_type', '=', 'cart_get_voucher')]}"/>
                            <field name="voucher_product_id" invisible="1"/>
                            <field name="voucher_product_variant_id"
                                   attrs="{'invisible': [('reward_type', '!=', 'cart_get_voucher')], 'required': [('reward_type', '=', 'cart_get_voucher')]}"/>
                            <field name="voucher_price" force_save="1" readonly="1"
                                   attrs="{'invisible': [('reward_type', '!=', 'cart_get_voucher')]}"/>
                            <field name="voucher_apply_product_ids" widget="many2many_tags"
                                   attrs="{'invisible': [('reward_type', '!=', 'cart_get_voucher')]}"/>

                            <label for="disc_fixed_price" attrs="{'invisible': [('reward_type', 'not in', ('combo_fixed_price', 'code_fixed_price', 'cart_discount_fixed_price'))]}"/>
                            <div attrs="{'invisible': [('reward_type', 'not in', ('combo_fixed_price', 'code_fixed_price', 'cart_discount_fixed_price'))]}">
                                <field name="disc_fixed_price"  class="oe_inline" widget="monetary" options="{'currency_field': 'currency_id'}"
                                   attrs="{'invisible': [('reward_type', 'not in', ('combo_fixed_price', 'code_fixed_price', 'cart_discount_fixed_price'))]}"/>
                                <span attrs="{'invisible': [('reward_type', 'not in', ('combo_fixed_price'))]}">per Combo</span>
                            </div>

                            <label for="disc_percent"
                                   attrs="{'invisible': [('reward_type', 'not in', ('combo_percent', 'code_percent', 'cart_discount_percent', 'combo_discount_percent_x'))]}"/>
                            <div attrs="{'invisible': [('reward_type', 'not in', ('combo_percent', 'code_percent', 'cart_discount_percent', 'combo_discount_percent_x'))]}">
                                <field name="disc_percent" class="oe_inline"/>
                                <span  class="oe_inline"
                                       attrs="{'invisible': [('reward_type', 'not in', ('combo_percent', 'code_percent', 'cart_discount_percent', 'combo_discount_percent_x'))]}">%</span>
                            </div>

                            <field name="disc_max_amount" widget="monetary" options="{'currency_field': 'currency_id'}"
                                   attrs="{'invisible': [('reward_type', 'not in', ('combo_percent', 'code_percent', 'cart_discount_percent', 'combo_discount_percent_x'))]}"/>
<!--                            <field name="discount_product_ids"-->
<!--                                   attrs="{'invisible': [('reward_type', 'not in', ('cart_discount_percent', 'cart_discount_fixed_price', 'combo_discount_percent_x', 'cart_discount_amount'))]}">-->
<!--                                <tree limit="20">-->
<!--                                    <field name="name"/>-->
<!--                                    <field name="barcode"/>-->
<!--                                    <field name="lst_price"/>-->
<!--                                </tree>-->
<!--                            </field>-->
<!--                            <div class="o_cell flex-grow-1 flex-sm-grow-0 o_wrap_label w-100 text-break text-900" style=""-->
<!--                                 attrs="{'invisible': [('reward_type', 'not in', ('cart_discount_percent', 'cart_discount_fixed_price', 'combo_discount_percent_x', 'cart_discount_amount'))]}"/>-->
                            <label for="discount_product_count" attrs="{'invisible': [('reward_type', 'not in', ('cart_discount_percent', 'cart_discount_fixed_price', 'combo_discount_percent_x', 'cart_discount_amount'))]}"/>
                            <div class="o_row" attrs="{'invisible': [('reward_type', 'not in', ('cart_discount_percent', 'cart_discount_fixed_price', 'combo_discount_percent_x', 'cart_discount_amount'))]}">
                                <button name="action_open_discount_product" type="object" string="Import Discount Products" class="btn-secondary">
                                    <span>Import Discount Products</span>
                                    (<field name="discount_product_count" class="oe_inline"/>)
                                </button>
                            </div>
<!--                            <field name="reward_product_ids"-->
<!--                                   attrs="{'invisible': [('reward_type', 'not in', ('code_buy_x_get_y', 'cart_get_x_free'))]}">-->
<!--                                <tree limit="20">-->
<!--                                    <field name="name"/>-->
<!--                                    <field name="barcode"/>-->
<!--                                    <field name="lst_price"/>-->
<!--                                </tree>-->
<!--                            </field>-->
<!--                            <div class="o_cell flex-grow-1 flex-sm-grow-0 o_wrap_label w-100 text-break text-900" style=""-->
<!--                            attrs="{'invisible': [('reward_type', 'not in', ('code_buy_x_get_y', 'cart_get_x_free'))]}"/>-->
                            <label for="reward_product_count" attrs="{'invisible': [('reward_type', 'not in', ('code_buy_x_get_y', 'cart_get_x_free'))]}"/>
                            <div class="o_row" attrs="{'invisible': [('reward_type', 'not in', ('code_buy_x_get_y', 'cart_get_x_free'))]}">
                                <button name="action_open_reward_product" type="object" string="Import Reward Products" class="btn-secondary">
                                    <span>Import Reward Products</span>
                                    (<field name="reward_product_count" class="oe_inline"/>)
                                </button>
                            </div>
                            <label for="reward_quantity" string="Maximum Reward Quantity"
                                    attrs="{'invisible': [('reward_type', 'not in',
                                                        ('code_buy_x_get_y', 'cart_get_x_free', 'code_buy_x_get_cheapest'))]}"/>
                            <label for="reward_quantity" string="Maximum Discounted Quantity"
                                    attrs="{'invisible': [('reward_type', 'not in', ('code_amount', 'code_percent', 'code_fixed_price', 'cart_discount_percent', 'cart_discount_fixed_price', 'combo_discount_percent_x', 'cart_discount_amount')),
                                                            '|', ('with_code', '=', False), ('promotion_type', '!=', 'pricelist')]}"/>
                            <div>
                                <field name="reward_quantity" class="oe_inline"
                                        attrs="{'invisible': [('reward_type', 'not in',
                                                ('code_amount', 'code_percent','code_buy_x_get_y','code_fixed_price','cart_get_x_free', 'code_buy_x_get_cheapest',
                                                'cart_discount_percent', 'cart_discount_fixed_price', 'combo_discount_percent_x', 'cart_discount_amount')),
                                                '|', ('with_code', '=', False), ('promotion_type', '!=', 'pricelist')
                                                ]}"/>
                            </div>

                        </group>
                        <group string="Rewards" attrs="{'invisible': [('reward_type', 'not in', ('combo_percent_by_qty', 'combo_fixed_price_by_qty'))]}">
                            <field name="reward_ids" colspan="2" mode="tree,form" nolabel="1" add-label="Add a reward"
                                   attrs="{'invisible': [('reward_type', 'not in', ('combo_percent_by_qty', 'combo_fixed_price_by_qty'))]}"
                                   class="o_loyalty_kanban_inline" context="{'default_program_id': active_id}">
                                <tree>
                                    <field name="quantity_min"/>
                                    <field name="reward_type" invisible="1"/>
                                    <field name="disc_percent"
                                           attrs="{'column_invisible': [('parent.reward_type', '!=', 'combo_percent_by_qty')]}"/>
                                    <field name="disc_max_amount"
                                           attrs="{'column_invisible': [('parent.reward_type', '!=', 'combo_percent_by_qty')]}"/>
                                    <field name="disc_fixed_price"
                                           attrs="{'column_invisible': [('parent.reward_type', '!=', 'combo_fixed_price_by_qty')]}"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="quantity_min"/>
                                            <field name="reward_type" invisible="1"/>

                                            <label for="disc_percent"
                                                   attrs="{'invisible': [('reward_type', '!=', 'combo_percent_by_qty')]}"/>
                                            <div attrs="{'invisible': [('reward_type', '!=', 'combo_percent_by_qty')]}">
                                                <field name="disc_percent" class="oe_inline"/>
                                                <span class="oe_inline">%</span>
                                            </div>

                                            <label for="disc_fixed_price" attrs="{'invisible': [('reward_type', '!=', 'combo_fixed_price_by_qty')]}"/>
                                            <div attrs="{'invisible': [('reward_type', '!=', 'combo_fixed_price_by_qty')]}">
                                                <field class="oe_inline" name="disc_fixed_price"/>
                                                <span class="oe_inline">per Combo</span>
                                            </div>

                                            <field name="disc_max_amount"
                                                   attrs="{'invisible': [('reward_type', '!=', 'combo_percent_by_qty')]}"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="promotion_program_view_tree" model="ir.ui.view">
        <field name="name">promotion.program.view.tree</field>
        <field name="model">promotion.program</field>
        <field name="arch" type="xml">
            <tree default_order="state desc">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="campaign_id" optional="hide"/>
                <field name="state"/>
                <field name="promotion_type"/>
                <field name="reward_type"/>
                <field name="with_code"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="show_gen_code" invisible="1"/>
                <button name="%(promotion_generate_code_action)d" string="Generate Codes"
                        class="btn-primary" type="action"
                        attrs="{'invisible': [('show_gen_code', '=', False)]}"/>
                <button name="view_program" class="btn-secondary" type="object"
                        icon="fa-share-square-o"/>
                <button name="action_open_pricelist_items" class="btn-secondary" type="object"
                        attrs="{'invisible': [('promotion_type', '!=', 'pricelist')]}"
                        icon="fa-list"/>
            </tree>
        </field>
    </record>

    <record id="promotion_program_view_search" model="ir.ui.view">
        <field name="name">promotion.program.view.search</field>
        <field name="model">promotion.program</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="campaign_id"/>
                <filter string="In Progress" domain="[('state','=','in_progress')]" name="in_progress"/>
                <filter string="Brand" name="brand" domain="[]" context="{'group_by':'brand_id'}"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Apply Online" name="apply_online" domain="[('apply_online', '=', True), ('active', 'in', (True, False))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Chiến dịch" name="campaign_id" domain="[]" context="{'group_by':'campaign_id'}"/>
                    <filter string="State" name="state" domain="[]" context="{'group_by':'state'}"/>
                    <filter string="Promotion Type" name="promotion_type" domain="[]" context="{'group_by':'promotion_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="promotion_program_action" model="ir.actions.act_window">
        <field name="name">Promotion</field>
        <field name="res_model">promotion.program</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <div class="o_loyalty_not_found container">
                <h1>No program found.</h1>
                <p class="lead">Create a new one from scratch, or use one of the templates below.</p>
            </div>
        </field>
    </record>

</odoo>
