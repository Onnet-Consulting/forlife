<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="promotion_code_view_form" model="ir.ui.view">
        <field name="name">promotion.code.view.form</field>
        <field name="model">promotion.code</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="used_partner_ids"
                           widget="many2many_tags"/>
                    <field name="limit_usage"/>
                    <field name="max_usage"/>
                    <field name="num_of_usage"/>
                    <field name="amount"/>
                    <field name="consumed_amount"/>
                    <field name="remaining_amount"/>
                    <field name="reward_for_referring"/>
                </group>
            </form>
        </field>
    </record>
    <record id="promotion_code_view_tree" model="ir.ui.view">
        <field name="name">promotion.code.view.tree</field>
        <field name="model">promotion.code</field>
        <field name="arch" type="xml">
            <tree>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="used_partner_ids"
                           widget="many2many_tags"/>
                    <field name="limit_usage"/>
                    <field name="max_usage"/>
                    <field name="num_of_usage"/>
                    <field name="amount"/>
                    <field name="consumed_amount"/>
                    <field name="remaining_amount"/>
                    <field name="reward_for_referring"/>
            </tree>
        </field>
    </record>
    <record id="promotion_code_card_action" model="ir.actions.act_window">
        <field name="name">Coupons</field>
        <field name="res_model">promotion.code</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('program_id', '=', active_id)]</field>
        <field name="context">{'create': False}</field>
        <field name="help" type="html">
            <h1>No Code Found.</h1>
            <p>There haven't been any codes generated yet.</p>
        </field>
    </record>
</odoo>