<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="promotion_combo_line_tree_view" model="ir.ui.view">
        <field name="name">promotion.combo.line.view.tree</field>
        <field name="model">promotion.combo.line</field>
        <field name="arch" type="xml">
            <tree editable="bottom" create="1">
                <field name="quantity"/>
                <field name="product_ids" widget="many2many_tags"/>
                <field name="json_valid_product_ids" optional="hide" groups="base.group_no_one"/>
<!--                <field name="product_categ_ids" widget="many2many_tags"/>-->
                <field name="product_count" />
                <button name="open_products"
                    type="object"
                        string="Products"
                    class="oe_stat_button"
                    attrs="{'invisible':[('product_count','=',0)]}">
                </button>
                <button name="action_open_combo_line_product"
                    type="object" string="Import Products"
                    class="oe_stat_button">
                </button>
            </tree>
        </field>
    </record>

    <record id="promotion_combo_line_form_view" model="ir.ui.view">
        <field name="name">promotion.combo.line.view.form</field>
        <field name="model">promotion.combo.line</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="product_ids" widget="man2many_tags"/>
<!--                        <field name="product_categ_ids" widget="man2many_tags"/>-->
                    </group>
                    <group>
                        <field name="quantity"/>
                    </group>
                    <group>
                        <button name="open_products"
                            type="object" string="Products"
                            class="oe_stat_button"
                            attrs="{'invisible':[('product_count','=',0)]}">
                        <field name="product_count" />
                        </button>
                        <button name="action_open_combo_line_product"
                            type="object" string="Products"
                            class="oe_stat_button">
                            <span>Import Product</span>
                        </button>
                    </group>
                </group>
            </form>
        </field>
    </record>
</odoo>
