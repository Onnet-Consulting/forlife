<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="pos_order_form_inherit" model="ir.ui.view">
        <field name="name">pos_order_form_inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lines']//tree//field[@name='price_unit']" position="before">
                <field name="original_price" widget="monetary"/>
            </xpath>
            <xpath expr="//field[@name='lines']/form//field[@name='price_unit']" position="before">
                <field name="original_price" widget="monetary"/>
            </xpath>
            <xpath expr="//field[@name='lines']/form/group" position="after">
                <div name="promotion_usage_ids">
                    <label for="promotion_usage_ids"/>
                    <field name="promotion_usage_ids">
                        <tree>
                            <field name="program_id"/>
                            <field name="code_id"/>
                            <field name="original_price"/>
                            <field name="new_price"/>
                            <field name="qty"/>
                            <field name="discount_total" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                            <field name="program_from_date"/>
                            <field name="program_to_date"/>
                            <field name="registering_tax" />
                        </tree>
                        <form>
                            <group>
                                <field name="program_id"/>
                                <field name="code_id"/>
                                <field name="original_price"/>
                                <field name="new_price"/>
                                <field name="qty"/>
                                <field name="discount_total" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                                <field name="registering_tax"/>
                            </group>
                        </form>
                    </field>
                </div>
            </xpath>
            <xpath expr="//field[@name='lines']/tree/field[@name='full_product_name']" position="after">
                <field name="promotion_usage_ids" widget="many2many_tags"/>
            </xpath>
            <xpath expr="//field[@name='lines']/tree/field[@name='refunded_qty']" position="after">
                <field name="is_reward_line" optional="hide"/>
            </xpath>

            <xpath expr="//field[@name='lines']/form/group/field[@name='tax_ids']" position="after">
                <field name="is_reward_line"/>
            </xpath>

        </field>
    </record>

    <record id="x_pos_order_form_inherit" model="ir.ui.view">
        <field name="name">x_pos_order_form_inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="forlife_pos_point_order.pos_order_form_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_check_allow_compensate_point']" position="after">
                <field name="reward_voucher_ids" widget="many2many_tags" readonly="1" attrs="{'invisible': [('reward_voucher_ids', '=', [])]}"/>
                <field name="ref_reward_code_ids" widget="many2many_tags" attrs="{'invisible': [('ref_reward_code_ids', 'in', [False, []])]}"/>
            </xpath>
        </field>
    </record>
</odoo>