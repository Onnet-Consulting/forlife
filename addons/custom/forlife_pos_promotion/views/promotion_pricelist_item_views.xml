<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="promotion_pricelist_item_tree_view" model="ir.ui.view">
        <field name="name">promotion.pricelist.item.tree</field>
        <field name="model">promotion.pricelist.item</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="program_id"/>
                <field name="product_id"/>
                <field name="barcode"/>
                <field name="fixed_price"/>
                <field name="qty_available" optional="hide"/>
            </tree>
        </field>
    </record>
    <record id="promotion_pricelist_item_form" model="ir.ui.view">
        <field name="name">promotion.pricelist.item.form</field>
        <field name="model">promotion.pricelist.item</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="product_id"/>
                    <field name="fixed_price"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="promotion_pricelist_item_view_search" model="ir.ui.view">
        <field name="name">promotion.pricelist.item.view.search</field>
        <field name="model">promotion.pricelist.item</field>
        <field name="arch" type="xml">
            <search>
                <field name="product_id"/>
                <separator/>
                <filter string="Activated" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Program" name="state" domain="[]" context="{'group_by':'program_id'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>