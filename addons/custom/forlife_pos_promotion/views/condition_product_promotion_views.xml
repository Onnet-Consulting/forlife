<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="promotion_condition_product_tree_view" model="ir.ui.view">
        <field name="name">promotion.condition.product.view.tree</field>
        <field name="model">promotion.condition.product</field>
        <field name="arch" type="xml">
            <tree editable="top" create="1">
                <field name="promotion_program_id" optional="hide"/>
                <field name="product_product_id"/>
            </tree>
        </field>
    </record>
    <record id="promotion_condition_product_view_search" model="ir.ui.view">
        <field name="name">promotion.promotion.condition.product.view.search</field>
        <field name="model">promotion.condition.product</field>
        <field name="arch" type="xml">
            <search>
                <field name="product_product_id"/>
                <field name="promotion_program_id"/>
                <group expand="0" string="Group By">
                    <filter string="Promotion Program" name="groupby_promotion_program_id" domain="[]" context="{'group_by':'promotion_program_id'}"/>
                </group>
            </search>
        </field>
    </record>

