<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:spce="preserve">

    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@class='pos-receipt']" position="attributes">
            <!-- Hide old template -->
            <attribute name="class" add="oe_hidden" separator=" "/>
        </xpath>
    </t>

    <t t-name="ContinuousHyphen" owl="1">
        <div class="continuous-hyphen">--------------------</div>
    </t>

    <t t-name="SeparateLine" owl="1">
        <hr class="separate-line"/>
    </t>

    <t t-name="accumulated" owl="1">
        <div class="payment_lines">
            <table class="accumulated payment-detail">
                <tbody>
                    <tr t-if="receipt.accumulated_point.pay_point &gt; 0">
                        <td class="col1">Điểm trả</td>
                        <td colspan="4" class="text-right">
                            <t t-esc="receipt.accumulated_point.pay_point"/>
                        </td>
                    </tr>
                    <tr t-if="receipt.accumulated_point.refund_point &gt; 0">
                        <td class="col1">Điểm hoàn</td>
                        <td colspan="4" class="text-right">
                            <t t-esc="receipt.accumulated_point.refund_point"/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="payment_lines" t-if="(receipt.accumulated_point.total_point &gt; 0)">
            <table class="accumulated payment-detail">
                <tbody>
                    <tr t-if="receipt.accumulated_point.total_point &gt; 0">
                        <td class="col1">Tích lũy HĐ</td>
                        <td colspan="4" class="text-right">
                            <t t-esc="receipt.accumulated_point.total_point"/>
                        </td>
                    </tr>
                    <tr t-if="receipt.accumulated_point.sum_total_point &gt; 0">
                        <td class="col1">Điểm tích lũy</td>
                        <td colspan="4" class="text-right">
                            <t t-esc="receipt.accumulated_point.sum_total_point"/>
                        </td>
                    </tr>
                </tbody>
            </table>
            <t t-call="SeparateLine"/>
        </div>
    </t>

</templates>