<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="barcode" position="after">
                <field name="ref" position="move"/>
            </field>
            <field name="vat" position="before">
                <field name="group_id"/>
                <field name="retail_type_ids" widget="many2many_tags" attrs="{'invisible': [('show_customer_type', '=', False)]}"/>
                <field name="show_customer_type" invisible="1"/>
            </field>
            <field name="company_registry" position="before">
                <field name="job_ids" widget="many2many_tags"/>
            </field>
            <field name="mobile" position="after">
                <field name="gender"/>
                <field name="birthday"/>
            </field>
        </field>
    </record>
</odoo>