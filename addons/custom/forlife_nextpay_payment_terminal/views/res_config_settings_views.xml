<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="pos_config_form_view" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.point_of_sale</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='iface_tipproduct']/.." position="after">
                    <field name="pos_show_nextpay_config" invisible="1"/>
                    <h2 attrs="{'invisible': [('pos_show_nextpay_config', '=', False)]}">NextPay Terminal Payment</h2>
                    <div class="row mt16 o_settings_container" attrs="{'invisible': [('pos_show_nextpay_config', '=', False)]}">
                        <div class="col-12 col-lg-6 o_setting_box" id="nextpay_terminal_payment">
                            <div class="o_setting_right_pane">
                                <label for="pos_nextpay_url"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="pos_nextpay_url" class="o_light_label" attrs="{'required': [('pos_show_nextpay_config', '=', True)]}"/>
                                    </div>
                                </div>
                                <label for="pos_nextpay_secret_key"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="pos_nextpay_secret_key" class="o_light_label" attrs="{'required': [('pos_show_nextpay_config', '=', True)]}" password="True"/>
                                    </div>
                                </div>

                                <label for="pos_nextpay_merchant_id"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="pos_nextpay_merchant_id" class="o_light_label" attrs="{'required': [('pos_show_nextpay_config', '=', True)]}"/>
                                    </div>
                                </div>

                                <label for="pos_nextpay_pos_id"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="pos_nextpay_pos_id" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>