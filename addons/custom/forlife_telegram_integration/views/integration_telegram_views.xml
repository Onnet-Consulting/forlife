<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="integration_telegram_view_tree" model="ir.ui.view">
            <field name="name">integration_telegram_view_tree</field>
            <field name="model">integration.telegram</field>
            <field name="arch" type="xml">
                <tree string="integration_telegram_tree" editable="bottom">
                    <field name="key"/>
                    <field name="bot_token_id"/>
                    <field name="group_chat_id"/>
                </tree>
            </field>
        </record>

        <record id="integration_telegram_action" model="ir.actions.act_window">
            <field name="name">Integration Telegram</field>
            <field name="res_model">integration.telegram</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="integration_telegram_menu" parent="forlife_base.odoo_integration_telegram" action="integration_telegram_action" sequence="10"/>

    </data>
</odoo>