<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

<record id="telegram_group_view_tree" model="ir.ui.view">
            <field name="name">telegram_group_view_tree</field>
            <field name="model">telegram.group</field>
            <field name="arch" type="xml">
                <tree string="telegram_group_tree" editable="bottom">
                    <field name="name"/>
                    <field name="value"/>
                </tree>
            </field>
        </record>

        <record id="telegram_group_action" model="ir.actions.act_window">
            <field name="name">Telegram Group</field>
            <field name="res_model">telegram.group</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="telegram_group_menu" parent="forlife_base.odoo_integration_telegram" action="telegram_group_action" sequence="30"/>

    </data>
</odoo>