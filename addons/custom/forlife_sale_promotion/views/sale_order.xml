<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_form_sale_promotion" model="ir.ui.view">
            <field name="name">Sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_quotation_send']" position="after">
                    <button type="object" name="check_sale_promotion" string="Check Promotion"
                            attrs="{'invisible': [('state', 'not in', ['draft', 'sent', 'check_promotion'])]}"/>
                </xpath>
                <xpath expr="//button[@name='action_quotation_send']" position="after">
                    <button name="action_quotation_send" string="Send by Email" type="object" states="check_promotion,done_sale" class="btn-primary" data-hotkey="g" context="{'validate_analytic': True}"/>
                </xpath>


                <xpath expr="//button[@name='action_confirm']" position="after">
                    <button name="action_confirm" data-hotkey="v" string="Confirm" type="object" context="{'validate_analytic': True}" attrs="{'invisible': [('state', 'not in', ['check_promotion', 'done_sale'])]}"/>
                </xpath>

                <!--Them tam thoi đê test đơn hang nhanh-->
                <xpath expr="//field[@name='partner_shipping_id']" position="after">
                    <field name="source_record"/>
                </xpath>

                <xpath expr="//button[@name='action_cancel']" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', ('state', 'not in', ['draft', 'sent','sale','check_promotion','done_sale']), ('id', '=', False)]}</attribute>
                </xpath>

<!--                <xpath expr="//button[@id='create_invoice']" position="attributes">-->
<!--                    <attribute name="attrs">{'invisible': [('invoice_status', '!=', 'to invoice'), ('state', 'not in', ['check_promotion', 'sale', 'done_sale'])]}</attribute>-->
<!--                </xpath>-->

                 <xpath expr="//notebook/page[@name='customer_signature']" position="after">
                     <page string="Promotion" name="sale_promotion">
                         <field name="promotion_ids" >
                            <tree editable="bottom" class="width-hh">
                                <field name="product_id"/>
                                <field name="value"/>
                                <field name="account_id"/>
                                <field name="description"/>
                            </tree>
                        </field>
                     </page>

                 </xpath>


                <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='price_unit']" position="after">
<!--                    <field name="ghn_price_unit_discount" optional="show"/>-->
<!--                    <field name="prm_price_discount" optional="show"/>-->
                    <field name="prm_price_total_discount" optional="show"/>
<!--                    <field name="product_gift" optional="show"/>-->

                </xpath>

                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="statusbar_visible">draft,check_promotion,done_sale,sent,sale</attribute>
                </xpath>

            </field>
        </record>
    </data>
</odoo>