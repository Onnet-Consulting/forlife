<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form_promotion" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//notebook/page[@name='other_info']" position="after">
                     <page string="Promotion" name="sale_promotion" attrs="{'invisible': [('promotion_ids', '=', [])]}">
                         <field name="promotion_ids" >
                            <tree editable="bottom" class="width-hh">
                                <field name="product_id"/>
                                <field name="product_uom_qty" required="1" invisible="1"/>
                                <field name="value"/>
                                <field name="account_id"/>
                                <field name="description"/>
                                <field name="tax_id" widget="many2many_tags"/>
                                <field name="promotion_type" required="1"/>
                            </tree>
                        </field>
                     </page>
                 </xpath>

                <xpath expr="//div[@name='button_box']" position="inside">
                    <button attrs="{'invisible': [('promotion_journal_count', '=', 0)]}" class="oe_stat_button" name="action_view_promotion_journal" type="object" icon="fa-pencil-square-o" >
                        <field string="Promotion journal" name="promotion_journal_count" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
