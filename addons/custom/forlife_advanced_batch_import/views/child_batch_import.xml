<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="child_batch_import_view_form" model="ir.ui.view">
            <field name="name">child_batch_import_view_form</field>
            <field name="model">child.batch.import</field>
            <field name="arch" type="xml">
                <form string="child_batch_import_form">
                    <header>
                        <button name="test_execute_import" type="object" string="Test Execute Import" class="oe_highlight"/>
                        <button name="make_file_log_invalid_records_exel" type="object" string="Recompute Log File" class="oe_highlight"/>
                        <button name="make_queue_job" type="object" string="Execute Import" class="oe_highlight"/>
                        <button name="set_to_processing" type="object" string="Set to processing" class="oe_highlight" attrs="{'invisible':[('status','=','processing')]}"/>
                        <field name="status" widget="statusbar" class="o_field_statusbar"
                               options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="sequence"/>
                            <field name="file" filename="file_name"/>
                            <field name="file_name" invisible="1"/>
                            <field name="parent_batch_import_id"/>
                            <field name="skip"/>
                            <field name="file_length"/>
                        </group>
                        <group>
                            <field name="complete_records"/>
                            <field name="progress_bar" widget="progressbar"/>
                            <field name="error_rows"/>
                            <field name="file_invalid_records_name" invisible="1"/>
                            <field name="file_invalid_records" filename="file_invalid_records_name" style="color:red"/>
                            <field name="log"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="child_batch_import_view_tree" model="ir.ui.view">
            <field name="name">child_batch_import_view_tree</field>
            <field name="model">child.batch.import</field>
            <field name="arch" type="xml">
                <tree string="child_batch_import_tree"
                      decoration-danger="status=='error'"
                      decoration-success="status=='done'">
                    <field name="parent_batch_import_id"/>
                    <field name="file_name"/>
                    <field name="sequence"/>
                    <field name="skip"/>
                    <field name="complete_records"/>
                    <field name="file_length"/>
                    <field name="progress_bar" widget="progressbar"/>
                    <field name="file_invalid_records_name"/>
                    <field name="status" widget="badge"/>
                    <button name="set_to_processing" type="object" string="Set to Processing" class="oe_highlight"/>
                </tree>
            </field>
        </record>
        <record id="child_batch_import_view_search" model="ir.ui.view">
            <field name="name">Child batch Search view</field>
            <field name="model">child.batch.import</field>
            <field name="arch" type="xml">
                <search string="Child batch Search view">
                    <field name="parent_batch_import_id"/>
                    <field name="file_name"/>
                    <filter string="Error Batch" name="error_batch" domain="[('status', '=', 'error')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Parent Batch" name="group_by_parent_batch_import_id" context="{'group_by': 'parent_batch_import_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="child_batch_import_action" model="ir.actions.act_window">
            <field name="name">Child Batch Import</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">child.batch.import</field>
            <field name="context">{
                "search_default_group_by_parent_batch_import_id": 1}
            </field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_child_batch_import" name="Child Batch Import" parent="menu_advanced_batch_import" action="child_batch_import_action" sequence="2"/>


    </data>
</odoo>