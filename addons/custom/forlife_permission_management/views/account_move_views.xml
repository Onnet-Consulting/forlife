<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="account_invoice_form_permission_inherit">
            <field name="name">Account Move Permission</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_cancel']" position="attributes">
                    <attribute name="groups">forlife_permission_management.group_button_cancel_accounting</attribute>
                </xpath>
                <xpath expr="//button[@name='button_cancel'][2]" position="attributes">
                    <attribute name="groups">forlife_permission_management.group_button_cancel_accounting</attribute>
                </xpath>
                 <xpath expr="//button[@name='button_draft']" position="attributes">
                    <attribute name="groups">forlife_permission_management.group_button_draft_accounting</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
