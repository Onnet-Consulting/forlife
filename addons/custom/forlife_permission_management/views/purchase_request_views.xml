<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="purchase_request_from_view_permission" model="ir.ui.view">
            <field name="name">purchase_request_from_view_permission</field>
            <field name="model">purchase.request</field>
            <field name="inherit_id" ref="purchase_request.purchase_request_from_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='%(purchase_request.action_cancel_request_wizard)d']" position="attributes">
                    <attribute name="groups">forlife_permission_management.group_purchase_request_cancel</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>