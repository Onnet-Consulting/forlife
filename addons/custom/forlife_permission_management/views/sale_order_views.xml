<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_order_form_permission" model="ir.ui.view">
            <field name="name">view_order_form_permission</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_cancel']" position="attributes">
                    <attribute name="groups">forlife_permission_management.group_quotation_cancel</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_sales_order_auto_done_setting_permission" model="ir.ui.view">
            <field name="name">view_sales_order_auto_done_setting_permission</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_auto_done_setting"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_done']" position="attributes">
                    <attribute name="groups">forlife_permission_management.group_quotation_lock_unlock,sales_team.group_sale_manager</attribute>
                </xpath>
                <xpath expr="//button[@name='action_unlock']" position="attributes">
                    <attribute name="groups">forlife_permission_management.group_quotation_lock_unlock,sales_team.group_sale_manager</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>