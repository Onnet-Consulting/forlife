<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="inherit_purchase_order_form_view_permission" model="ir.ui.view">
            <field name="name">inherit_purchase_order_form_view_permission</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_done']" position="attributes">
                    <attribute name="groups">forlife_permission_management.group_purchase_order_lock_unlock</attribute>
                </xpath>
                <xpath expr="//button[@name='button_unlock']" position="attributes">
                    <attribute name="groups">forlife_permission_management.group_purchase_order_lock_unlock,purchase.group_purchase_manager</attribute>
                </xpath>
            </field>
        </record>

        <record id="purchase_order_form_permission" model="ir.ui.view">
            <field name="name">purchase_order_form_permission</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="forlife_purchase.inherit_purchase_order_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='%(forlife_purchase.reject_order_wizard)d']" position="attributes">
                    <attribute name="groups">forlife_permission_management.group_purchase_order_approve_reject</attribute>
                </xpath>
                <xpath expr="//button[@name='action_confirm']" position="attributes">
                    <attribute name="groups">forlife_permission_management.group_purchase_order_send</attribute>
                </xpath>
                <xpath expr="//button[@name='action_approved']" position="attributes">
                    <attribute name="groups">forlife_permission_management.group_purchase_order_approve_reject</attribute>
                </xpath>
                <xpath expr="//button[@name='%(forlife_purchase.cancel_order_wizard)d']" position="attributes">
                    <attribute name="groups">forlife_permission_management.group_purchase_order_cancel</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>