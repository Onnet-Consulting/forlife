<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_users_form_custom" model="ir.ui.view">
            <field name="name">view_users_form_custom</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">

                <xpath expr="//page[@name='preferences']" position="after">
                    <page string="Other Information" name="other">
                        <group>
                            <group string="Stock" name="stock">
                                <field name="stock_default_id"/>
                                <field name="stock_ids" widget="many2many_tags"/>
                            </group>
                            <group string="Brand" name="brand">
                                <field name="brand_default_id"/>
                                <field name="brand_ids" widget="many2many_tags"/>
                            </group>
                            <group string="Department" name="department">
                                <field name="department_default_id"/>
                                <field name="department_ids" widget="many2many_tags"/>
                            </group>
                            <group string="Team" name="team">
                                <field name="team_default_id"/>
                                <field name="team_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>
    </data>
</odoo>