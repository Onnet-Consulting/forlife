<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_team_tree" model="ir.ui.view">
            <field name="name">hr.team.tree</field>
            <field name="model">hr.team</field>
            <field name="arch" type="xml">
                <tree string="Team" editable="bottom">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="department_id"/>
                </tree>
            </field>
        </record>

        <record id="view_team_filter" model="ir.ui.view">
            <field name="name">hr.team.search</field>
            <field name="model">hr.team</field>
            <field name="arch" type="xml">
                <search string="Team">
                    <field name="name" string="Department"/>
                    <field name="department_id" />
                </search>
             </field>
        </record>

        <record id="hr_team_action" model="ir.actions.act_window">
            <field name="name">teams</field>
            <field name="res_model">hr.team</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="view_team_filter"/>
        </record>

        <record id="hr_team_tree_action" model="ir.actions.act_window">
            <field name="name">teams</field>
            <field name="res_model">hr.team</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="search_view_id" ref="view_team_filter"/>
        </record>


        <menuitem
                id="menu_hr_team_tree"
                action="hr_team_tree_action"
                parent="hr.menu_config_employee"
                sequence="4"
                groups="base.group_user"/>
    </data>
</odoo>