<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="product_template_form_view_custom" model="ir.ui.view">
            <field name="name">product_template_form_view_custom</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='uom_po_id']" position="after">
                    <field name="brand_id"/>
                </xpath>
                <xpath expr="//label[@for='standard_price']" position="attributes">
                    <attribute name="groups">forlife_permission_management.group_product_view_cost_price</attribute>
                </xpath>
                <xpath expr="//div[@name='standard_price_uom']" position="attributes">
                    <attribute name="groups">forlife_permission_management.group_product_view_cost_price</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>