<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="import_salary_record_view_form" model="ir.ui.view">
            <field name="name">import_salary_record_view_form</field>
            <field name="model">import.salary.record</field>
            <field name="arch" type="xml">
                <form string="import_salary_record_form">
                    <sheet>
                        <group>
                            <field name="import_file" filename="import_file_name"/>
                            <field name="import_file_name" invisible="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button special="cancel" string="Cancel"/>
                        <button name="download_template_file" type="object" string="Download Template" class="oe_highlight"/>
                        <button name="action_import" type="object" string="Import" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="import_salary_record_action" model="ir.actions.act_window">
            <field name="name">Import Salary Record</field>
            <field name="res_model">import.salary.record</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>