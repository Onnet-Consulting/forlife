<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="salary_tc_entry_form" model="ir.ui.view">
        <field name="name">name</field>
        <field name="model">salary.tc.entry</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="entry_type"/>
                            <field name="analytic_account_id" attrs="{'invisible':[('entry_type', '!=', 'analytic')]}"/>
                            <field name="assets_id" attrs="{'invisible':[('entry_type', '!=', 'asset')]}"/>
                            <field name="from_date"/>
                            <field name="to_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="salary_tc_entry_tree" model="ir.ui.view">
        <field name="name">Salary TC Entry</field>
        <field name="model">salary.tc.entry</field>
        <field name="arch" type="xml">
            <tree>
                <field name="entry_type"/>
                <field name="analytic_account_id"/>
                <field name="assets_id"/>
                <field name="from_date"/>
                <field name="to_date"/>
            </tree>
        </field>
    </record>

    <record id="salary_tc_entry_action" model="ir.actions.act_window">
        <field name="name">Salary TC Entry</field>
        <field name="res_model">salary.tc.entry</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>