<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="salary_record_purpose_view_tree" model="ir.ui.view">
            <field name="name">salary_record_purpose_view_tree</field>
            <field name="model">salary.record.purpose</field>
            <field name="arch" type="xml">
                <tree string="salary_record_purpose_tree" editable="bottom">
                    <field name="code" placeholder="code..."/>
                    <field name="name" placeholder="name..."/>
                </tree>
            </field>
        </record>

        <record id="salary_record_purpose_filter" model="ir.ui.view">
            <field name="name">salary_record_purpose_filter</field>
            <field name="model">salary.record.purpose</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="code"/>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="salary_record_purpose_action" model="ir.actions.act_window">
            <field name="name">Salary Record Purpose</field>
            <field name="res_model">salary.record.purpose</field>
            <field name="view_mode">tree</field>
        </record>

    </data>
</odoo>