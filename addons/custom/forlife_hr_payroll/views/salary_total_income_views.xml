<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="salary_total_income_view_tree" model="ir.ui.view">
            <field name="name">salary_total_income_view_tree</field>
            <field name="model">salary.total.income</field>
            <field name="arch" type="xml">
                <tree string="salary_total_income_tree">
                    <field name="salary_record_id" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <field name="purpose_id"/>
                    <field name="department_id"/>
                    <field name="analytic_account_id"/>
                    <field name="asset_id"/>
                    <field name="production_id"/>
                    <field name="occasion_code_id"/>
                    <field name="x_ttn" optional="show" sum="Total"/>
                    <field name="note" optional="show" sum="Total"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>