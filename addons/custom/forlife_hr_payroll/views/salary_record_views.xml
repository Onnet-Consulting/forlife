<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="salary_record_view_tree" model="ir.ui.view">
            <field name="name">salary_record_view_tree</field>
            <field name="model">salary.record</field>
            <field name="arch" type="xml">
                <tree string="salary_record_tree" create="0">
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="type_id"/>
                    <field name="month"/>
                    <field name="year"/>
                    <field name="is_tc"/>
                    <field name="create_date"/>
                    <field name="create_uid"/>
                    <field name="version"/>
                    <field name="state"/>
                    <field name="confirm_date" optional="show"/>
                    <field name="confirm_user" optional="show"/>
                    <field name="confirm_date_accounting" optional="show"/>
                    <field name="confirm_user_accounting" optional="show"/>
                    <field name="note" optional="show"/>
                    <field name="cancel_date" optional="show"/>
                    <field name="cancel_user" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="salary_record_view_form" model="ir.ui.view">
            <field name="name">salary_record_view_form</field>
            <field name="model">salary.record</field>
            <field name="arch" type="xml">
                <form string="salary_record_form" create="0">
                    <header>
                        <button name="btn_confirm" string="Confirm" class="oe_highlight" states="waiting" type="object" groups="forlife_hr_payroll.payroll_employee"/>
                        <button name="btn_approved" string="Approve" class="oe_highlight" states="confirm" type="object" groups="forlife_hr_payroll.payroll_leader"/>
                        <button name="btn_cancel" string="Cancel" class="oe_highlight" states="confirm,approved" type="object" groups="forlife_hr_payroll.payroll_employee"/>
                        <button name="btn_post" string="Post" class="oe_highlight" states="approved" type="object" groups="account.group_account_manager"/>
                        <button name="btn_cancel_post" string="Cancel Post" class="oe_highlight" states="posted" type="object" groups="account.group_account_manager"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_view_journals" class="oe_stat_button" icon="fa-pencil-square-o"
                                attrs="{'invisible':['|', ('move_count', '=', 0), ('state', 'in', ('waiting','confirm'))]}" groups="account.group_account_manager">
                            <field name="move_count" widget="statinfo" string="Journals"/>
                            <field name="move_ids" invisible="1"/>
                        </button>
                        <button type="object" name="action_view_group_accounting" class="oe_stat_button" icon="fa-grav" string="Salary accounting aggregation"
                                attrs="{'invisible':[('state', 'not in', ('approved','posted', 'cancel_post'))]}" groups="account.group_account_manager"/>
                        <button type="object" name="action_view_change_Log" class="oe_stat_button" icon="fa-eye" string="Logs"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_id"/>
                            <field name="type_id"/>
                            <field name="month"/>
                            <field name="year"/>
                            <field name="version"/>
                            <field name="note"/>
                            <field name="is_tc"/>
                        </group>
                        <group>
                            <field name="create_date"/>
                            <field name="create_uid"/>
                            <field name="confirm_date"/>
                            <field name="confirm_user"/>
                            <field name="confirm_date_accounting"/>
                            <field name="confirm_user_accounting"/>
                            <field name="cancel_date"/>
                            <field name="cancel_user"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="salary_record_main" string="Salary Record Main">
                            <field name="salary_record_main_ids"/>
                        </page>
                        <page name="salary_total_income" string="Salary Total Income">
                            <field name="salary_total_income_ids"/>
                        </page>
                        <page name="salary_supplementary" string="Salary Supplementary">
                            <field name="salary_supplementary_ids"/>
                        </page>
                        <page name="salary_arrears" string="Salary Arrears">
                            <field name="salary_arrears_ids"/>
                        </page>
                        <page name="salary_accounting" string="Salary Accounting" states="approved,posted,cancel_post" groups="account.group_account_manager">
                            <field name="salary_accounting_ids"/>
                        </page>
                        <page name="salary_backlog" string="Salary Backlog">
                            <field name="salary_backlog_ids"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="salary_record_filter" model="ir.ui.view">
            <field name="name">salary_record_filter</field>
            <field name="model">salary.record</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="type_id"/>
                    <field name="month"/>
                    <field name="year"/>
                    <field name="version"/>
                    <group expand="0" string="Group By">
                        <filter string="Type" name="type" context="{'group_by':'type_id'}"/>
                        <filter string="Year" name="year" context="{'group_by':'year'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="salary_record_action" model="ir.actions.act_window">
            <field name="name">Salary Record</field>
            <field name="res_model">salary.record</field>
            <field name="view_mode">tree,form</field>
            <field name="context" eval="{'search_default_type': 1}"/>
        </record>
    </data>
</odoo>