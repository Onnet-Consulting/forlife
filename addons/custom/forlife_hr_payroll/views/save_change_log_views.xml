<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="save_change_log_view_tree" model="ir.ui.view">
            <field name="name">save_change_log_tree</field>
            <field name="model">save.change.log</field>
            <field name="arch" type="xml">
                <tree string="save_change_log_tree">
                    <field name="record" invisible="1"/>
                    <field name="name"/>
                    <field name="create_date_ref"/>
                    <field name="create_user"/>
                    <field name="version"/>
                    <field name="log"/>
                    <field name="write_date_ref"/>
                    <field name="write_user"/>
                </tree>
            </field>
        </record>

        <record id="save_change_log_view_search" model="ir.ui.view">
            <field name="name">save_change_log_search</field>
            <field name="model">save.change.log</field>
            <field name="arch" type="xml">
                <search string="save_change_log_search">
                    <field name="name"/>
                    <field name="version"/>
                    <field name="log"/>
                    <field name="write_date_ref"/>
                    <field name="write_user"/>
                </search>
            </field>
        </record>

        <record id="save_change_log_action" model="ir.actions.act_window">
            <field name="name">Save Change Log</field>
            <field name="res_model">save.change.log</field>
            <field name="view_mode">tree</field>
        </record>

    </data>
</odoo>