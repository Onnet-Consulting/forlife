<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="account_move_form_inherit" model="ir.ui.view">
        <field name="name">name</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ref' and not(boolean(@nolabel))]" position="after">
                <field name="ref2"/>
            </xpath>
            <xpath expr="//page[@id='aml_tab']/field/tree/field[@name='tax_tag_ids']" position="after">
                <field name="expense_item_id" optional="hide"/>
                <field name="asset_id" optional="hide"/>
                <field name="work_order" optional="hide"/>
                <field name="occasion_code_id" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>