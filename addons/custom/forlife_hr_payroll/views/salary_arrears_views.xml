<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="salary_arrears_view_tree" model="ir.ui.view">
            <field name="name">salary_arrears_view_tree</field>
            <field name="model">salary.arrears</field>
            <field name="arch" type="xml">
                <tree string="salary_arrears_tree">
                    <field name="salary_record_id" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <field name="partner_id" invisible="1"/>
                    <field name="purpose_id" width="150px"/>
                    <field name="partner_info" width="150px"/>
                    <field name="department_id" width="150px"/>
                    <field name="analytic_account_id" width="150px"/>
                    <field name="asset_id" width="150px"/>
                    <field name="production_id" width="150px"/>
                    <field name="occasion_code_id" width="150px"/>
                    <field name="x_kq" optional="show" width="150px"/>
                    <field name="x_tkdp" optional="show" width="150px"/>
                    <field name="x_pvp" optional="show" width="150px"/>
                    <field name="x_tthh" optional="show" width="150px"/>
                    <field name="x_thl" optional="show" width="150px"/>
                    <field name="x_dpfm" optional="show" width="150px"/>
                    <field name="x_pds" optional="show" width="150px"/>
                    <field name="x_ttl" optional="show" width="150px"/>
                    <field name="x_ttpc" optional="show" width="150px"/>
                    <field name="x_tu" optional="show" width="150px"/>
                    <field name="x_tk" optional="show" width="150px"/>
                    <field name="x_bhxh_cn" optional="show" width="220px"/>
                    <field name="x_bhyt_cn" optional="show" width="220px"/>
                    <field name="x_bhxh_bhbnn_tnld_cn" optional="show" width="220px"/>
                    <field name="x_ttbh" optional="show" width="220px"/>
                    <field name="note" optional="show" width="150px"/>
                </tree>
            </field>
        </record>

        <record id="salary_arrears_view_form" model="ir.ui.view">
            <field name="name">salary_arrears_view_form</field>
            <field name="model">salary.arrears</field>
            <field name="arch" type="xml">
                <form string="salary_arrears_form">
                    <sheet>
                        <group>
                            <group>
                                <field name="salary_record_id" invisible="1"/>
                                <field name="company_id" invisible="1"/>
                                <field name="partner_id" invisible="1"/>
                                <field name="purpose_id"/>
                                <field name="partner_info"/>
                                <field name="department_id"/>
                                <field name="analytic_account_id"/>
                            </group>
                            <group>
                                <field name="asset_id"/>
                                <field name="production_id"/>
                                <field name="occasion_code_id"/>
                                <field name="note"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="x_kq"/>
                                <field name="x_tkdp"/>
                                <field name="x_pvp"/>
                                <field name="x_tthh"/>
                                <field name="x_thl"/>
                                <field name="x_dpfm"/>
                                <field name="x_pds"/>
                                <field name="x_ttl"/>
                            </group>
                            <group>
                                <field name="x_ttpc"/>
                                <field name="x_tu"/>
                                <field name="x_tk"/>
                                <field name="x_bhxh_cn"/>
                                <field name="x_bhyt_cn"/>
                                <field name="x_bhxh_bhbnn_tnld_cn"/>
                                <field name="x_ttbh"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>