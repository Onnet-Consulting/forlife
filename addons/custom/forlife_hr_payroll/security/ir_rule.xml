<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="salary_record_company_rule" model="ir.rule">
            <field name="name">Salary Record multi-company</field>
            <field name="model_id" ref="forlife_hr_payroll.model_salary_record"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

        <record id="salary_accounting_config_company_rule" model="ir.rule">
            <field name="name">Salary accounting config multi-company</field>
            <field name="model_id" ref="forlife_hr_payroll.model_salary_accounting_config"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

        <record model="ir.rule" id="salary_record_rule">
            <field name="name">Salary Record Rule</field>
            <field name="model_id" ref="forlife_hr_payroll.model_salary_record"/>
            <field name="groups"
                   eval="[(4, ref('forlife_hr_payroll.payroll_employee')), (4, ref('forlife_hr_payroll.payroll_leader'))]"/>
            <field name="domain_force">['&amp;', ('department_id', 'in', user.get_department_in_charge()),
                '|', '|', ('type_id.user_ids', 'in', user.ids), ('type_id.group_ids', 'in',
                user.groups_id.ids), '&amp;', ('type_id.user_ids', '=', False), ('type_id.group_ids', '=', False)]
            </field>
        </record>

        <record id="save_change_log_company_rule" model="ir.rule">
            <field name="name">Change Log multi-company</field>
            <field name="model_id" ref="forlife_hr_payroll.model_save_change_log"/>
            <field name="domain_force">['|', ('company_id', 'in', company_ids), ('company_id', '=', False)]</field>
        </record>

        <record id="salary_entry_company_rule" model="ir.rule">
            <field name="name">Salary Entry multi-company</field>
            <field name="model_id" ref="forlife_hr_payroll.model_salary_entry"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

        <record id="salary_tc_entry_company_rule" model="ir.rule">
            <field name="name">Salary Entry multi-company</field>
            <field name="model_id" ref="forlife_hr_payroll.model_salary_tc_entry"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>