<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--todo: set noupdate=1 when golive-->
    <data noupdate="0">
        <record id="salary_record_company_rule" model="ir.rule">
            <field name="name">Salary Record multi-company</field>
            <field name="model_id" ref="forlife_hr_payroll.model_salary_record"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

        <record id="salary_accounting_config_company_rule" model="ir.rule">
            <field name="name">Salary accounting config multi-company</field>
            <field name="model_id" ref="forlife_hr_payroll.model_salary_accounting_config"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

        <record model="ir.rule" id="salary_record_rule">
            <field name="name">Salary Record Rule</field>
            <field name="model_id" ref="forlife_hr_payroll.model_salary_record"/>
            <field name="groups" eval="[(4, ref('forlife_hr_payroll.payroll_employee')), (4, ref('forlife_hr_payroll.payroll_leader'))]"/>
            <field name="domain_force">['|', ('type_id.user_ids', 'in', user.ids), '|', ('type_id.group_ids', 'in', user.groups_id.ids), '&amp;', ('type_id.user_ids', '=', False), ('type_id.group_ids', '=', False)]</field>
        </record>

        <record model="ir.rule" id="salary_record_type_rule">
            <field name="name">Salary Record Type Rule</field>
            <field name="model_id" ref="forlife_hr_payroll.model_salary_record_type"/>
            <field name="groups" eval="[(4, ref('forlife_hr_payroll.payroll_employee')), (4, ref('forlife_hr_payroll.payroll_leader'))]"/>
            <field name="domain_force">['|', ('user_ids', 'in', user.ids), '|', ('group_ids', 'in', user.groups_id.ids), '&amp;', ('user_ids', '=', False), ('group_ids', '=', False)]</field>
        </record>

        <record id="save_change_log_company_rule" model="ir.rule">
            <field name="name">Change Log multi-company</field>
            <field name="model_id" ref="forlife_hr_payroll.model_save_change_log"/>
            <field name="domain_force">['|', ('company_id', 'in', company_ids), ('company_id', '=', False)]</field>
        </record>
    </data>
</odoo>