<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PosReasonRefund" owl="1">
        <div t-if="env.pos.pos_reason_refund.length gt 0">
            <select id="reason_refund" name="reason_refund" t-on-change="selectReason">
                <option t-att-value="0">--Select Reason refund--</option>
                <t t-foreach="env.pos.pos_reason_refund" t-as="reason" t-key="reason.id">
                    <option t-att-value="reason.id" t-att-selected="reason.id == props.order_line.reason_refund_id">
                        <t t-esc="reason.name"/>
                    </option>
                </t>
            </select>
        </div>
    </t>

</templates>
