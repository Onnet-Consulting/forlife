<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<odoo>
    <record id="product_defective_scan_form_view" model="ir.ui.view">
        <field name="name">product.defective.scan.form.view</field>
        <field name="model">product.defective.scan</field>
        <field name="arch" type="xml">
            <form string="Thêm sản phẩm lỗi">
                <sheet>
                    <field name="pack_id" invisible="1"/>
                    <field name="department_id" invisible="1"/>
                    <field name="on_value" invisible="1"/>
                    <group>
                        <group>
                            <label for="defective_type_id"/>
                            <div class="o_row">
                                <field name="defective_type_id"/>
                            </div>
                        </group>
                    </group>
                    <div class="oe_title">
                        <h3>
                            <field name="barcode" default_focus="1" placeholder="Nhập barcode cần quét"/>
                        </h3>
                        <div style="text-align: center">
                            <h2>
                                <field name="warning_msg" readonly="1" attrs="{'invisible': [('warning_msg', '=', False)]}" style="color: orange"/>
                            </h2>
                        </div>
                    </div>


                    <notebook>
                        <page string="Hàng lỗi">
                            <field name="line_ids" force_save="1">
                                <tree no_open="True" editable="bottom">
                                    <field name="department_id" invisible="1"/>
                                    <field name="product_id"/>
                                    <field name="barcode"/>
                                    <field name="quantity" readonly="1" force_save="1"/>
                                    <field name="uom_id"/>
                                    <field name="defective_type_id" required="1"/>
                                    <field name="detail_defective"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <footer>
                    <button name="confirm_scan" string="Xác nhận" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>