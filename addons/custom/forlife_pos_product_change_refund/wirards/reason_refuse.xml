<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_reason_refuse_product_defective_form" model="ir.ui.view">
        <field name="model">reason.refuse.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                            <field name="warehouse_id" invisible="1"/>
                            <field name="pack_id" invisible="1"/>
                            <field name="name"/>
                            <field name="is_transferred"/>
                            <field name="from_location_id"
                                   attrs="{'invisible': [('is_transferred', '=', False)], 'required': [('is_transferred', '=', True)]}"/>
                            <field name="to_location_id" attrs="{'invisible': [('is_transferred', '=', False)], 'required': [('is_transferred', '=', True)]}"/>
                    </group>
                    <footer>
                        <button name="action_confirm" string="Đồng ý" type="object" class="btn-primary"/>
                        <button string="Hủy" class="oe_link" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_reason_refuse_product_defective" model="ir.actions.act_window">
        <field name="name">Reason Refuse Product</field>
        <field name="res_model">reason.refuse.product</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>