<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="pos_reason_refund_view_form" model="ir.ui.view">
        <field name="name">pos.reason.refund.view.form</field>
        <field name="model">pos.reason.refund</field>
        <field name="arch" type="xml">
            <form string="Reason Refund">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="brand_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pos_reason_refund_view_tree" model="ir.ui.view">
        <field name="name">pos.reason.refund.view.tree</field>
        <field name="model">pos.reason.refund</field>
        <field name="arch" type="xml">
            <tree string="Reason Refund">
                <field name="name"/>
                <field name="brand_id"/>
            </tree>
        </field>
    </record>

    <record id="pos_reason_refund_action" model="ir.actions.act_window">
        <field name="name">Reason Refund</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pos.reason.refund</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="pos_reason_refund_menu" name="Reason Refund" parent="point_of_sale.menu_point_config_product"
              action="pos_reason_refund_action" sequence="10"/>

</odoo>