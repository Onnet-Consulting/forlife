<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pos_order_line_handle_change_refund_form_view" model="ir.ui.view">
            <field name="name">pos.order.line.handle.change.refund</field>
            <field name="model">pos.order.line</field>
            <field name="priority">99</field>
            <field name="arch" type="xml">
                <form create="0" edit="0">
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id" readonly="1" force_save="1"/>
                                <field name="qty" readonly="1" force_save="1"/>
                                <field name="discount" readonly="1" force_save="1"/>
                            </group>
                            <group>
                                <field name="original_price" widget="monetary" readonly="1" force_save="1"/>
                                <field name="price_unit" widget="monetary" readonly="1" force_save="1"/>
                                <field name="currency_id" invisible="1" readonly="1" force_save="1"/>
                            </group>
                            <label for="discount_details_lines"/>
                            <field name="discount_details_lines" readonly="1" force_save="1">
                                <tree>
                                    <field name="type"/>
                                    <field name="name"/>
                                    <field name="listed_price"/>
                                    <field name="recipe"
                                           attrs="{'invisible':[('type','in',['product_defective','handle'])]}"/>
                                    <field name="money_reduced"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="type"/>
                                            <field name="name"/>
                                            <field name="listed_price"/>
                                        </group>
                                        <group>
                                            <field name="recipe"
                                                   attrs="{'invisible':[('type','in',['product_defective','handle'])]}"/>
                                            <field name="money_reduced"/>
                                            <field name="currency_id" invisible="1"/>
                                        </group>

                                    </group>
                                </form>
                            </field>
                            <label for="promotion_usage_ids"/>
                            <field name="promotion_usage_ids" readonly="1" force_save="1">
                                <tree>
                                    <field name="program_id"/>
                                    <field name="code_id"/>
                                    <field name="original_price"/>
                                    <field name="new_price"/>
                                    <field name="qty"/>
                                    <field name="discount_total" widget="monetary"
                                           options="{'currency_field': 'company_currency'}"/>
                                    <field name="registering_tax"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="program_id"/>
                                        <field name="code_id"/>
                                        <field name="original_price"/>
                                        <field name="new_price"/>
                                        <field name="qty"/>
                                        <field name="discount_total" widget="monetary"
                                               options="{'currency_field': 'company_currency'}"/>
                                        <field name="registering_tax"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


    </data>
</odoo>