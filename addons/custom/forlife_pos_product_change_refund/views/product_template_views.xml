<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="product_template_forlife_pos_product_change_refund_inherit_view" model="ir.ui.view">
            <field name="name">product.template.forlife_pos_product_change_refund.inherit.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="number_days_change_refund"/>
                </xpath>

                <xpath expr="//div[@name='options']" position="inside">
                    <span class="d-inline-block">
                        <field name="is_product_auto"/>
                        <label for="is_product_auto"/>
                    </span>
                    <span class="d-inline-block">
                        <field name="is_voucher_auto"/>
                        <label for="is_voucher_auto"/>
                    </span>
                </xpath>
            </field>
        </record>
    </data>
</odoo>