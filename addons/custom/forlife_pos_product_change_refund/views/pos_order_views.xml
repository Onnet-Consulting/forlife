<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="pos_order_form_inherit" model="ir.ui.view">
        <field name="name">pos_order_form_inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lines']/tree/field[@name='qty']" position="after">
                <field name="quantity_refunded"/>
            </xpath>
            <xpath expr="//field[@name='fiscal_position_id']" position="after">
                <field name="pay_point"/>
                <field name="refund_point" readonly="1" force_save="1"/>
                <field name="approved" readonly="1" force_save="1"/>
            </xpath>
        </field>
    </record>
</odoo>