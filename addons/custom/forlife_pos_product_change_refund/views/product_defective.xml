<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="product_defective_tree_view" model="ir.ui.view">
            <field name="name">product.defective.tree</field>
            <field name="model">product.defective</field>
            <field name="arch" type="xml">
                <tree multi_edit="1">
                    <field name="store_id" required="1" readonly="1"/>
                    <field name="product_id" required="1" readonly="1"/>
                    <field name="quantity_defective_approved" required="1" attrs="{'readonly': [('state', 'not in', ('new', 'waiting approve'))]}"/>
                    <field name="quantity_inventory_store" required="1"/>
                    <field name="quantity_require" required="1" attrs="{'readonly': [('state', 'not in', ('new', 'waiting approve'))]}"/>
                    <field name="quantity_can_be_sale" required="1" readonly="1"/>
                    <field name="price"/>
                    <field name="money_reduce" attrs="{'readonly': [('state', 'not in', ('new', 'waiting approve'))]}"/>
                    <field name="percent_reduce" attrs="{'readonly': [('state', 'not in', ('new', 'waiting approve'))]}"/>
                    <field name="total_reduce" required="1"/>
                    <field name="defective_type_id" readonly="1"/>
                    <field name="detail_defective" readonly="1"/>
                    <field name="state" readonly="1"/>
<!--                    <field name="company_id" readonly="1"/>-->
                </tree>
            </field>
        </record>

        <record id="product_defective_form_view" model="ir.ui.view">
            <field name="name">product.defective.form</field>
            <field name="model">product.defective</field>
            <field name="arch" type="xml">
                <form string="Hàng lỗi">
                    <header>
                        <button name="action_send_request_approve" type="object" class="oe_highlight" string="Gửi duyệt" states="new"/>
                        <button name="action_approve" type="object" class="oe_highlight" string="Duyệt" states="waiting approve"/>
                        <button name="action_refuse" type="object" string="Từ chối (alpha)" invisible="1" states="waiting approve"/>
                        <button name="action_cancel" type="object" string="Huỷ" states="waiting approve,approved"/>
                        <button name="%(action_reason_refuse_product_defective)d" type="action" string="Từ chối" states="waiting approve"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
<!--                            <group>-->
                                <field name="department_id" invisible="1"/>
                                <field name="store_id" required="1" attrs="{'readonly': [('state','!=','new')]}"/>
                                <field name="product_id" required="1" attrs="{'readonly': [('state','in',['approved','refuse'])]}"/>
                                <field name="quantity_require" attrs="{'readonly': [('state','!=','new')], 'required': [('state','=','new')]}"/>
                                <field name="quantity_defective_approved" required="1" attrs="{'readonly': [('state','in',['approved','refuse'])]}"/>
                                <field name="quantity_inventory_store" required="1"/>
                                <field name="quantity_can_be_sale" required="1" readonly="True"/>
                                <field name="price"/>
                                <field name="money_reduce" attrs="{'readonly': [('state','in',['approved','refuse'])]}"/>
                                <field name="percent_reduce" attrs="{'readonly': [('state','in',['approved','refuse'])]}"/>
                                <field name="program_pricelist_item_id" readonly="1" force_save="1"/>
                                <label for="from_date" string="Hiệu lực"/>
                                <div class="o_row">
                                    <field name="from_date" widget="daterange" options="{'related_end_date': 'to_date'}"/>
                                    <span> đến </span>
                                    <field name="to_date" widget="daterange" options="{'related_start_date': 'from_date'}"/>
                                </div>
                                <field name="total_reduce" required="1"/>
                                <field name="is_transferred" invisible="1"/>
                                <field name="from_location_id" attrs="{'invisible': [('is_transferred', '=', False)]}"/>
                                <field name="to_location_id" attrs="{'invisible': [('is_transferred', '=', False)]}"/>
                                <field name="defective_type_id" required="1" attrs="{'readonly': [('state','in',['refuse','approved','waiting approve'])]}"/>
                                <field name="detail_defective" attrs="{'readonly': [('state','in',['refuse','approved','waiting approve'])]}"/>
                                <field name="reason_refuse_product" states="refuse" readonly="True"/>
<!--                            </group>-->
                        </group>
                        <notebook>
                          <page string="Ảnh chi tiết">
                            <field name="image_1920" widget="image" options="{'image_preview': 'image_1920'}"
                                   attrs="{'readonly': [('state','in',['waiting approve', 'refuse','approved','cancel'])]}"/>
                          </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

