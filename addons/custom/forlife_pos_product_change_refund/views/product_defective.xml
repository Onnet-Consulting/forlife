        <record id="product_defective_view_form_preview" model="ir.ui.view">
            <field name="name">product.defective.view.form.preview</field>
            <field name="model">product.defective</field>
            <field name="arch" type="xml">
                <form edit="0" create="0">
                    <div>
                        <field name="image_1920" widget="image" options="{'image_preview': 'image_1920'}"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="product_defective_view_search" model="ir.ui.view">
            <field name="name">product.defective.view.search</field>
            <field name="model">product.defective</field>
            <field name="arch" type="xml">
                <search>
                    <field name="pack_id"/>
                    <field name="product_id"/>
                    <separator/>
                </search>
            </field>
        </record>

        <record id="product_defective_action" model="ir.actions.act_window">
            <field name="name">Xử lí hàng lỗi</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.defective</field>
            <field name="context">{'show_price':True}</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="product_defective_action_send_request_approves" model="ir.actions.server">
            <field name="name">Send Request Approves</field>
            <field name="model_id" ref="model_product_defective"/>
            <field name="binding_model_id" ref="model_product_defective"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                    action = records.action_send_request_approves()
            </field>
        </record>

        <record id="product_defective_action_approves" model="ir.actions.server">
            <field name="name">Approve</field>
            <field name="model_id" ref="model_product_defective"/>
            <field name="binding_model_id" ref="model_product_defective"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                    action = records.action_approves()
            </field>
        </record>

        <menuitem id="product_defective_menu"
                  name="Xử lí hàng lỗi"
                  parent="point_of_sale.menu_point_root"
                  sequence="21">
            <menuitem id="product_defective_action_menu_view"
                      action="product_defective_action"
                      name="Chi tiết hàng lỗi"
                      sequence="1"/>
        </menuitem>
    </data>
