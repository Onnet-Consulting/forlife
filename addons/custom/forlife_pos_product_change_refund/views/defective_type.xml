<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="defective_type_view_form" model="ir.ui.view">
        <field name="name">defective.type.view.form</field>
        <field name="model">defective.type</field>
        <field name="arch" type="xml">
            <form string="Loại lỗi">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="department_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="defective_type_view_tree" model="ir.ui.view">
        <field name="name">defective.type.view.tree</field>
        <field name="model">defective.type</field>
        <field name="arch" type="xml">
            <tree string="Reason Refund">
                <field name="name"/>
                <field name="email"/>
                <field name="department_id"/>
            </tree>
        </field>
    </record>

    <record id="defective_type_action" model="ir.actions.act_window">
        <field name="name">Loại lỗi</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">defective.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="defective_type_menu" name="Loại lỗi" parent="point_of_sale.menu_point_config_product"
              action="defective_type_action" sequence="11"/>
    </data>
</odoo>