<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="net_promoter_score_report_view_form" model="ir.ui.view">
            <field name="name">net_promoter_score_report_view_form</field>
            <field name="model">net.promoter.score.report</field>
            <field name="arch" type="xml">
                <form string="net_promoter_score_report_form" create="0" delete="0">
                    <group col="5">
                        <group col="1">
                            <field name="from_date" widget="date" class="oe_inline"/>
                        </group>
                        <group col="1">
                            <field name="to_date" widget="date" class="oe_inline"/>
                        </group>
                        <group col="1">
                            <field name="customer_code"/>
                        </group>
                        <group col="1">
                            <field name="invoice_number"/>
                        </group>
                        <group col="1">
                            <label for="min_point" string="Point (%)"/>
                            <span>
                                <field name="min_point" class="oe_inline" nolabel="1"/>
                                <field name="max_point" class="oe_inline" nolabel="1"/>
                            </span>
                        </group>
                        <button name="btn_search" string=" Search" icon="fa-search-plus" class="oe_highlight oe_right" type="object"/>
                    </group>
                    <field name="view_report" readonly="1" force_save="1"/>
                </form>
            </field>
        </record>

        <record id="net_promoter_score_report_action" model="ir.actions.act_window">
            <field name="name">NPS Report</field>
            <field name="res_model">net.promoter.score.report</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
        </record>

        <menuitem id="net_promoter_score_report_menu" name="NPS Report" parent="point_of_sale.menu_point_rep" action="net_promoter_score_report_action" sequence="100"/>

    </data>
</odoo>