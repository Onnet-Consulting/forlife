<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="product_template_form_nhanh">
            <field name="name">product_data_view_inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="before">
                    <field name="code_product" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="vt_action_product_template" model="ir.actions.act_window">
            <field name="name">Product</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('product.product_template_kanban_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('nhanh_connector.product_template_form_nhanh')})]"/>
            <field name="domain">[] </field>
            <field name="context">{}</field>
        </record>
    </data>
</odoo>
