<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_partner_retail_form_view" model="ir.ui.view">
        <field name="name">name</field>
        <field name="model">res.partner.retail</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Type"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="retail_type"/>
                            <field name="brand_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="res_partner_retail_tree_view" model="ir.ui.view">
        <field name="name">name</field>
        <field name="model">res.partner.retail</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="retail_type"/>
                <field name="brand_id"/>
            </tree>
        </field>
    </record>

    <record id="res_partner_retail_action" model="ir.actions.act_window">
        <field name="name">Partner Retail Type</field>
        <field name="res_model">res.partner.retail</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="res_partner_retail_menu"
              action="res_partner_retail_action"
              parent="contacts.res_partner_menu_config"
              sequence="10"/>
</odoo>