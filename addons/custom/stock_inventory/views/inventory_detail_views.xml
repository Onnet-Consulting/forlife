<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="inventory_detail_view_tree" model="ir.ui.view">
            <field name="name">inventory_detail_view_tree</field>
            <field name="model">inventory.detail</field>
            <field name="arch" type="xml">
                <tree string="inventory_detail_tree">
                    <button name="open_detail" class="oe_highlight" type="object" string="Xem chi tiết"/>
                    <field name="ma_hang" width="150px"/>
                    <field name="ten_hang" width="150px"/>
                    <field name="mau" width="150px"/>
                    <field name="size" width="150px"/>
                    <field name="nhom_san_pham" width="150px"/>
                    <field name="don_vi" width="150px"/>
                    <field name="gia" width="150px"/>
                    <field name="ton_phan_mam" width="150px"/>
                    <field name="kiem_ke_thuc_te" width="150px"/>
                    <field name="phien_dem_bo_sung" width="150px"/>
                    <field name="hang_khong_kiem_dem" width="200px"/>
                    <field name="tui_ban_hang" width="150px"/>
                    <field name="hang_khong_tem" width="150px"/>
                    <field name="hang_khong_cheat_duoc" width="250px"/>
                    <field name="hang_loi_chua_duyet" width="200px"/>
                    <field name="hang_loi_da_duyet" width="200px"/>
                    <field name="them1" width="150px"/>
                    <field name="bot1" width="150px"/>
                    <field name="cong_hang_ban_ntl_chua_kiem" width="250px"/>
                    <field name="tru_hang_ban_da_kiem" width="200px"/>
                    <field name="bo_sung_hang_chua_cheat" width="250px"/>
                    <field name="tru_hang_kiem_dup" width="150px"/>
                    <field name="tong_kiem_ke_thuc_te_1" width="200px"/>
                    <field name="them2" width="150px"/>
                    <field name="bot2" width="150px"/>
                    <field name="tong_kiem_dem_thuc_te" width="150px"/>
                    <field name="chenh_lech_kiem_ke" width="150px"/>
                    <field name="ghi_chu" width="150px"/>
                    <field name="phien_dem" width="150px"/>
                </tree>
            </field>
        </record>

        <record id="inventory_detail_view_form" model="ir.ui.view">
            <field name="name">inventory_detail_view_form</field>
            <field name="model">inventory.detail</field>
            <field name="arch" type="xml">
                <form string="inventory_detail_form">
                    <sheet>
                        <group>
                            <group>
                                <field name="ma_hang"/>
                                <field name="ten_hang"/>
                                <field name="mau"/>
                                <field name="size"/>
                                <field name="nhom_san_pham"/>
                                <field name="don_vi"/>
                                <field name="gia"/>
                                <field name="ghi_chu"/>
                                <field name="phien_dem"/>
                            </group>
                            <group>
                                <field name="ton_phan_mam"/>
                                <field name="kiem_ke_thuc_te"/>
                                <field name="phien_dem_bo_sung"/>
                                <field name="hang_khong_kiem_dem"/>
                                <field name="tui_ban_hang"/>
                                <field name="hang_khong_tem"/>
                                <field name="hang_khong_cheat_duoc"/>
                                <field name="hang_loi_chua_duyet"/>
                                <field name="hang_loi_da_duyet"/>
                                <field name="them1"/>
                                <field name="bot1"/>
                                <field name="cong_hang_ban_ntl_chua_kiem"/>
                                <field name="tru_hang_ban_da_kiem"/>
                                <field name="bo_sung_hang_chua_cheat"/>
                                <field name="tru_hang_kiem_dup"/>
                                <field name="tong_kiem_ke_thuc_te_1"/>
                                <field name="them2"/>
                                <field name="bot2"/>
                                <field name="tong_kiem_dem_thuc_te"/>
                                <field name="chenh_lech_kiem_ke"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="open_detail" class="oe_highlight" type="object" string="Xem chi tiết"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>