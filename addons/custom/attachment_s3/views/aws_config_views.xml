<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="aws_config_view_tree" model="ir.ui.view">
        <field name="model">aws.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="aws_name" />
                <field name="aws_host" />
                <field name="aws_bucket" />
                <field name="aws_access_key_id" />
                <field name="aws_secret_access_key" />
                <field name="aws_region" />
            </tree>
        </field>
    </record>
    <record id="aws_config_view_form" model="ir.ui.view">
        <field name="model">aws.config</field>
        <field name="arch" type="xml">
            <form string="Aws Config">
                <sheet>
                    <div class="oe_title">
                        <label for="aws_name" class="oe_edit_only" />
                        <h1>
                            <field name="aws_name" />
                        </h1>
                    </div>
                    <group name="config">
                        <field name="active" />
                        <field name="aws_host" />
                        <field name="aws_bucket" />
                        <field name="aws_access_key_id" />
                        <field name="aws_secret_access_key" />
                        <field name="aws_region" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="aws_config_view_search" model="ir.ui.view">
        <field name="model">aws.config</field>
        <field name="arch" type="xml">
            <search string="Aws config">
                <field name="aws_name" />
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="act_open_aws_config_view">
        <field name="name">Aws Config</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">aws.config</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="aws_config_view_search" />
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <record model="ir.actions.act_window.view" id="act_open_aws_config_view_form">
        <field name="act_window_id" ref="act_open_aws_config_view" />
        <field name="sequence" eval="20" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="aws_config_view_form" />
    </record>
    <record model="ir.actions.act_window.view" id="act_open_aws_config_view_tree">
        <field name="act_window_id" ref="act_open_aws_config_view" />
        <field name="sequence" eval="10" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="aws_config_view_tree" />
    </record>
    <menuitem
        id="aws_config"
        parent="base.menu_custom"
        sequence="100"
        action="act_open_aws_config_view"
    />
    <menuitem
        id="menu_aws_config"
        parent="aws_config"
        sequence="10"
        action="act_open_aws_config_view"
    />
</odoo>
