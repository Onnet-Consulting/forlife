<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.forlife_pos_accounting</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40"/>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pos_accounting_section']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Default Product</span>
                        <i class="fa fa-info-circle me-1" title="This setting is common to all PoS." pos-data-toggle="tooltip"/>
                        <div class="text-muted">Default Product Defective Goods / Handel Discount (PoS)</div>
                        <div class="content-group mt16">
                            <div class="row" title="Default Product Defective Goods (PoS).">
                                <label for="product_default_pos_defective_goods_id" class="col-lg-3 o_light_label" options="{'no_open': True, 'no_create': True}"/>
                                <field name="product_default_pos_defective_goods_id" domain="[('type', '=', 'service')]"/>
                            </div>
                            <div class="row" title="Default Journal Defective Goods (PoS).">
                                <label for="journal_default_pos_defective_goods_id" class="col-lg-3 o_light_label" options="{'no_open': True, 'no_create': True}"/>
                                <field name="journal_default_pos_defective_goods_id" domain="[('company_id', '=', company_id)]"/>
                            </div>
                            <br/>
                            <div class="row" title="Default Product Handel Discount (PoS)">
                                <label for="product_default_pos_handle_discount_id" class="col-lg-3 o_light_label" options="{'no_open': True, 'no_create': True}"/>
                                <field name="product_default_pos_handle_discount_id" domain="[('type', '=', 'service')]"/>
                            </div>
                            <div class="row" title="Default Journal Handel Discount (PoS)">
                                <label for="journal_default_pos_handle_discount_id" class="col-lg-3 o_light_label" options="{'no_open': True, 'no_create': True}"/>
                                <field name="journal_default_pos_handle_discount_id" domain="[('company_id', '=', company_id)]"/>
                            </div>
                            <br/>
                            <div class="row" title="Default Product Change/Return Goods (PoS)">
                                <label for="product_default_pos_return_goods_id" class="col-lg-3 o_light_label" options="{'no_open': True, 'no_create': True}"/>
                                <field name="product_default_pos_return_goods_id" domain="[('type', '=', 'service')]"/>
                            </div>
                            <div class="row" title="Default Journal Change/Return Goods (PoS)">
                                <label for="journal_default_pos_return_goods_id" class="col-lg-3 o_light_label" options="{'no_open': True, 'no_create': True}"/>
                                <field name="journal_default_pos_return_goods_id" domain="[('company_id', '=', company_id)]"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Accounting Partner</span>
                        <i class="fa fa-info-circle me-1" title="This setting is common to all PoS." pos-data-toggle="tooltip"/>
                        <div class="text-muted">Accounting Partner</div>
                        <div class="content-group mt16">
                            <div class="row" title="Default Partner for Accounting Voucher.">
                                <label for="accounting_voucher_partner_id" class="col-lg-3 o_light_label" options="{'no_open': True, 'no_create': True}"/>
                                <field name="accounting_voucher_partner_id" domain="['|', ('company_id', '=', company_id), ('company_id', '=', False)]"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@name='default_taxes_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="is_promotional_accounting_without_state_registration" groups="account.group_account_user">
                    <div class="o_setting_left_pane">
                        <field name="is_promotional_accounting_without_state_registration"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_promotional_accounting_without_state_registration"/>
                        <div class="text-muted">
                            Allow to configure promotional accounting without state registration
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>