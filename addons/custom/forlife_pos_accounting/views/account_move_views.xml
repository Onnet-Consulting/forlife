<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<odoo>
    <record model="ir.ui.view" id="view_move_form_pos_accounting_inherit">
        <field name="name">account.move.form.pos.accounting.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@id='aml_tab']/field[@name='line_ids']/tree/field[@name='partner_id']" position="after">
                <field name="partner_id"
                       optional="show"
                       domain="['|', ('parent_id', '=', False), ('is_company', '=', True)]"
                       attrs="{'column_invisible': [('parent.move_type', '=', 'entry')]}"/>
            </xpath>
        </field>
    </record>
</odoo>