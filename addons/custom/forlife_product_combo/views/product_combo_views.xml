<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_comboview_form" model="ir.ui.view">
        <field name="name">product.combo.view.form</field>
        <field name="model">product.combo</field>
        <field name="arch" type="xml">
            <form string="Product Combo">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                    <button name="action_approve" string="Áp dụng" class="oe_highlight"
                                type="object"/>
                        <button name="action_finished" string="Kết thúc"
                                type="object"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="code" string="Mã bộ"/>
                        <h1>
                            <field name="code"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="description_combo"/>
                            <label for="from_date" string="Hiệu lực"/>
                            <div class="o_row">
                                <field name="from_date" widget="daterange" options="{'related_end_date': 'to_date'}"/>
                                <span> đến </span>
                                <field name="to_date" widget="daterange" options="{'related_start_date': 'from_date'}"/>
                            </div>
                        </group>
                        <group>
                            <label for="size_attribute_id"/>
                            <div>
                                <field name="size_attribute_id" class="oe_inline"/>
                            </div>
                            <label for="color_attribute_id"/>
                            <div>
                                <field name="color_attribute_id" class="oe_inline"/>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="combo_product_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="sku"/>
                                    <field name="max_quantity" string="Số lượng"/>
                                    <field name="product_uom_id"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name="product_id"/>
                                            <field name="sku"/>
                                            <field name="max_quantity" string="Số lượng"/>
                                            <field name="product_uom_id"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="product_combo_view_tree" model="ir.ui.view">
        <field name="name">product.combo.view.tree</field>
        <field name="model">product.combo</field>
        <field name="arch" type="xml">
            <tree default_order="code desc">
                <field name="code"/>
                <field name="state"/>
                <field name="from_date"/>
                <field name="to_date"/>
            </tree>
        </field>
    </record>

    <record id="product_combo_view_search" model="ir.ui.view">
        <field name="name">product.combo.view.search</field>
        <field name="model">product.combo</field>
        <field name="arch" type="xml">
            <search>
                <field name="code"/>
                <filter string="In Progress" domain="[('state','=','in_progress')]" name="in_progress"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="State" name="state" domain="[]" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="product_combo_action" model="ir.actions.act_window">
        <field name="name">Product Combo</field>
        <field name="res_model">product.combo</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <div class="o_loyalty_not_found container">
                <h1>No program found.</h1>
            </div>
        </field>
    </record>

    <menuitem id="menu_product_combo" name="Product combo" parent="point_of_sale.pos_config_menu_catalog"
              action="product_combo_action" sequence="30"/>

</odoo>