<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_check_due_date_voucher" model="ir.cron">
            <field name="name">Check Due Date Voucher</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field ref="model_voucher_voucher" name="model_id"/>
            <field name="state">code</field>
            <field name="code">model.check_due_date_voucher()</field>
            <field name="nextcall" eval="DateTime.now().strftime('%Y-%m-%d 19:00:00')"/>
        </record>
    </data>
    <data noupdate="1">
        <record id="ir_cron_generate_account_move_voucher" model="ir.cron">
            <field name="name">Generate Account Move Voucher </field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field ref="model_voucher_voucher" name="model_id"/>
            <field name="state">code</field>
            <field name="code">model.with_context(expired=False).generate_account_move_voucher()</field>
            <field name="nextcall" eval="DateTime.now().strftime('%Y-%m-%d 19:00:00')"/>
        </record>
    </data>
        <data noupdate="1">
        <record id="ir_cron_generate_account_move_voucher_is_expired" model="ir.cron">
            <field name="name">Generate Account Move Voucher Expired</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field ref="model_voucher_voucher" name="model_id"/>
            <field name="state">code</field>
            <field name="code">model.with_context(expired=True).generate_account_move_voucher()</field>
            <field name="nextcall" eval="DateTime.now().strftime('%Y-%m-%d 19:00:00')"/>
        </record>
    </data>
</odoo>