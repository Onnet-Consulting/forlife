<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="pos_payment_method_inherit">
        <field name="name">pos.payment.method.inherit</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="account_other_income"/>
                <field name="account_general" />
                <field name="account_other_fee" />
                <field name="is_voucher" invisible="True"/>
                <field name="day_accounting" attrs="{'invisible':[('is_voucher','=', False)]}" />
            </xpath>
        </field>
    </record>
</odoo>