<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="voucher_tree_view">
            <field name="name">voucher.tree.view</field>
            <field name="model">program.voucher</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="program_voucher_code"/>
                    <field name="purpose_id" context="{'get_name': 1}"/>
                    <field name="derpartment_id"/>
                    <field name="apply_many_times" attrs="{'invisible': [('type','=', 'v')]}"/>
                    <field name="apply_contemp_time"/>
                    <field name="brand_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="store_ids" widget="many2many_tags"/>
                    <field name="product_id" required="1"/>
                    <field name="details"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="voucher_form_view">
            <field name="name">voucher.form.view</field>
            <field name="model">program.voucher</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="create_voucher" string="Create Voucher" class="oe_highlight"
                                type="object"/>
                        <button name="action_compute_product_apply" string="Sync Products Apply"
                                type="object"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_voucher_relation" type="object" class="oe_stat_button" icon="fa-ticket">
                                <field name="voucher_count" widget="statinfo" string="Voucher"/>
                            </button>
                            <button name="action_view_product_apply" type="object" class="oe_stat_button" icon="fa-bars">
                                <field name="product_apply_count" string="Sản phẩm áp dụng" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <field name="name"/>
                            <field name="type" attrs="{'readonly': [('voucher_count','>',0)]}"/>
                            <field name="program_voucher_code"/>
                            <field name="purpose_id" attrs="{'readonly': [('voucher_count','>',0)]}" context="{'get_name': 1}"/>
                            <field name="derpartment_id" attrs="{'readonly': [('voucher_count','>',0)]}"/>
                            <field name="apply_many_times" attrs="{'invisible': [('type','=', 'v')]}"/>
                            <field name="is_full_price_applies"/>
                            <field name="apply_contemp_time"/>
                            <field name="using_limit"/>
                            <field name="brand_id" attrs="{'readonly': [('voucher_count','>',0)]}"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="store_ids" widget="many2many_tags" domain="[('brand_id','=', brand_id)]"/>
                            <field name="product_apply_ids" widget="many2many_tags" invisible="1"/>
                            <field name="product_id" context="{'filter_product_follow_type': type}" required="1"/>
                            <field name="details"/>
                        </group>
                        <notebook>
                            <page name="voucher" string="Voucher">
                                <field name="program_voucher_line_ids" colspan="2" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="program_voucher_id" invisible="1"/>
                                        <field name="price" widget="monetary"/>
                                        <field name="partner_ids" widget="many2many_tags"/>
                                        <field name="count"/>
                                        <field name="currency_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>