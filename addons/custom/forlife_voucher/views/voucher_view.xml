<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="voucher_voucher_tree_view">
            <field name="name">voucher.voucher.tree.view</field>
            <field name="model">voucher.voucher</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="state"/>
                    <field name="program_voucher_id" required="1"/>
                    <field name="type"/>
                    <field name="purpose_id" required="1"/>
                    <field name="derpartment_id"/>
                    <field name="apply_many_times"/>
                    <field name="apply_contemp_time"/>
                    <field name="brand_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="partner_id"/>
                    <field name="price"/>
                    <field name="price_used"/>
                    <field name="price_residual"/>
                    <field name="sale_id"/>
                    <field name="order_use_ids" widget="many2many_tags"/>
                    <field name="state_app"/>
                    <field name="product_voucher_id"/>
                    <field name="phone_number"/>
                    <field name="status_latest"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="voucher_voucher_form_view">
            <field name="name">voucher.voucher.form.view</field>
            <field name="model">voucher.voucher</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="program_voucher_id" required="1"/>
                            <field name="type"/>
                            <field name="purpose_id" required="1"/>
                            <field name="derpartment_id"/>
                            <field name="apply_many_times"/>
                            <field name="apply_contemp_time"/>
                            <field name="brand_id" required="1"/>
                            <field name="store_ids" widget="many2many_tags" domain="[('brand_id','=', brand_id)]"/>
                            <field name="status_latest"/>
                        </group>
                        <group>
                            <field name="start_date" required="1"/>
                            <field name="end_date" required="1"/>
                            <field name="partner_id"/>
                            <field name="price"/>
                            <field name="price_used" readonly="1"/>
                            <field name="price_residual" readonly="1"/>
                            <field name="sale_id" readonly="1"/>
                            <field name="order_pos" readonly="1"/>
                            <field name="order_use_ids" widget="many2many_tags" readonly="1"/>
                            <field name="state_app"/>
                            <field name="phone_number"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>

                </form>
            </field>
        </record>

    </data>
</odoo>