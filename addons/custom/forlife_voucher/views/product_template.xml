<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="product_template_inherit_view">
            <field name="name">product.template.inherit.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="inside">
                    <span class="d-inline-block">
                            <field name="voucher"/>
                            <label for="voucher"/>
                        </span>
                </xpath>
                <xpath expr="//page[@name='general_information']//field[@name='company_id']" position="after">
                    <field name="program_voucher_id" attrs="{'invisible': [('voucher', '=', False)]}"/>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="product_template_tree_view_inherit">
            <field name="name">product.template.tree.view.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <field name="list_price" position="before">
                    <field name="price"/>
                </field>
            </field>
        </record>
    </data>
</odoo>