<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="quick_config_voucher_view_form" model="ir.ui.view">
            <field name="name">quick_config_voucher_view_form</field>
            <field name="model">quick.config.voucher</field>
            <field name="arch" type="xml">
                <form string="quick_config_voucher_form">
                    <header>
                        <button name="action_confirm" string="Xác nhận" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <h3>
                            <field name="name" nolabel="1"/>
                        </h3>
                        <group>
                            <group>
                                <field name="method" widget="radio" options="{'horizontal': True}"/>
                            </group>
                        </group>
                        <group attrs="{'invisible': [('method', '=', False)]}">
                            <label for="file_import"/>
                            <div style="width: 200px">
                                <button name="download_temp" class="fa fa-download" string=" Template import"
                                        type="object"/>
                            </div>
                            <group class="d-flex">
                                <field name="file_import" widget="binary" nolabel="1" filename="file_name"/>
                                <field name="file_name" invisible="1"/>
                                <button name="import_xlsx" attrs="{'invisible': [('file_import', '=', False)]}"
                                        string="Import" type="object" class="btn btn-primary btn-sm"/>

                            </group>
                        </group>
                        <field name="show_message" invisible="1"/>
                        <div attrs="{'invisible': [('show_message', '=', False)]}">
                            <label for="message_invalid"/>
                            <field name="message_invalid" readonly="1" force_save="1"/>
                        </div>
                        <notebook>
                            <page string="Voucher">
                                <field name="voucher_ids"
                                       domain="[('using_limit', '=', 1), ('state', '=',  method == 'active' and 'off value' or 'sold')]"
                                       attrs="{'readonly': [('method', '=', False)]}">
                                    <tree create="false">
                                        <field name="name"/>
                                        <field name="type"/>
                                        <field name="purpose_id"/>
                                        <field name="brand_id"/>
                                        <field name="state"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="price"/>
                                        <field name="price_used"/>
                                        <field name="price_residual"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="quick_config_voucher_action" model="ir.actions.act_window">
            <field name="name">Thay đổi trạng thái voucher</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">quick.config.voucher</field>
            <field name="view_mode">form</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="quick_config_voucher_menu"
                  parent="sale.product_menu_catalog"
                  groups="sales_team.group_sale_manager"
                  action="quick_config_voucher_action"
                  sequence="60"
        />

    </data>
</odoo>