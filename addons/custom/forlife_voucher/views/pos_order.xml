<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_pos_form_voucher_inherit" model="ir.ui.view">
        <field name="name">view.pos.form.voucher.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_voucher" type="object" class="oe_stat_button" icon="fa-globe icon">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Voucher</span>
                    </div>
                </button>
            </xpath>

        </field>
    </record>

</odoo>