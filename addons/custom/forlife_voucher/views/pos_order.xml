<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_pos_form_voucher_inherit" model="ir.ui.view">
        <field name="name">view.pos.form.voucher.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_voucher" type="object" class="oe_stat_button" icon="fa-ticket">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Voucher</span>
                    </div>
                </button>
            </xpath>

            <button name="action_pos_order_invoice" position="after">
                <button name="action_create_voucher" type="object" string="Create Voucher" data-hotkey="v"/>
            </button>
            <xpath expr="//field[@name='lines']/tree/field[@name='qty']" position="after">
                <field name="x_qty_voucher" optional="hide"/>
            </xpath>
            <xpath expr="//page[@name='payments']" position="after">
                <page string="Voucher" name="voucher">
                    <field name="pos_voucher_line_ids">
                        <tree>
                            <field name="voucher_id"/>
                            <field name="priority"/>
                            <field name="voucher_code"/>
                            <field name="type"/>
                            <field name="end_date"/>
                            <field name="price_residual"/>
                            <field name="price_used"/>
                        </tree>
                    </field>
                </page>
            </xpath>

        </field>
    </record>

</odoo>