<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_order_form_voucher_inherit" model="ir.ui.view">
        <field name="name">view.order.form.voucher.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_voucher" type="object" class="oe_stat_button" icon="fa-ticket">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Voucher</span>
                    </div>
                </button>
            </xpath>
            <button name="action_draft" position="after">
                <button name="action_create_voucher" type="object" string="Create Voucher" data-hotkey="v"/>
            </button>
            <xpath expr="//field[@name='order_line']/tree/field[@name='qty_invoiced']" position="after">
                <field name="x_qty_voucher" optional="hide"/>
            </xpath>

        </field>
    </record>

</odoo>