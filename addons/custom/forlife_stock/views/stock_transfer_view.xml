<odoo>

    <record id="seq_stock_transfer" model="ir.sequence">
        <field name="name">Rec name</field>
        <field name="code">stock.transfer.sequence</field>
        <field name="prefix">PXB</field>
        <field name="padding">2</field>
        <field name="suffix" eval=""/>
    </record>

    <record id="stock_transfer_tree" model="ir.ui.view">
        <field name="name">stock.transfer.tree</field>
        <field name="model">stock.transfer</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Stock Transfer">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="location_id"/>
                <field name="location_dest_id"/>
                <field name="is_diff_transfer"/>
                <field name="type"/>
                <field name="work_from"/>
                <field name="work_to"/>
                <field name="create_date"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="stock_transfer_form" model="ir.ui.view">
        <field name="name">stock.transfer.form</field>
        <field name="model">stock.transfer</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Back to draft" name="action_draft" type="object"
                            attrs="{'invisible': [('state', '!=', 'cancel')]}"/>
                    <button string="Send" name="action_wait_approve"
                            type="object" attrs="{'invisible':[('state', '!=', 'draft')]}"/>
                    <button string="Approve" name="action_approve" type="object"
                            attrs="{'invisible':[ ('state', '!=', 'wait_approve')]}"/>
                    <button string="Out Approve" name="action_out_approve" type="object"
                            attrs="{'invisible':[ ('state', '!=', 'approved')]}"/>
                    <button string="In Approve" name="action_in_approve" type="object"
                            attrs="{'invisible':[ ('state', '!=', 'out_approve')]}"/>
                    <button string="Done" name="action_done" type="object"
                            attrs="{'invisible':[ ('state', '!=', 'in_approve')]}"/>
                    <button string="Reject " name="action_reject"
                            type="object" attrs="{'invisible':[('state', '!=', 'wait_approve')]}"/>
                    <button string="Cancel" name="action_cancel"
                            type="object" attrs="{'invisible':[('state', 'in', ('draft','in_approve','cancel','done'))]}" confirm="Do you really want to cancel?"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,wait_approve,approved,out_approve,done,reject,cancel"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="is_diff_transfer" invisible="1"/>
                            <field name="employee_id" invisible="1"/>
                            <field name="employee_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="department_id"/>
                            <field name="document_type" invisible="1"/>
                            <field name="method_transfer" invisible="1"/>
                            <field name="location_id" domain="[('usage', '=', 'internal')]" string="Whs From" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="location_dest_id" domain="[('usage', '=', 'internal')]" string="Whs To" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="reference_document" attrs="{'invisible':[('reference_document', '=', False)], 'readonly': [('state', '!=', 'draft')]}" string="Tài liệu gốc"/>
                            <field name="type" attrs="{'invisible':[('type', '=', False)]}"/>
                            <field name ="date_transfer"  attrs="{'invisible':[('state', '!=', ('draft','wait_approve','approved'))]}" readonly="1"  />
                        </group>
                        <group>
                            <field name="create_date" options='{"date_format": "dd/MM/yyyy"}' attrs="{'readonly': [('state', '!=', 'draft')]}"/>
<!--                            <field name="reference_document_id"/>-->
                            <field name="stock_request_id" string="Transfer Request" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <!-- <field name="production_order_id" attrs="{'readonly': [('state', 'in', ('wait_approve','approved','out_approve','in_approve','cancel','reject'))]}"/> -->
                            <field name="work_from" string="LSX từ" required="0" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="work_to" string="Đến LSX" required="0" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="total_package" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="total_weight" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                            <group string="Note">
                            <field colspan="2" name="note" nolabel="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Product">
                            <field name="stock_transfer_line" widget="section_and_note_one2many" mode="tree" context="{'default_stock_request_id': stock_request_id, 'default_work_from': work_from, 'default_work_to': work_to}"
                                   required="1">
                                <tree editable="bottom" class="width-hh">
                                    <field name="is_from_button" invisible="1"/>
                                    <field name="product_str_id" invisible="1"/>
                                    <field name="product_id"  domain="[('product_type', '=', 'product')]" attrs="{'readonly': ['|', ('product_str_id', '!=', False), ('parent.state', '!=', 'draft')]}"/>
                                    <field name="qty_plan" attrs="{'readonly': ['|', '|',('product_str_id', '!=', False), ('parent.state', 'in', ('wait_approve')), ('parent.is_diff_transfer', '=', True)]}"/>
                                    <field name="uom_id" force_save="1" attrs="{'readonly': ['|', ('product_str_id', '!=', False), ('parent.state', '!=', 'draft')]}"/>
                                    <field name="qty_out" attrs="{'readonly': [('parent.state', '!=', 'approved'), ('parent.is_diff_transfer', '=', False)]}"/>
                                    <field name="qty_in" attrs="{'readonly': [('parent.state', '!=', 'out_approve')]}"/>
                                    <field name="quantity_remaining" attrs="{'readonly': [('parent.state', '!=', 'draft')]}"/>
                                    <field name="work_from" required="0" attrs="{'readonly': [('parent.state', '!=', 'draft')]}"/>
                                    <field name="work_to" required="0" attrs="{'readonly': [('parent.state', '!=', 'draft')]}"/>
                                    <field name="stock_request_id" attrs="{'readonly': [('parent.state', '!=', 'draft')]}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
<!--                    <notebook colspan="4">-->
<!--                        <page string="Approval Logs" name="approval_logs">-->
<!--                            <field name="approval_logs_ids" mode="kanban" readonly="1" attrs="{'readonly': [('state', 'in', ('wait_approve','approved','out_approve','in_approve','cancel','reject'))]}">-->
<!--                                <kanban>-->
<!--                                    <field name="request_approved_date"/>-->
<!--                                    <field name="approval_user_id"/>-->
<!--                                    <field name="function"/>-->
<!--                                    <field name="note"/>-->
<!--                                    <field name="state"/>-->
<!--                                    <templates>-->
<!--                                        <t t-name="kanban-box">-->
<!--                                            <div t-attf-class="oe_kanban_card">-->
<!--                                                <div class="o_kanban_record_top">-->
<!--                                                    <div class="o_kanban_record_headings mt4 text-muted">-->
<!--                                                        <field name="state"/>-->
<!--                                                    </div>-->
<!--                                                    <div class="text-muted">-->
<!--                                                        <field name="request_approved_date"/>-->
<!--                                                    </div>-->
<!--                                                </div>-->
<!--                                                <div>-->
<!--                                                    <div class="approval_logs_main_text">-->
<!--                                                        <field name="function"/>-->
<!--                                                    </div>-->
<!--                                                    <div class="approval_logs_main_text">-->
<!--                                                        <field name="approval_user_id"/>-->
<!--                                                    </div>-->
<!--                                                    <div class="approval_logs_note">-->
<!--                                                        <div>Note:</div>-->
<!--                                                        <field name="note"/>-->
<!--                                                    </div>-->
<!--                                                </div>-->
<!--                                            </div>-->
<!--                                        </t>-->
<!--                                    </templates>-->
<!--                                </kanban>-->
<!--                            </field>-->
<!--                        </page>-->
<!--                    </notebook>-->
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_groups_search" model="ir.ui.view">
        <field name="name">stock.transfer.search</field>
        <field name="model">stock.transfer</field>
        <field name="arch" type="xml">
            <search string="Groups">
                 <field name="name"/>
                <field name="employee_id"/>
                <field name="location_id"/>
                <field name="location_dest_id"/>
                <field name="is_diff_transfer"/>
                <field name="work_from"/>
                <field name="work_to"/>
                <field name="create_date"/>
                <field name="state" widget="badge"/>
            </search>
        </field>
    </record>
    <record id="stock_transfer_action" model="ir.actions.act_window">
        <field name="name">Stock Transfer</field>
        <field name="res_model">stock.transfer</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="stock_transfer_popup_out_confirm_view_form" model="ir.ui.view">
        <field name="name">stock.transfer.popup.out.confirm.view.form</field>
        <field name="model">stock.transfer.popup.confirm</field>
        <field name="arch" type="xml">
            <form>
                <p>Bạn chưa nhập lại số lượng xuất kho thực tế. Nếu tiếp tục, hệ thống sẽ tự động mặc định bằng số lượng đã được duyệt.</p>
                <field name="stock_transfer_id" invisible="1" force_save="1"/>

                <footer>
                    <button name="process_out" string="Apply" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="stock_transfer_popup_in_confirm_view_form" model="ir.ui.view">
        <field name="name">stock.transfer.popup.in.confirm.view.form</field>
        <field name="model">stock.transfer.popup.confirm</field>
        <field name="arch" type="xml">
            <form>
                <p>Bạn chưa nhập lại số lượng nhập kho thực tế. Nếu tiếp tục, hệ thống sẽ tự động mặc định bằng số lượng xuất kho đã được duyệt.</p>
                <field name="stock_transfer_id" invisible="1" force_save="1"/>

                <footer>
                    <button name="process_in" string="Apply" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>