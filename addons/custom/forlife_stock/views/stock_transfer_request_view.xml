<odoo>
    <record id="stock_transfer_request_tree" model="ir.ui.view">
        <field name="name">stock.transfer.request.tree</field>
        <field name="model">stock.transfer.request</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Stock Transfer Request" default_order="create_date desc" limit="25">
                <field name="name"/>
                <field name="user_id"/>
                <field name="total_request_qty"/>
                <field name="total_out_qty"/>
                <field name="total_in_qty"/>
                <field name="request_date"/>
                <field name="date_planned"/>
                <field name="state" widget="badge"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <record id="seq_stock_transfer_request_name" model="ir.sequence">
        <field name="name">Rec name</field>
        <field name="code">stock.transfer.request.name.sequence</field>
        <field name="prefix">STR</field>
        <field name="padding">3</field>
        <field name="company_id" eval="False"></field>
    </record>

    <record id="stock_transfer_request_from_view" model="ir.ui.view">
        <field name="name">stock.transfer.request.from</field>
        <field name="model">stock.transfer.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Back to draft" name="action_draft" type="object"
                            attrs="{'invisible': [('state', 'in', ('draft','approved','done', 'wait_confirm'))]}"/>
                    <button string="Send" name="action_wait_confirm"
                            type="object" attrs="{'invisible':[('state', 'in', ('approved', 'wait_confirm', 'done', 'cancel', 'reject'))]}"/>
                    <button string="Approve" name="action_approve" type="object"
                            attrs="{'invisible':[ ('state', 'in', ('draft','approved', 'done','cancel', 'reject'))]}"
                            groups="purchase_request.admin_purchase_request_group"/>
                    <button string="Reject " name="%(forlife_stock.reject_stock_request_wizard)d"
                            type="action" attrs="{'invisible':[('state', 'in', ('draft', 'approved', 'done', 'cancel', 'reject'))]}"/>
                    <button string="Cancel" name="action_cancel"
                            type="object" attrs="{'invisible':[('state', 'in', ('draft','done','cancel'))]}" confirm="Bạn có thực sự muốn hủy bỏ?"/>
                    <button string="Done" name="action_done" type="object" attrs="{'invisible': [('state', 'in', ('draft', 'wait_confirm','reject','cancel','done'))]}" confirm="Bạn có thực sự muốn hoàn thành phiếu không?"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,wait_confirm,approved,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_stock_transfer" attrs="{'invisible': [('count_stock_transfer', '=', 0)]}" type="object" class="oe_stat_button">
                            <div class="o_stat_info">
                                <field name="count_stock_transfer" class="o_stat_value"/>
                                Phiếu điều chuyển
                            </div>
                        </button>
                    </div>
                    <h1>
                        <field name="created_stock_transfer" invisible="1"/>
                        <field name="name" required="1" readonly="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="user_id" required="1" attrs="{'readonly': [('state', 'in', ('approved', 'done'))]}" />
                            <field name="department_id" string="Department"  required="1" readonly="1" force_save="1"/>
                            <field name="production_id" string="Lệnh sản xuất" attrs="{'readonly': [('state', '!=', 'draft')]}" force_save="1"/>
                            <field name="purchase_id" attrs="{'readonly': [('state', '!=', 'draft')]}" force_save="1"/>
                            <field name="note" attrs="{'readonly': [('state', '!=', 'draft')]}" force_save="1"/>
                        </group>
                        <group>
                            <field name="request_date"  required="1" attrs="{'readonly': [('state', 'in', ('approved', 'done'))]}"/>
                            <field name="date_planned"  required="1" attrs="{'readonly': [('state', 'in', ('approved', 'done'))]}"/>
                            <field name="location_id" domain="[('usage', '=', 'internal')]" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="location_dest_id" domain="[('usage', '=', 'internal')]" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Product">
                            <field name="request_lines"
                                   widget="section_and_note_one2many"
                                   mode="tree" required="1"
                                   context="{'default_location_id': location_id, 'default_location_dest_id': location_dest_id, 'default_production_to': production_id}"
                                   attrs="{'readonly': [('state', 'in', ('approved', 'done'))]}">
                                <tree editable="bottom" class="width-hh" decoration-muted="quantity_remaining == 0" delete="1">
                                    <field name="product_id" domain="[('product_type', '=', 'product')]" options="{'no_create': True, 'no_edit': True}"/>
                                    <field name="plan_quantity"/>
                                    <field name="uom_id" readonly="False"/>
                                    <field name="location_id" domain="[('usage', '=', 'internal')]"/>
                                    <field name="location_dest_id" domain="[('usage', '=', 'internal')]"/>
                                    <field name="production_from"/>
                                    <field name="production_to"/>
                                    <field name="quantity_reality_transfer" readonly="1"  force_save="1"/>
                                    <field name="quantity_reality_receive" readonly="1" force_save="1"/>
                                    <field name="quantity_remaining" force_save="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Reference Document ">
                            <field name="stock_transfer_ids"  mode="tree" readonly="1">
                                <tree>
                                    <field name="name" string="Document"/>
                                    <field name="state"/>
                                    <field name="create_date" string="Create date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
<!--                    <notebook colspan="4">-->
<!--                        <page string="Approval Logs" name="approval_logs">-->
<!--                            <field name="approval_logs_ids" mode="kanban" readonly="1">-->
<!--                                <kanban>-->
<!--                                    <field name="request_approved_date"/>-->
<!--                                    <field name="approval_user_id"/>-->
<!--                                    <field name="function"/>-->
<!--                                    <field name="note"/>-->
<!--                                    <field name="state_request"/>-->
<!--                                    <templates>-->
<!--                                        <t t-name="kanban-box">-->
<!--                                            <div t-attf-class="oe_kanban_card">-->
<!--                                                <div class="o_kanban_record_top">-->
<!--                                                    <div class="o_kanban_record_headings mt4 text-muted">-->
<!--                                                        <field name="state_request"/>-->
<!--                                                    </div>-->
<!--                                                    <div class="text-muted">-->
<!--                                                        <field name="request_approved_date"/>-->
<!--                                                    </div>-->
<!--                                                </div>-->
<!--                                                <div>-->
<!--                                                    <div class="approval_logs_main_text">-->
<!--                                                        <field name="function"/>-->
<!--                                                    </div>-->
<!--                                                    <div class="approval_logs_main_text">-->
<!--                                                        <field name="approval_user_id"/>-->
<!--                                                    </div>-->
<!--                                                    <div class="approval_logs_note">-->
<!--                                                        <div>Note:</div>-->
<!--                                                        <field name="note"/>-->
<!--                                                    </div>-->
<!--                                                </div>-->
<!--                                            </div>-->
<!--                                        </t>-->
<!--                                    </templates>-->
<!--                                </kanban>-->
<!--                            </field>-->
<!--                        </page>-->
<!--                    </notebook>-->
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="stock_transfer_request_search_view" model="ir.ui.view">
        <field name="name">stock_transfer_request_search_view</field>
        <field name="model">stock.transfer.request</field>
        <field eval="10" name="priority"/>
        <field name="arch" type="xml">
            <search string="Stock Transfer Request Search">
                <field name="name"/>
                <field name="user_id"/>
                <field name="department_id"/>
                <field name="request_date"/>
                <field name="state"/>
                <group expand="0" string="Filters">
                    <filter string="Dự thảo" name="state" domain="[('state','=','draft')]"/>
                    <filter string="Chờ duyệt" name="state" domain="[('state','=','wait_confirm')]"/>
                    <filter string="Đã phê duyệt" name="state" domain="[('state','=','approved')]"/>
                    <filter string="Từ chối" name="state" domain="[('state','=','reject')]"/>
                    <filter string="Hủy" name="state" domain="[('state','=','cancel')]"/>
                    <filter string="Hoàn thành" name="state" domain="[('state','=','done')]"/>
                </group>
                <group expand="0" string="Group">
                    <filter name="request_date_group" string="Ngày tạo"
                            context="{'group_by': 'request_date'}"/>
                    <filter name="user_id_group" string="Người yêu cầu"
                            context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="stock_transfer_request_action" model="ir.actions.act_window">
        <field name="name">Stock Transfer Request</field>
        <field name="res_model">stock.transfer.request</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('company_id','in',allowed_company_ids)]</field>
    </record>
</odoo>