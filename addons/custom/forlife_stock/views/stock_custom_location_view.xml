<odoo>
    <data>
        <!-- Tree View -->
        <record model="ir.ui.view" id="other_reasons_for_import_and_export_tree_view_id">
            <field name="name">Lý do nhập khác và xuất khác</field>
            <field name="model">stock.location</field>
            <field name="priority" eval="1000" />
            <field name="arch" type="xml">
                <tree>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="type_other"/>
                        <field name="x_property_valuation_out_account_id" attrs="{'required': [('type_other', '=', 'incoming')], 'invisible': [('type_other', '!=', 'incoming')]}"/>
                        <field name="x_property_valuation_in_account_id" attrs="{'required': [('type_other', '=', 'outcoming')], 'invisible': [('type_other', '!=', 'outcoming')]}"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="other_reasons_for_import_and_export_form_view_id">
            <field name="name">Lý do nhập khác và xuất khác</field>
            <field name="model">stock.location</field>
            <field name="priority" eval="1000" />
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h2><field name="name" placeholder="Name..."/></h2>
                        </div>
                        <group>
                            <group class="col-3">
                                <field name="code"/>
                                <field name="type_other"/>
                            </group>
                            <group>
                                <field name="reason_type_id" required="1"/>
                                <field name="is_price_unit" attrs="{'invisible': [('type_other', '!=', 'incoming')]}"/>
                                <field name="is_work_order"/>
                                <field name="is_assets"/>
                                <field name="reason_export_material_id" domain="[('company_id', '!=', False), ('type_other', '!=', False)]"/>
<!--                                <field name="work_order" attrs="{'required': [('is_work_order', '=', True)],'invisible': [('is_work_order', '=', False)]}"/>-->
                            </group>
                        </group>
                        <group string="Thông tin kế toán">
                            <group>
                                <field name="x_property_valuation_out_account_id"
                                       attrs="{'required': [('type_other', '=', 'incoming')], 'invisible': [('type_other', '!=', 'incoming')]}"/>
                                <field name="x_property_valuation_in_account_id"
                                       attrs="{'required': [('type_other', '=', 'outcoming')], 'invisible': [('type_other', '!=', 'outcoming')]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="action_stock_other_reasons_for_import_and_export">
            <field name="name">Lý do nhập khác và xuất khác</field>
            <field name="res_model">stock.location</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="other_reasons_for_import_and_export_tree_view_id"/>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('forlife_stock.other_reasons_for_import_and_export_tree_view_id')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('forlife_stock.other_reasons_for_import_and_export_form_view_id')})]"/>
            <field name="domain">[('type_other', '!=', None)]</field>
            <field name="context">{}</field>
        </record>

        <!-- Menu Item -->
        <menuitem name="Other reasons for import and export" id="menu_id" action="action_stock_other_reasons_for_import_and_export" parent="stock.menu_warehouse_config"/>
    </data>
</odoo>
