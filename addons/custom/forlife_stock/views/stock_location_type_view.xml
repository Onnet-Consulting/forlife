<odoo>
    <record id="stock_location_type_tree" model="ir.ui.view">
        <field name="name">stock.location.type.tree</field>
        <field name="model">stock.location.type</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Stock Location Type" editable="bottom">
                <field name="code"/>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="stock_location_type_action" model="ir.actions.act_window">
        <field name="name">Stock Location Type</field>
        <field name="res_model">stock.location.type</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>