<odoo>
    <record id="hr_asset_transfer_tree" model="ir.ui.view">
        <field name="name">hr.asset.transfer.tree</field>
        <field name="model">hr.asset.transfer</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Asset Transfer" default_order="create_date desc" limit="25">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="note"/>
                <field name="create_date"/>
                <field name="validate_date"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="seq_hr_asset_transfer_name" model="ir.sequence">
        <field name="name">Rec name</field>
        <field name="code">hr.asset.transfer.name.sequence</field>
        <field name="prefix">AT</field>
        <field name="padding">8</field>
        <field name="company_id" eval="False"></field>
    </record>

    <record id="hr_asset_transfer_form_view" model="ir.ui.view">
        <field name="name">hr.asset.transfer.form</field>
        <field name="model">hr.asset.transfer</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Back to draft" name="action_draft" type="object"
                            attrs="{'invisible': [('state', '!=', 'cancel')]}"/>
                    <button string="Send" name="action_wait_approve"
                            type="object" attrs="{'invisible':[('state', '!=', 'draft')]}"/>
                    <button string="Approve" name="action_approved" type="object"
                            attrs="{'invisible':[ ('state', '!=', 'wait_approve')]}"/>
                    <button string="Reject " name="%(forlife_stock.reject_asset_transfer_wizard)d"
                            type="action" attrs="{'invisible':[('state', '!=', 'wait_approve')]}"/>
                    <button string="Cancel" name="action_cancel"
                            type="object" attrs="{'invisible':[('state', 'in', ('draft','cancel'))]}" confirm="Do you really want to cancel?"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" required="1" readonly="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="employee_id" string="User" attrs="{'readonly': [('state', 'in', ('approved', 'done'))]}" />
                            <field name="department_id" string="Department" readonly="1"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="create_date" attrs="{'readonly': [('state', 'in', ('approved', 'done'))]}"/>
                            <field name="validate_date" readonly="1" attrs="{'invisible':[('state', '!=', 'approved')]}"/>
                            <field name="cancel_date" readonly="1" attrs="{'invisible':[('state', '!=', 'cancel')]}"/>
                        </group>
                    </group>
                    <group string="Note">
                        <field colspan="2" name="note" nolabel="1"/>
                    </group>
                    <notebook>
                        <page string="Product">
                            <field name="hr_asset_transfer_line_ids" widget="section_and_note_one2many" mode="tree"  required="1" attrs="{'readonly': [('state', 'in', ('approved', 'done'))]}">
                                <tree editable="bottom">
                                    <field name="asset_code"/>
                                    <field name="company_id" invisible="True"/>
                                    <field name="asset_code" domain="['|', ('company_id','=',False),('company_id','=',company_id)]"/>
                                    <field name="employee_from_id" readonly="1" force_save="1"/>
                                    <field name="employee_to_id"/>
                                    <field name="asset_location_from_id" readonly="1" force_save="1"/>
                                    <field name="asset_location_to_id"/>
                                    <field name="account_analytic_from_id" readonly="1" force_save="1"/>
                                    <field name="account_analytic_to_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="hr_asset_transfer_search_view" model="ir.ui.view">
        <field name="name">hr_asset_transfer_search_view</field>
        <field name="model">hr.asset.transfer</field>
        <field eval="10" name="priority"/>
        <field name="arch" type="xml">
            <search string="Asset Transfer Search">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="create_date"/>
                <field name="state"/>
            </search>
        </field>
    </record>

    <record id="hr_asset_transfer_action" model="ir.actions.act_window">
        <field name="name">Asset Transfer</field>
        <field name="res_model">hr.asset.transfer</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>