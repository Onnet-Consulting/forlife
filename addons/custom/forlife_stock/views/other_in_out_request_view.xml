<odoo>
    <record id="forlife_other_in_out_request_tree" model="ir.ui.view">
        <field name="name">forlife.other.in.out.request.tree</field>
        <field name="model">forlife.other.in.out.request</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Forlife Other In Out Request">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="type_other_id"/>
                <field name="location_from_id"/>
                <field name="location_dest_id"/>
                <field name="create_date"/>
                <field name="date_planned"/>
            </tree>
        </field>
    </record>

    <record id="forlife_other_in_out_request_form" model="ir.ui.view">
        <field name="name">forlife.other.in.out.request.form</field>
        <field name="model">forlife.other.in.out.request</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" placeholder="Name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="department_id"/>
                            <field name="type_other_id"/>
                            <field name="location_from_id"/>
                            <field name="location_dest_id"/>
                        </group>
                        <group>
                            <field name="create_date"/>
                            <field name="date_planned"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Product" name="product">
                            <field name="other_in_out_request_line_ids" widget="section_and_note_one2many" mode="tree">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="asset_id"/>
                                    <field name="date_expected"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="whs_from_id"/>
                                    <field name="reason_from_id"/>
                                    <field name="whs_to_id"/>
                                    <field name="reason_to_id"/>
                                    <field name="occasion_id"/>
                                    <field name="production_id"/>
                                    <field name="cost_center"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="forlife_other_in_out_request_action" model="ir.actions.act_window">
        <field name="name">Forlife Other In Out Request</field>
        <field name="res_model">forlife.other.in.out.request</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>