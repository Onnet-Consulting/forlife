<odoo>
    <record id="forlife_other_in_out_request_tree" model="ir.ui.view">
        <field name="name">forlife.other.in.out.request.tree</field>
        <field name="model">forlife.other.in.out.request</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Forlife Other In Out Request">
                <field name="name"/>
                <field name="user_id"/>
                <field name="department_id"/>
                <field name="type_other_id"/>
                <field name="location_id"/>
                <field name="location_dest_id"/>
                <field name="create_date"/>
                <field name="date_planned"/>
            </tree>
        </field>
    </record>

    <record id="seq_other_request_name" model="ir.sequence">
        <field name="name">Rec name</field>
        <field name="code">other.request.name.sequence</field>
        <field name="prefix">YCNK</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"></field>
    </record>


    <record id="forlife_other_in_out_request_form" model="ir.ui.view">
        <field name="name">forlife.other.in.out.request.form</field>
        <field name="model">forlife.other.in.out.request</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <button string="Trở về nháp" name="action_draft" type="object"
                            attrs="{'invisible': [('status', '!=', 'cancel')]}"/>
                    <button string="Gửi duyệt" name="action_wait_approve" class="oe_highlight"
                            type="object" attrs="{'invisible':[('status', '!=', 'draft')]}"/>
                    <button string="Phê duyệt" name="action_approve" type="object"
                            attrs="{'invisible':[ ('status', '!=', 'wait_approve')]}"/>
                    <button string="Hoàn thành" name="action_done" type="object"
                            attrs="{'invisible':[ ('status', '!=', 'approved')]}" confirm="Bạn có chắc chắn muốn hoàn thành phiếu yêu cầu nhập khác/xuất khác không?"/>
                    <button string="Từ chối" name="%(forlife_stock.reject_in_out_request_wizard)d"
                            type="action" attrs="{'invisible':[('status', '!=', 'wait_approve')]}"/>
                    <button string="Hủy" name="action_cancel"
                            type="object" attrs="{'invisible':[('status', 'in', ('draft','cancel','done','reject'))]}" confirm="Do you really want to cancel?"/>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_other_import_export" type="object" class="oe_stat_button" attrs="{'invisible': [('count_other_import_export', '=', 0)]}">
                            <div class="o_stat_info">
                                <field name="count_other_import_export" class="o_stat_value"/>
                                Phiếu NK/XK
                            </div>
                        </button>
                    </div>
                    <h1>
                        <field name="name" placeholder="Name" readonly="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="department_id" readonly="1" force_save="1"/>
                            <field name="type_other"/>
                            <field name="type_other_id" required="1"/>
                            <label for="location_id" string="Lý do nhập khác" attrs="{'invisible': [('type_other','=', 'other_export')]}"/>
                            <label for="location_dest_id" string="Địa điểm nguồn" attrs="{'invisible': [('type_other','=', 'other_import')]}"/>
                            <div>
                                <field name="location_id" attrs="{'invisible': [('type_other','=', 'other_export')], 'required': True}"/>
                                <field name="location_dest_id" attrs="{'invisible': [('type_other','=', 'other_import')], 'required': True}"/>
                            </div>
                            <label for="location_dest_id" string="Địa điểm đích" attrs="{'invisible': [('type_other','=', 'other_export')]}"/>
                            <label for="location_id" string="Lý do xuất khác" attrs="{'invisible': [('type_other','=', 'other_import')]}"/>
                            <div>
                                <field name="location_dest_id" attrs="{'invisible': [('type_other','=', 'other_export')], 'required': True}"/>
                                <field name="location_id" attrs="{'invisible': [('type_other','=', 'other_import')], 'required': True}"/>
                            </div>
                            <field name="quantity_match" invisible="1"/>
                        </group>
                        <group>
                            <field name="create_date"/>
                            <field name="date_planned"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Product" name="product">
                            <field name="other_in_out_request_line_ids" widget="section_and_note_one2many" mode="tree" context="{'default_whs_from_id': location_dest_id, 'default_reason_to_id': location_id, 'default_whs_to_id': location_dest_id, 'default_reason_from_id': location_id, 'default_type_other_id': type_other_id, 'default_date_expected': date_planned}">
                                <tree editable="bottom" class="width-hh">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="asset_id" attrs="{'column_invisible':[ ('parent.type_other', '=', 'other_import')]}"/>
                                    <field name="date_expected"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="type_other_id"/>
                                    <field name="whs_from_id" attrs="{'column_invisible':[ ('parent.type_other', '=', 'other_import')], 'required':[('parent.type_other', '=', 'other_import')]}"/>
                                    <field name="reason_from_id" attrs="{'column_invisible':[ ('parent.type_other', '=', 'other_import')], 'required':[('parent.type_other', '=', 'other_import')]}"/>
                                    <field name="reason_to_id" attrs="{'column_invisible':[ ('parent.type_other', '=', 'other_export')], 'required':[('parent.type_other', '=', 'other_export')]}"/>
                                    <field name="whs_to_id" attrs="{'column_invisible':[ ('parent.type_other', '=', 'other_export')], 'required':[('parent.type_other', '=', 'other_export')]}"/>
                                    <field name="occasion_id"/>
                                    <field name="production_id"/>
                                    <field name="cost_center"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="forlife_other_in_out_request_action" model="ir.actions.act_window">
        <field name="name">Forlife Other In Out Request</field>
        <field name="res_model">forlife.other.in.out.request</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>