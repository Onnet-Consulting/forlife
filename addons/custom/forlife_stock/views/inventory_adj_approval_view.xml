<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_inventory_tree_view" model="ir.ui.view">
        <field name="name">stock.inventory.tree</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="inventory_approved" invisible="1"/>
            </xpath>
            <xpath expr="//button[@name='action_inventory_history']" position="after">
                <button name="action_submit_to_manager" class="btn-primary" string="Phê duyệt"
                        type="object" attrs="{'invisible': ['|', ('inventory_approved', '=', True), ('inventory_quantity_set', '=', False)]}"/>
            </xpath>
            <xpath expr="//button[@name='action_apply_inventory']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('inventory_quantity_set', '=', False), ('inventory_approved', '=', False)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>