<odoo>
    <record id="transfer_stock_inventory_tree" model="ir.ui.view">
        <field name="name">transfer.stock.inventory.tree</field>
        <field name="model">transfer.stock.inventory</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Transfer Stock Inventory" default_order="create_date desc" limit="25">
                <field name="code" string="Reference"/>
                <field name="employee_id"/>
                <field name="location_id"/>
                <field name="note"/>
                <field name="create_date" string="Create Date"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="seq_transfer_stock_inventory_name" model="ir.sequence">
        <field name="name">Rec name</field>
        <field name="code">transfer.stock.inventory.name.sequence</field>
        <field name="prefix">TSI</field>
        <field name="padding">3</field>
        <field name="company_id" eval="False"></field>
    </record>

    <record id="transfer_stock_inventory_from_view" model="ir.ui.view">
        <field name="name">transfer.stock.inventory.from</field>
        <field name="model">transfer.stock.inventory</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Send" name="action_wait_confirm"
                            type="object" attrs="{'invisible':[('state', '!=', 'draft')]}"/>
                    <button string="Approve" name="action_approve"
                            type="object"
                            attrs="{'invisible':[('state', 'in', ('draft', 'cancel', 'reject', 'approved'))]}"
                            confirm="Do you really want to approve the balance sheet?"/>
                    <button string="Reject" name="%(forlife_stock.transfer_stock_inventory_wizard)d"
                            type="action"
                            attrs="{'invisible':[('state', 'in', ('draft', 'cancel', 'reject', 'approved'))]}"
                            context="{'click_button': 'reject'}"/>
                    <button string="Cancel" name="%(forlife_stock.transfer_stock_inventory_wizard)d"
                            type="action" attrs="{'invisible':[('state', 'in', ('draft', 'cancel', 'reject'))]}"
                            context="{'click_button': 'cancel'}"/>
                     <button string="Back to draft" name="action_draft"
                            type="object" attrs="{'invisible':[('state', '!=', 'wait_confirm')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <h1>
                        <field name="code" required="1" readonly="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="employee_id" string="User" required="1"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="location_id" string="Location" required="1"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="note" required="1"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="create_date" readonly="1" string="Create Date"/>
                            <field name="reason_cancel" readonly="1" attrs="{'invisible':[('state', '!=', 'cancel')]}"/>
                            <field name="reason_reject" readonly="1" attrs="{'invisible':[('state', '!=', 'reject')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Product">
                            <field name="transfer_stock_inventory_line_ids" widget="section_and_note_one2many"
                                   mode="tree" context="{'default_location_id': location_id}" required="1"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <tree editable="bottom">
                                    <field name="product_from_id" domain="[('detailed_type', '=', 'product')]"
                                           options="{'no_create': True, 'no_edit': True}" required="1"/>
                                    <field name="qty_out" required="1"/>
                                    <field name="uom_from_id" readonly="1" required="1"/>
                                    <field name="unit_price_from" force_save="1" readonly="1"/>
                                    <field name="total_out"/>
                                    <field name="location_id" required="1"/>
                                    <field name="mrp_production_from_id"/>
                                    <field name="product_to_id" domain="[('detailed_type', '=', 'product')]"
                                           options="{'no_create': True, 'no_edit': True}" required="1"/>
                                    <field name="qty_in" required="1" force_save="1"/>
                                    <field name="uom_to_id" readonly="1" required="1"/>
                                    <field name="unit_price_to" required="1"/>
                                    <field name="total_in"/>
                                    <field name="mrp_production_to_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="transfer_stock_inventory_search_view" model="ir.ui.view">
        <field name="name">transfer_stock_inventory_search_view</field>
        <field name="model">transfer.stock.inventory</field>
        <field eval="10" name="priority"/>
        <field name="arch" type="xml">
            <search string="Transfer Stock Inventory Search">
                <field name="code" string="Reference"/>
                <field name="employee_id"/>
                <field name="location_id"/>
                <field name="note"/>
                <field name="location_id"/>
                <field name="state"/>
                <field name="create_date"/>
            </search>
        </field>
    </record>
    <record id="transfer_stock_inventory_action" model="ir.actions.act_window">
        <field name="name">Transfer Stock Inventory</field>
        <field name="res_model">transfer.stock.inventory</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>