<odoo>
        <record id="reject_in_out_request_wizard_form" model="ir.ui.view">
            <field name="name">reject.in.out.request.form</field>
            <field name="model">reject.in.out.request</field>
            <field name="arch" type="xml">
                <form string="Reason">
                    <group class="oe_title">
                        <field name="reject_reason" />
                    </group>
                    <footer>
                        <button name="action_reject" string="Submit" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="reject_in_out_request_wizard" model="ir.actions.act_window">
            <field name="name">Reject Import/Export Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">reject.in.out.request</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="reject_in_out_request_wizard_form"/>
            <field name="target">new</field>
        </record>
</odoo>