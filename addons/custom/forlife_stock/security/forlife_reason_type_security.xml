<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.rule" id="forlife_reason_type_multi_company_rule">
            <field name="name">Reason Type multi-company</field>
            <field name="model_id" ref="model_forlife_reason_type"/>
            <field name="domain_force">['|', ('company_id','=',False), ('company_id', '=', allowed_company_ids[0])]</field>
        </record>

        <record model="ir.rule" id="forlife_other_in_out_request_multi_company_rule">
            <field name="name">Forlife Other In Out Request multi-company</field>
            <field name="model_id" ref="model_forlife_other_in_out_request"/>
            <field name="domain_force">['|', ('company_id','=',False), ('company_id', '=', allowed_company_ids[0])]</field>
        </record>

        <!-- Multi - Company Rules -->
        <record model="ir.rule" id="transfer_stock_inventory_company_rule">
            <field name="name">Transfer Stock Inventory: multi-company</field>
            <field name="model_id" ref="model_transfer_stock_inventory"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', '=', allowed_company_ids[0])]</field>
        </record>

        <!-- OVERRIDE Multi - Company Rule Locations-->
        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('module', '=', 'stock'), ('name', '=', 'stock_warehouse_comp_rule')]"/>
            </function>
            <value eval="{'noupdate': False}"/>
        </function>

        <record model="ir.rule" id="stock.stock_warehouse_comp_rule">
            <field name="name">Location multi-company</field>
            <field name="model_id" ref="stock.model_stock_location"/>
            <field name="domain_force"> ['|', ('company_id','=', allowed_company_ids[0]), ('company_id','=',False)]</field>
            <field name="active" eval="True"/>
        </record>

        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('module', '=', 'stock'), ('name', '=', 'stock_warehouse_comp_rule')]"/>
            </function>
            <value eval="{'noupdate': True}"/>
        </function>

    </data>
</odoo>
