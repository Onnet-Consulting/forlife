<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="split_product_form_view">
            <field name="name">split.product.form.view</field>
            <field name="model">split.product</field>
            <field name="arch" type="xml">
                <form string="Phân rã hàng hoá">
                    <header>
                        <button string="Generate" type="object" name="action_generate" class="btn btn-primary" states="new"/>
                        <button string="Approve" type="object" name="action_approve" class="btn btn-primary" states="in_progress"/>
                        <button string="Cancel" type="object" name="action_cancel" />
                        <button string="Back to draft" type="object" name="action_draft" />
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="user_create_id"/>
                                <field name="date_create"/>
                            </group>
                            <group>
                                <field name="user_approve_id" />
                                <field name="date_approved"/>
                            </group>
                        </group>
                    <group string="Ghi chú">
                        <field colspan="2" name="note" nolabel="1"/>
                    </group>
                    <notebook>
                        <page string="Sản phẩm chính">
                            <field name="split_product_line_ids" mode="tree">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_uom"/>
                                    <field name="warehouse_out_id"/>
                                    <field name="product_quantity_out"/>
                                    <field name="product_quantity_split"/>
                                    <field name="product_uom_split"/>
                                    <field name="warehouse_in_id"/>
                                    <field name="unit_price" invisible="True"/>
                                    <field name="value"/>
                                </tree>

                            </field>
                        </page>
                        <page string="Sản phẩm phân tách">
                            <field name="split_product_line_sub_ids" mode="tree">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_split"/>
                                    <field name="warehouse_in_id"/>
                                    <field name="quantity"/>
                                    <field name="product_uom_split"/>
                                    <field name="unit_price" invisible="True"/>
                                    <field name="value"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Tài khoản trung gian">
                            <group>
                                <group>
                                <field name="account_intermediary_id"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                    </sheet>
                </form>
            </field>
        </record>
                <record model="ir.ui.view" id="split_product_tree_view">
            <field name="name">split.product.tree.view</field>
            <field name="model">split.product</field>
            <field name="arch" type="xml">
                <tree string="Phân rã hàng hoá">
                    <field name="user_create_id"/>
                    <field name="user_approve_id"/>
                    <field name="date_approved"/>
                    <field name="note"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="split_product_action" model="ir.actions.act_window">
            <field name="name">Phân rã hàng hoá</field>
            <field name="res_model">split.product</field>
            <field name="view_mode">tree,form</field>
        </record>
         <menuitem id="split_product" parent="stock.menu_stock_warehouse_mgmt" action="forlife_splip_product.split_product_action" name="Phân rã hàng hoá" sequence="3"/>
    </data>
</odoo>