<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="generate_rule_view_form">
            <field name="name">generate.rule.form</field>
            <field name="model">generate.rule</field>
            <field name="arch" type="xml">
                <form string="Nguyên tắc sinh mã">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Đầu mã"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="type_product_id"/>
                                <field name="brand_id"/>
                                <field name="attribute_required_ids" widget="many2many_tags"/>
                                <field name="attribute_check_sku_ids" widget="many2many_tags"/>
                                <field name="attribute_check_barcode_ids" widget="many2many_tags"/>
                                <field name="required_field_ids" widget="many2many_tags"/>
                                <field name="sku_field_check_ids" widget="many2many_tags"/>
                                <field name="barcode_field_check_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="generate_rule_view_tree">
            <field name="name">generate.rule.view</field>
            <field name="model">generate.rule</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="generate_product_action" model="ir.actions.act_window">
            <field name="name">Sinh mã tự động</field>
            <field name="res_model">generate.rule</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>