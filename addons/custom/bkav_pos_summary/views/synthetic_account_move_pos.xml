<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="synthetic_account_move_pos_tree" model="ir.ui.view">
        <field name="name">synthetic.account.move.pos.tree</field>
        <field name="model">synthetic.account.move.pos</field>
        <field name="arch" type="xml">
            <tree create="true" edit="false">
                <field name="code"/>
                <field name="store_id"/>
                <field name="company_id"/>
                <field name="partner_id"/>
                <field name="invoice_date"/>
                <field name="data_compare_status"/>
            </tree>
        </field>
    </record>

    <record id="synthetic_account_move_pos_form" model="ir.ui.view">
        <field name="name">synthetic.account.move.pos.form</field>
        <field name="model">synthetic.account.move.pos</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="data_compare_status" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="store_id"/>
                            <field name="partner_id"/>
                            <field name="invoice_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="detail" string="Detail">
                            <field name="line_ids">
                                <tree editable="bottom" create="0">
                                    <field name="product_id"/>
                                    <!--field name="description"/-->
                                    <field name="barcode"/>
                                    <!--field name="account_id"/-->
                                    <field name="invoice_ids" widget="many2many_tags" readonly="1"/>
                                    <field name="quantity"/>
                                    <field name="adjusted_quantity"/>
                                    <field name="remaining_quantity"/>
                                    <field name="product_uom_id"/>
                                    <field name="price_unit"/>
                                     <field name="price_unit_incl"/>
                                    <field name="x_free_good"/>
<!--                                    <field name="discount"/>-->
<!--                                    <field name="discount_amount"/>-->
                                    <field name="tax_ids" widget="many2many_tags"/>
                                    <field name="tax_amount"/>
                                    <field name="price_subtotal"/>
                                    <field name="amount_total"/>
                                    <field name="summary_line_id"/>
                                    <field name="return_line_id"/>
                                </tree>
                            </field>
                        </page>
                        <page name="detail_adjusted" string="Detail Adjusted">
                            <field name="line_adjusted_ids">
                                <tree editable="bottom" create="0">
                                    <field name="product_id"/>
                                    <field name="adjusted_code"/>
                                    <field name="invoice_ids" widget="many2many_tags" readonly="1"/>
                                    <field name="quantity"/>
                                    <field name="product_uom_id"/>
                                    <field name="price_unit"/>
                                     <field name="price_unit_incl"/>
                                    <field name="x_free_good"/>
                                    <field name="tax_ids" widget="many2many_tags"/>
                                    <field name="tax_amount"/>
                                    <field name="price_subtotal"/>
                                    <field name="amount_total"/>
                                </tree>
                            </field>
                        </page>
                        <page name="HĐĐT" string="Invoices">
                            <button name="create_an_invoice" type="object" class="btn btn-primary"
                                attrs="{'invisible':['|',('exists_bkav', '!=', False),('invoice_guid', '!=', False)]}"
                                string="Create eInvoice" groups="account.group_account_invoice"/>
                            <button name="get_invoice_bkav" type="object" class="btn btn-primary"
                                attrs="{'invisible':[('invoice_guid', '=', False)]}"
                                string="Get eInvoice" groups="account.group_account_invoice"/>
                            <button name="action_download_view_e_invoice" type="object" class="btn btn-primary"
                                    string="Download eInvoice"/>
                            <group>
                                <field name="invoice_no" readonly="1"/>
                                <field name="invoice_state_e" readonly="1"/>
                                <field name="invoice_e_date" readonly="1"/>
                                <field name="invoice_serial" readonly="1"/>
                                <field name="invoice_guid" readonly="1"/>
                                <field name="exists_bkav" readonly="1"/>
                                <field name="invoice_form" readonly="1"/>
                            </group>
                        </page>
                        <page name="other_info" string="Other Information">
                            <group>
                                <field name="line_discount_ids">
                                    <tree editable="bottom" create="0">
                                        <field name="promotion_type"/>
                                        <field name="invoice_ids" widget="many2many_tags"/>
                                        <field name="price_unit"/>
                                        <field name="tax_ids" widget="many2many_tags"/>
                                        <field name="tax_amount"/>
                                        <field name="amount_total"/>
                                    </tree>
                                </field>
                            </group>
                            <group>
                                <field name="discount_ids" string="Tổng Chiêt khấu"> 
                                    <tree editable="bottom" create="0">
                                        <field name="promotion_type"/>
                                        <field name="bkav_synthetic_id"/>
                                        <field name="price_unit"/>
                                        <field name="tax_ids" widget="many2many_tags"/>
                                        <field name="tax_amount"/>
                                        <field name="amount_total"/>
                                        <field name="adjusted_amount_total"/>
                                        <field name="remaining_amount_total"/>
                                    </tree>
                                </field>
                            </group>
                            <group>
                                <field name="accumulate_point_ids"> 
                                    <tree editable="bottom" create="0">
                                        <field name="bkav_synthetic_id"/>
                                        <field name="total_point"/>
                                        <field name="adjusted_total_point"/>
                                        <field name="remaining_total_point"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="synthetic_account_move_pos_action" model="ir.actions.act_window">
        <field name="name">Hóa đơn bù trừ cuối ngày</field>
        <field name="res_model">synthetic.account.move.pos</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="synthetic_account_move_pos_menu"
              parent="bkav_connector.menu_master_bkav_pos"
              name="Hóa đơn bù trừ cuối ngày"
              action="synthetic_account_move_pos_action"
              sequence="30"/>
</odoo>