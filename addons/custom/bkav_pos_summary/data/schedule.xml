<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_cron_general_sales_invoice_to_bkav_end_day" model="ir.cron">
        <field name="name">Schedule: General POS invoice for BKAV at the end of the day</field>
        <field name="model_id" ref="model_summary_account_move_pos"/>
        <field name="state">code</field>
        <field name="code">model.cronjob_collect_invoice_to_bkav_end_day()</field>
        <field name="active" eval="True"/>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="DateTime.now().strftime('%Y-%m-%d 19:00:00')"/>
    </record>
    <record id="ir_cron_gget_invoice_to_bkav_end_day" model="ir.cron">
        <field name="name">Schedule: Get Invoices Info</field>
        <field name="model_id" ref="model_summary_account_move_pos"/>
        <field name="state">code</field>
        <field name="code">model.cronjob_get_all_invoice_info()</field>
        <field name="active" eval="True"/>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="DateTime.now().strftime('%Y-%m-%d 17:00:00')"/>
    </record>
</odoo>