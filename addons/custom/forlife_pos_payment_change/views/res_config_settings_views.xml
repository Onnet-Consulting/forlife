<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.point_of_sale</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="95"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pos_accounting_section']/div[4]/div[1]/div[2]">
                <div class="row">
                    <label string="Payment Change" for="pos_payment_change_journal_id" class="col-lg-3 o_light_label"/>
                    <field name="pos_payment_change_journal_id"
                        domain="[('company_id', '=', company_id), ('type', '=', 'general')]"
                        context="{'default_company_id': company_id, 'default_type': 'general'}"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>