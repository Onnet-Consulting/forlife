<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_product_form_view" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='detailed_type']" position="after">
                    <field name="department_id" attrs="{'invisible':[('detailed_type', '!=', 'asset')]}"/>
                    <field name="employee_id" attrs="{'invisible':[('detailed_type', '!=', 'asset')]}"/>
                    <field name="account_analytic_id" attrs="{'invisible':[('detailed_type', '!=', 'asset')]}"/>
                    <field name="asset_location_id" attrs="{'invisible':[('detailed_type', '!=', 'asset')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>