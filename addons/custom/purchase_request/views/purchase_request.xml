<odoo>

    <record id="purchase_request_action" model="ir.actions.act_window">
        <field name="name">Purchase Request</field>
        <field name="res_model">purchase.request</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_create_purchase_order" model="ir.actions.server">
        <field name="name">Create Sale Order</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_purchase_request"/>
        <field name="binding_model_id" ref="model_purchase_request"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.action_create_purchase_order()
        </field>
    </record>

    <record id="seq_request_purchase_name" model="ir.sequence">
        <field name="name">Rec name</field>
        <field name="code">purchase.request.name.sequence</field>
        <field name="prefix">PR</field>
        <field name="padding">3</field>
        <field name="company_id" eval="False"></field>
    </record>

    <record id="purchase_request_tree" model="ir.ui.view">
            <field name="name">purchase.request.tree</field>
            <field name="model">purchase.request</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <tree string="Purchase Request">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="request_date"/>
                    <field name="date_planned"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

    <record id="purchase_request_from_view" model="ir.ui.view">
        <field name="name">purchase.request.from</field>
        <field name="model">purchase.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Submit for Approval" name="submit_to_Approved_action"
                            type="object" attrs="{'invisible':[('state', '!=', 'draft')]}"/>
                    <button string="Cancel" name="cancel_action" type="object"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button string="Approve" name="approve_action" type="object"
                            attrs="{'invisible':[ ('state', '!=', 'open')]}"/>
                    <button string="Reject" name="%(purchase_request.reject_request_wizard)d"
                            type="action" attrs="{'invisible':[ ('state', '!=', 'open')]}"/>
                    <button string="Reset to draft" name="reset_action" type="object"
                            attrs="{'invisible': [('state', '!=', 'cancel')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="orders_smart_button" string="Orders"
                                icon="fa-calendar">
                        </button>
                    </div>
                    <h1>
                        <field name="name" attrs="{'readonly': [('state', 'in', ('cancel', 'reject', 'approved'))]}"/>
                    </h1>
                    <group>
                        <group>
                            <field name="employee_id" string="Employee"
                                   attrs="{'readonly': [('state', 'in', ('cancel', 'reject', 'approved'))]}"/>
                            <field name="department_id"
                                   attrs="{'readonly': [('state', 'in', ('cancel', 'reject', 'approved'))]}"/>
                        </group>
                        <group>
                            <field name="request_date"
                                   attrs="{'readonly': [('state', 'in', ('cancel', 'reject', 'approved'))]}"/>
                            <field name="date_planned"
                                   attrs="{'readonly': [('state', 'in', ('cancel', 'reject', 'approved'))]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lines">
                            <field name="order_lines" widget="section_and_note_one2many" mode="tree,kanban"
                                   attrs="{'readonly': [('state', 'in', ('cancel', 'reject', 'approved'))]}">
                                <tree editable="bottom">
                                    <field name="product_type" invisible="1"/>
                                    <field name="product_id"/>
                                    <field name="asset_description" attrs="{'readonly': [('product_type', '=', 'asset')]}"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="secondary_quantity"/>
                                    <field name="vendor_code"/>
                                    <field name="production_id"/>
                                    <field name="date_planned" optional="hide"/>
                                    <field name="request_date" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <notebook colspan="4">
                        <page string="Approval Logs" name="approval_logs">
                            <field name="approval_logs_ids" mode="kanban" readonly="1">
                                <kanban>
                                    <field name="request_approved_date"/>
                                    <field name="approval_user_id"/>
                                    <field name="function"/>
                                    <field name="note"/>
                                    <field name="state"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div t-attf-class="oe_kanban_card">
                                                <div class="o_kanban_record_top">
                                                    <div class="o_kanban_record_headings mt4 text-muted">
                                                        <field name="state"/>
                                                    </div>
                                                    <div class="text-muted">
                                                        <field name="request_approved_date"/>
                                                    </div>
                                                </div>
                                                <div>
                                                    <div class="approval_logs_main_text">
                                                        <field name="function"/>
                                                    </div>
                                                    <div class="approval_logs_main_text">
                                                        <field name="approval_user_id"/>
                                                    </div>
                                                    <div class="approval_logs_note">
                                                        <div>Note:</div>
                                                        <field name="note"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>