<odoo>

    <record id="purchase_request_action" model="ir.actions.act_window">
        <field name="name">Purchase Request</field>
        <field name="res_model">purchase.request</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('company_id','in',allowed_company_ids)]</field>
    </record>

    <record id="action_create_purchase_order" model="ir.actions.server">
        <field name="name">Tạo đơn mua hàng</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_purchase_request"/>
        <field name="binding_model_id" ref="model_purchase_request"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.wizard_create_purchase_orders()
        </field>
    </record>

    <record id="seq_request_purchase_name" model="ir.sequence">
        <field name="name">Rec name</field>
        <field name="code">purchase.request.name.sequence</field>
        <field name="prefix">PR</field>
        <field name="padding">3</field>
        <field name="company_id" eval="False"></field>
    </record>

    <record id="purchase_request_tree" model="ir.ui.view">
            <field name="name">purchase.request.tree</field>
            <field name="model">purchase.request</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <tree string="Purchase Request" default_order="create_date desc" limit="25">
                    <header>
                        <button string="TẠO ĐƠN MUA HÀNG" name="%(purchase_request.action_select_type_wizard)d" type="action"/>
                    </header>
                     <field name="name" string="Reference" decoration-bf="1"/>
                     <field name="total_qty" optional="show"/>
                    <field name="user_id"/>
                    <field name="department_id" force_save="1"/>
                    <field name="request_date" align="center"/>
                    <field name="x_receiver_id"/>
                    <field name="attention"/>
                    <field name="date_planned" align="center"/>
                    <field name="state" widget="badge" decoration-success="state == 'close'" decoration-info="state == 'approved'"/>
                </tree>
            </field>
        </record>

    <record id="purchase_request_from_view" model="ir.ui.view">
        <field name="name">purchase.request.from</field>
        <field name="model">purchase.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Gửi duyệt" name="submit_action"
                            type="object" attrs="{'invisible':[('state', '!=', 'draft')]}"/>
                    <button string="Approve" name="approve_action" type="object"
                            attrs="{'invisible':[ ('state', '!=', 'confirm')]}"
                            groups="purchase_request.admin_purchase_request_group"/>
                    <button string="Reject" name="%(purchase_request.reject_request_wizard)d"
                            type="action" attrs="{'invisible':[ ('state', '!=', 'confirm')]}"/>
                    <button string="Cancel" name="%(purchase_request.action_cancel_request_wizard)d"
                            type="action" attrs="{'invisible': [('state', 'in', ('approved', 'close'))]}"/>
                    <button string="Close" name="close_action" type="object"
                            attrs="{'invisible': [('state', '!=', 'approved')]}" confirm="Yêu cầu mua hàng chưa được đặt hàng, bạn có muốn đóng phiếu này không?"/>
                    <button string="Set to draft" name="set_to_draft" type="object"
                            attrs="{'invisible': [('state', 'not in', ('reject', 'cancel'))]}"/>
                    <field name="state" widget="statusbar"/>
                        <button string="TẠO ĐƠN MUA HÀNG" name="%(purchase_request.action_select_type_wizard)d" type="action" attrs="{'invisible': [('state', '!=', 'approved')]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" attrs="{'invisible': [('is_check_button_orders_smart_button', '=', False)]}">
                        <button class="oe_stat_button" type="object" name="orders_smart_button" string="Orders"
                                icon="fa-calendar">
                        </button>
                    </div>
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="is_check_button_orders_smart_button" invisible="1"/>
                            <field name="user_id"
                                   attrs="{'readonly': [('state', 'in', ('cancel', 'confirm', 'reject', 'approved', 'close'))]}" required="1"/>
                            <field name="department_id" readonly="1" force_save="1"/>
                            <field name="occasion_code_id"
                                   attrs="{'readonly': [('state', 'in', ('cancel', 'confirm', 'reject', 'approved', 'close'))]}"/>
                            <field name="production_id"
                                   attrs="{'readonly': [('state', 'in', ('cancel', 'confirm', 'reject', 'approved', 'close'))]}"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="account_analytic_id"
                                   attrs="{'readonly': [('state', 'in', ('cancel', 'confirm', 'reject', 'approved', 'close'))]}"/>
                            <field name="request_date"
                                   attrs="{'readonly': [('state', 'in', ('cancel', 'confirm', 'reject', 'approved', 'close'))]}" required="1"/>
                            <field name="date_planned"
                                   attrs="{'readonly': [('state', 'in', ('cancel', 'confirm', 'reject', 'approved', 'close'))]}" required="1"/>
                        </group>
                    </group>
                    <group string="Receiver's information">
                        <group>
                             <field name="use_department_id" options="{'no_create': 1, 'no_open': 1}"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="location_id" options="{'no_create': 1, 'no_open': 1}"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="attention" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                           <field name="x_receiver_id" attrs="{'readonly': [('state', '!=', 'draft')]}"
                                   options="{'no_create': 1, 'no_open': 1}"/>
                            <field name="delivery_address" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Product">
                            <field name="order_lines" widget="section_and_note_one2many" mode="tree,kanban"
                                   attrs="{'readonly': [('state', 'in', ('cancel', 'confirm', 'reject', 'approved', 'close'))]}"
                                   context="{
                                   'default_request_date': request_date,'default_state': state, 'default_date_planned': date_planned,
                                   'default_location_id': location_id,
                                   'default_production_id': production_id, 'default_account_analytic_id': account_analytic_id}">
                                <tree editable="bottom" decoration-muted="is_no_more_quantity == True" class="width-hh">
                                    <field name="company_id" invisible="1"/>
                                    <field name="is_close" string="Đã Đóng"/>
                                    <field name="product_id"/>
                                    <field name="state" invisible="1"/>
                                    <field name="description" optional="show" invisible="1"/>
                                    <field name="purchase_product_type" optional="show" string="Loại hàng hóa"/>
                                    <field name="asset_code" attrs="{'invisible': [('purchase_product_type', 'not in', ('service', 'asset'))]}"/>
                                    <field name="asset_description" attrs="{'readonly': [('purchase_product_type', 'not in', ('service', 'asset'))]}"/>
                                    <field name="product_uom" optional="show" readonly="0" string="ĐVT"/>
                                    <field name="purchase_quantity" string="Số lượng yêu cầu" optional="show"/>
                                    <field name="location_id" optional="show"/>
                                    <field name="exchange_quantity" optional="show" string="Tỷ lệ quy đổi" invisible="1"/>
                                    <field name="product_qty" invisible="1" force_save="1"/>
                                    <field name="vendor_code" optional="show" context="{'form': 'purchase_request_from_view'}"/>
                                    <field name="currency_id" optional="show" invisible="1" force_save="1"/>
                                    <field name="production_id" optional="show"/>
                                    <field name="account_analytic_id" optional="show"/>
                                    <field name="request_date" optional="show" readonly="1" force_save="1"/>
                                    <field name="date_planned" optional="show" readonly="0" force_save="1"/>
                                    <field name="order_quantity" optional="show"/>
                                    <field name="is_no_more_quantity" invisible="1"/>
                                    <field name="is_all_line" invisible="1"/>
                                    <field name="purchase_order_line_ids" widget="many2many_tags" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="purchase_request_search_view" model="ir.ui.view">
        <field name="name">purchase_request_search_view</field>
        <field name="model">purchase.request</field>
        <field eval="10" name="priority"/>
        <field name="arch" type="xml">
            <search string="Lead Search">
                <field name="name" string="Reference"/>
                <field name="user_id"/>
                <field name="department_id"/>
                <field name="request_date"/>
                <field name="date_planned"/>
                <field name="state"/>
            </search>
        </field>
    </record>
</odoo>