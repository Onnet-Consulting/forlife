<?xml version="1.0"?>
<odoo>
    <record id="select_type_wizard_from" model="ir.ui.view">
        <field name="name">select.type.po.form</field>
        <field name="model">select.type.po</field>
        <field name="arch" type="xml">
            <form string="Chọn type PO">
                <group>
                    <field name="type_po"/>
                </group>
                <footer>
                    <button name="select_type_purchase_order" string="Đồng ý" type="object" class="btn-primary"/>
                    <button name="cancel" string="Từ chối" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_select_type_wizard" model="ir.actions.act_window">
        <field name="name">Chọn loại đơn hàng mua</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">select.type.po</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="select_type_wizard_from"/>
        <field name="target">new</field>
    </record>
</odoo>
