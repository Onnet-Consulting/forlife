<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_view_inventory_form" model="ir.ui.view">
            <field name="name">stock.inventory.form.inherit</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock_inventory.view_inventory_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook//page//field[@name='line_ids']" position="before">
                    <field name="file_binary_name" invisible="1"/>
                    <field string="Tải lên tệp tin" name="file_binary" filename="file_binary_name"/>
                    <button name="import_file_1st" string="Import lần 1" class="oe_highlight" type="object"
                            attrs="{'invisible': ['|', ('file_binary', '=', False), ('state', '!=', 'first_inv')]}"/>
                    <button name="import_file_2nd" string="Import lần 2" class="oe_highlight" type="object"
                            attrs="{'invisible': ['|', ('file_binary', '=', False), ('state', '!=', 'second_inv')]}"/>
                </xpath>

            </field>
        </record>


    </data>
</odoo>