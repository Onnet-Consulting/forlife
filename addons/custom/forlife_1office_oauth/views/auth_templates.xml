<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="forlife_1office_oauth.login_1office_layout" name="1Office Oauth">
        <t t-call-assets="web.assets_frontend" t-js="false"/>
        <t t-call="web.layout">
            <t t-set="disable_footer">1</t>
            <div class="o_home_menu_background h-100" style="padding-top: 10em;">
                <form class="oe_login_form mt-0 oe_website_login_container" role="form" t-attf-action="/web/login/1office" method="post"
                      onsubmit="this.action = '/web/login/1office' + location.hash"
                      style="font-family: 'Segoe UI', sans-serif;
                            padding: 15px 25px;
                            background: #fff8f8;
                            border-radius: 4px;
                            max-width: 350px !important;">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                    <div class="mb-3" t-if="databases and len(databases) &gt; 1">
                        <label for="db" class="col-form-label">Database</label>
                        <div t-attf-class="input-group {{'input-group-sm' if form_small else ''}}">
                            <input type="text" name="db" t-att-value="request.db" id="db"
                                   t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                   required="required" readonly="readonly"/>
                            <a role="button" href="/web/database/selector" class="btn btn-secondary">Select
                                <i class="fa fa-database" role="img" aria-label="Database" title="Database"></i>
                            </a>
                        </div>
                    </div>

                    <h4 style="font-weight: bold;padding-bottom: 1.1rem;color: teal;">Sử dụng tài khoản 1Office</h4>

                    <div class="mb-3 field-login">
                        <label for="login" class="form-label">Tên đăng nhập</label>
                        <input type="text" placeholder="Tên đăng nhập" name="login" t-att-value="login" id="login"
                               t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required"
                               autofocus="autofocus" autocapitalize="off"/>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Mật khẩu</label>
                        <input type="password" placeholder="Mật khẩu" name="password" id="password"
                               t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required"
                               autocomplete="current-password" t-att-autofocus="'autofocus' if login else None"
                               maxlength="4096"/>
                    </div>

                    <p class="alert alert-danger" t-if="error" role="alert">
                        <t t-esc="error"/>
                    </p>
                    <p class="alert alert-success" t-if="message" role="status">
                        <t t-esc="message"/>
                    </p>

                    <div t-attf-class="clearfix oe_login_buttons text-center gap-1 d-grid mb-1 {{'pt-2' if form_small else 'pt-3'}}">
                        <button type="submit" class="btn btn-primary">Đăng nhập</button>
                        <div class="justify-content-between mt-2 d-flex small text-danger">
                            <a t-attf-href="/web/login">Đăng nhập bằng tài khoản thường</a>
                        </div>
                    </div>

                    <input type="hidden" name="redirect" t-att-value="redirect"/>
                </form>
            </div>
        </t>
    </template>

</odoo>