<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="redis_host_form" model="ir.ui.view">
        <field name="name">redis.host</field>
        <field name="model">redis.host</field>
        <field name="arch" type="xml">
            <form string="Redis Instance">
                <sheet>
                    <group>
                        <group>
                            <field name="host"/>
                            <field name="username"/>
                            <field name="password"/>
                            <field name="port"/>
                            <field name="db"/>
                        </group>
                        <group>
                            <field name="key_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="redis_host_tree" model="ir.ui.view">
        <field name="name">Redis Instances</field>
        <field name="model">redis.host</field>
        <field name="arch" type="xml">
            <tree>
                <field name="host"/>
                <field name="username"/>
            </tree>
        </field>
    </record>

    <record id="redis_host_action" model="ir.actions.act_window">
        <field name="name">Redis Hosts</field>
        <field name="res_model">redis.host</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="integration_redis_menu"
              parent="base.menu_custom"
              name="Redis Integration"
              sequence="1"/>

    <menuitem id="redis_host_menu"
              action="redis_host_action"
              parent="integration_redis_menu"
              name="Redis Hosts"
              sequence="1"/>
</odoo>