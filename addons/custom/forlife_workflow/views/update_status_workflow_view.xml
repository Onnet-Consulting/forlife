<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="update_status_workflow_view_tree" model="ir.ui.view">
            <field name="name">update_status_workflow_view_tree</field>
            <field name="model">update.status.workflow</field>
            <field name="arch" type="xml">
                <tree string="update_status_workflow_tree">
                    <field name="document_code"/>
                    <field name="approval_level"/>
                    <field name="user_id"/>
                    <field name="round"/>
                    <field name="result"/>
                </tree>
            </field>
        </record>

        <record id="update_status_workflow_view_form" model="ir.ui.view">
            <field name="name">update_status_workflow_view_form</field>
            <field name="model">update.status.workflow</field>
            <field name="arch" type="xml">
                <form string="update_status_workflow_form">
                    <sheet>
                        <group>
                            <field name="document_code"/>
                            <field name="approval_level"/>
                            <field name="user_id"/>
                            <field name="round"/>
                            <field name="result"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="update_status_workflow_action" model="ir.actions.act_window">
            <field name="name">Ghi nhận cập nhật trạng thái</field>
            <field name="res_model">update.status.workflow</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>