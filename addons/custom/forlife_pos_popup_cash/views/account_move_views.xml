<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_move_view_tree_inherit" model="ir.ui.view">
            <field name="name">account.move.tree.view.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_tree"/>
            <field name="arch" type="xml">
                <field name="amount_total_signed" position="before">
                    <field name="suitable_journal_ids" invisible="1"/>
                    <field name="pos_adjusted_amount" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                </field>
                <field name="company_id" position="attributes">
                    <attribute name="groups"></attribute>
                    <attribute name="readonly">1</attribute>
                </field>
                <field name="journal_id" position="attributes">
                    <attribute name="readonly">1</attribute>
                </field>
                <xpath expr="//tree" position="attributes">
                    <attribute name="multi_edit">1</attribute>
                </xpath>
            </field>
        </record>
        <record id="account_move_view_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form.view.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="invoice_vendor_bill_id" position="after">
                    <field name="pos_transfer_cash_2office" invisible="1"/>
                    <field name="pos_trans_diff_move_id" attrs="{'invisible': [('pos_trans_diff_move_id', '=', False)]}"/>
                    <field name="pos_orig_trans_move_id" attrs="{'invisible': [('pos_orig_trans_move_id', '=', False)]}"/>
                    <field name="pos_orig_amount"
                           widget='monetary' options="{'currency_field': 'currency_id'}"
                           attrs="{'invisible': [('pos_transfer_cash_2office', '=', False)]}"/>
                    <field name="pos_adjusted_amount"
                           widget='monetary' options="{'currency_field': 'currency_id'}"
                           attrs="{'invisible': [('pos_transfer_cash_2office', '=', False)], 'readonly': [('state', '!=', 'draft')]}"/>
                </field>
                <xpath expr="//page[@id='aml_tab']/field[@name='line_ids']/tree/field[@name='credit']" position="after">
                    <field name="expense_label_id" optional="show"
                           attrs="{'column_invisible': [('parent.move_type', '!=', 'entry')]}"/>
                </xpath>
            </field>
        </record>
        <record id="account_move_view_filter_inherit" model="ir.ui.view">
            <field name="name">account.move.filter.view.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_move_filter"/>
            <field name="arch" type="xml">
                <filter name="to_check" position="after">
                    <separator/>
                    <filter string="POS Cash Transfer" name="pos_cash_transfer"
                            domain="[('pos_transfer_cash_2office', '=', True)]"/>
                </filter>
                <field name="journal_id" position="after">
                    <field name="pos_trans_diff_move_id"/>
                </field>
            </field>
        </record>
    </data>
</odoo>