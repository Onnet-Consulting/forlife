<?xml version="1.0" encoding="UTF-8" ?>

<t t-inherit="point_of_sale.CashMovePopup" t-inherit-mode="extension">
    <xpath expr="//div//main[hasclass('body')]//div[hasclass('cash-move')]" position="inside">
        <div>
            <div>
                <span style="float: left; font-size:14px;margin-top:5px;">Mã phiếu</span>
                <span style="font-size:14px;margin-right: 149px;" id="type_store">Loại</span>
                <span style="float: right;display:none;font-size:14px;margin-top: 3px;margin-right: 80px;" id="shop_label">Cửa hàng</span>
            </div>
            <div>
                <div style="margin-top:10px;font-size:14px;">
                    <select name="reference" t-model="state.reference" id="ref"
                            t-on-click="onchangeRef"
                            style="float:left;border: 1px solid black;width:141px;" class="details">
                        <option t-att-value="0">--Chọn mã phiếu--</option>
                        <t t-foreach="env.pos.bank_statement" t-as="bank" t-key="bank.id">
                            <option t-att-value="bank.id">
                                <t t-esc="bank.name"/> <br/>(<span t-esc="bank.amount"/> <span class="currency" t-esc="env.pos.currency.symbol" />)
                            </option>
                        </t>
                    </select>
                </div>
                <div style="margin-bottom:-1px;font-size:14px;">
                    <select style="margin-left: -119px;border: 1px solid black;margin-bottom:2px;" name="type_tranfer" t-model="state.type_tranfer" id="type"
                            t-on-click="checked_shop" class="details">
                        <option
                                t-att-selected="0 === value"
                                t-att-value="0"
                        >--Chọn loại chuyển--
                        </option>
                        <option value="1">Văn phòng</option>
                        <option value="2">Cửa hàng</option>
                        <option value="3">Chênh lệch khác</option>
                        <option value="4">Mua chi phí</option>
                    </select>
                </div>
                <div>
                    <select name="shop" t-model="state.shop" id="shop"
                            style="float:right;width:138px; display:none;margin-top: -20px;border: 1px solid black;font-size:14px;" class="details">
                        <option t-att-value="0">--Chọn cửa hàng--</option>
                        <t t-foreach="env.pos.pos_customizes" t-as="pos" t-key="pos.id">
                            <option t-att-value="pos.id">
                                <t t-esc="pos.name"/>
                            </option>
                        </t>
                    </select>
                </div>

            </div>
        </div>
        <div style="display: flex; flex-direction: column; margin-top:10px;">
            <div>
                <span style="float: left; font-size:14px; display:none" id="expense_label_label">Khoản mục dòng tiền</span>
            </div>
            <div>
                <div style="margin-top:10px;font-size:14px;">
                    <select name="expense_label" t-model="state.expense_label" id="expense_label" class="details"
                        style="float: left; display: none; border: 1px solid black; font-size: 14px; max-width: 100%">
                        <option t-att-value="0">--Chọn khoản mục dòng tiền--</option>
                        <t t-foreach="env.pos.pos_expense_labels" t-as="expense" t-key="expense.id">
                            <option t-att-value="expense.id">
                                <t t-esc="expense.name"/>
                            </option>
                        </t>
                    </select>
                </div>
            </div>
        </div>
    </xpath>
</t>
