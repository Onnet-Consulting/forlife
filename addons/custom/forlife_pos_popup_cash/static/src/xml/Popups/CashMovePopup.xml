<?xml version="1.0" encoding="UTF-8" ?>

<t t-inherit="point_of_sale.CashMovePopup" t-inherit-mode="extension">
    <xpath expr="//div//main[hasclass('body')]//div[hasclass('cash-move')]" position="inside">
        <div>
            <div>
                <span style="float: left;margin-left: 20px;">Mã phiếu</span>
                <span>Loại</span>
                <span style="float: right;margin-right: 20px;" id="shop_label">Cửa hàng</span>
            </div>
            <div>
                <div style="margin-top:10px;">
                    <select name="reference" t-model="state.reference" id="ref" style="float:left;border: 1px solid black;width:141px;margin-top:3px;" class="details">
                        <option>--Chọn mã phiếu--</option>
                        <t t-foreach="env.pos.bank_statement" t-as="bank" t-key="bank.id">
                            <option t-att-value="bank.id">
                                <t t-esc="bank.name"/>
                            </option>
                        </t>
                    </select>
                </div>
                <div style="margin-bottom:-1px;">
                    <select style="margin-left: -119px;border: 1px solid black;margin-bottom:2px;" name="type_tranfer" t-model="state.type_tranfer" id="type"
                            t-on-click="checked_shop" class="details">
                        <option
                                t-att-selected="false === value"
                                t-att-value="false"
                        >--Chọn loại chuyển--
                        </option>
                        <option value="1">Văn phòng</option>
                        <option value="2">Cửa hàng</option>
                        <option value="3">Chênh lệch khác</option>
                    </select>
                </div>
                <div>
                    <select name="shop" t-model="state.shop" id="shop"
                            style="float:right; display:none;margin-top: -20px;border: 1px solid black;" class="details">
                        <option>--Chọn cửa hàng--</option>
                        <t t-foreach="env.pos.pos_customizes" t-as="pos" t-key="pos.id">
                            <option t-att-value="pos.id">
                                <t t-esc="pos.name"/>
                            </option>
                        </t>
                    </select>
                </div>

            </div>
        </div>
    </xpath>
</t>
