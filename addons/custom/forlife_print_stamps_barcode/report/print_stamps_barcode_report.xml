<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="print_stamps_barcode_report" model="ir.actions.report">
        <field name="name">Print Stamps Barcode</field>
        <field name="model">print.stamps.barcode</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">forlife_print_stamps_barcode.print_stamps_barcode</field>
        <field name="report_file">forlife_print_stamps_barcode.print_stamps_barcode</field>
        <field name="print_report_name">'Print Barcode'</field>
        <field name="binding_model_id" ref="model_print_stamps_barcode"/>
        <field name="binding_type">report</field>
    </record>

    <template id="print_stamps_barcode">
        <t t-call="web.basic_layout">
            <div class="page">
                <t t-foreach="docs" t-as="o">
                    <t t-set="products" t-value="o.get_product_list()"/>
                    <div class="page">
                        <div class="oe_structure"/>
                        <style>
                            .page {
                            margin-top: 0px;
                            font-family: Times New Roman;
                            font-size: 8px;
                            page-break-before: always;
                            }
                            table {
                            width: 100%;
                            }
                            td.detail {
                            display: inline-block;
                            min-height: 88px;
                            max-height: 88px;
                            min-width: 209px;
                            max-width: 209px;
                            padding-top: 5px;
                            padding-right: 5px;
                            padding-bottom: 5px;
                            padding-left: 5px;
                            }
                            .view-center {
                            text-align: center;
                            }
                            .view-right {
                            text-align: right;
                            }
                        </style>
                        <table class="table">
                            <col style="width:25%"/>
                            <col style="width:25%"/>
                            <col style="width:25%"/>
                            <col style="width:25%"/>
                            <tbody>
                                <t t-foreach="10" t-as="row">
                                    <tr>
                                        <t t-foreach="4" t-as="col">
                                            <t t-set="p" t-value="products[(col + 1) + 4 * row - 1]"/>
                                            <td class="detail">
                                                <t t-if="p[0]">
                                                    <table>
                                                        <col style="50%"/>
                                                        <col style="50%"/>
                                                        <tbody>
                                                            <tr>
                                                                <td colspan="2">
                                                                    <t t-esc="p[0].product_tmpl_id.name"/>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td colspan="2" class="view-center">
                                                                    <img t-att-src="'/report/barcode/Code128/'+p[0].barcode" style="width:100%;height:14%;" alt="Barcode"/>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td colspan="2" class="view-center">
                                                                    <t t-esc="p[0].barcode"/>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>Size:
                                                                    <t t-esc="p[0].product_template_attribute_value_ids.filtered(lambda f: f.attribute_id.name == 'Kích cỡ').name"/>
                                                                </td>
                                                                <td class="view-right">Màu:
                                                                    <span style="text-align: right;" t-esc="p[0].product_template_attribute_value_ids.filtered(lambda f: f.attribute_id.name == 'Màu sắc').name"/>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td colspan="2" class="text-center">Giá:
                                                                    <t t-esc="'{0:,.0f}'.format(p[0].lst_price)"/>
                                                                    vnđ
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td colspan="2">
                                                                    <span style="text-align: left;">Xuất xứ:
                                                                        <t t-esc="p[0].product_template_attribute_value_ids.filtered(lambda f: f.attribute_id.name == 'Xuất xứ').name"/>
                                                                    </span>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </t>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>
