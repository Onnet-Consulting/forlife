<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="bravo_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="1001"/>
        <field name="arch" type="xml">
            <form string="Settings" class="oe_form_configuration o_base_settings" js_class="base_settings">
                <div class="o_setting_containers">
                    <div class="col-12 col-lg-6 o_setting_box" id="mssql_config">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">SQL Server Integration (MSSQL)</span>
                            <div class="content-group mt16">
                                <div class="text-muted mb8">
                                    SQL Server database connection parameters
                                </div>
                                <label for="mssql_driver" class="col-lg-3 o_light_label"/>
                                <field name="mssql_driver"/>
                            </div>
                            <div class="content-group">
                                <label for="mssql_host" class="col-lg-3 o_light_label"/>
                                <field name="mssql_host"/>
                            </div>
                            <div class="content-group">
                                <label for="mssql_database" class="col-lg-3 o_light_label"/>
                                <field name="mssql_database"/>
                            </div>
                            <div class="content-group">
                                <label for="mssql_username" class="col-lg-3 o_light_label"/>
                                <field name="mssql_username"/>
                            </div>
                            <div class="content-group">
                                <label for="mssql_password" class="col-lg-3 o_light_label"/>
                                <field name="mssql_password" password="True"/>
                            </div>
                            <div class="content-group">
                                <label for="integration_bravo_up" class="col-lg-3 o_light_label"/>
                                <field name="integration_bravo_up"/>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </field>
    </record>

    <record id="sql_server_database_config_action" model="ir.actions.act_window">
        <field name="name">Cấu hình đồng bộ</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="forlife_bravo_integration.bravo_res_config_settings_view_form"/>
        <field name="target">main</field>
    </record>

    <menuitem id="sql_server_database_config_menu" parent="forlife_base.odoo_integration_bravo" action="sql_server_database_config_action" sequence="10"/>

    <record id="sync_master_data_for_bravo_view_form" model="ir.ui.view">
        <field name="name">sync_master_data_for_bravo_view_form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="1005"/>
        <field name="arch" type="xml">
            <form string="sync_master_data_for_bravo_form">
                <sheet>
                    <group>
                        <field name="model_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="record_per_job"/>
                        <field name="with_multi_company"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Thực hiện" type="object" name="sync_master_data_for_bravo" class="btn-primary"/>
                    <button string="Hủy" special="cancel" data-hotkey="z" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="sync_master_data_for_bravo_action" model="ir.actions.act_window">
        <field name="name">Đồng bộ master data thủ công</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="forlife_bravo_integration.sync_master_data_for_bravo_view_form"/>
        <field name="target">new</field>
    </record>

    <menuitem id="sync_all_master_data_for_bravo_menu" parent="forlife_base.odoo_integration_bravo" action="sync_master_data_for_bravo_action" sequence="20"/>

</odoo>