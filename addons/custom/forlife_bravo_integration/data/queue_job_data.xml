<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- FIXME: add capacity for Bravo channel -->
        <record id="channel_bravo" model="queue.job.channel">
            <field name="name">Bravo</field>
            <field name="parent_id" ref="queue_job.channel_root"/>
        </record>

        <record id="job_function_insert_normal_data" model="queue.job.function">
            <field name="model_id" ref="forlife_bravo_integration.model_bravo_model"/>
            <field name="method">bravo_insert</field>
            <field name="channel_id" ref="channel_bravo"/>
            <field name="retry_pattern" eval="{1: 10}"/>
        </record>

        <record id="job_function_insert_data" model="queue.job.function">
            <field name="model_id" ref="forlife_bravo_integration.model_bravo_model"/>
            <field name="method">bravo_insert_with_check_existing</field>
            <field name="channel_id" ref="channel_bravo"/>
            <field name="retry_pattern" eval="{1: 10}"/>
        </record>

        <record id="job_function_update_data" model="queue.job.function">
            <field name="model_id" ref="forlife_bravo_integration.model_bravo_model"/>
            <field name="method">bravo_update</field>
            <field name="channel_id" ref="channel_bravo"/>
            <field name="retry_pattern" eval="{1: 10}"/>
        </record>

        <record id="job_function_delete_data" model="queue.job.function">
            <field name="model_id" ref="forlife_bravo_integration.model_bravo_model"/>
            <field name="method">bravo_delete</field>
            <field name="channel_id" ref="channel_bravo"/>
            <field name="retry_pattern" eval="{1: 10}"/>
        </record>
    </data>
</odoo>