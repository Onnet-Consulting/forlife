<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ir_cron_synchronize_bravo_liquidation_assets" model="ir.cron">
        <field name="name">Bravo: synchronize liquidation assets.assets</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_bravo_sync_liquidation_asset_wizard"/>
        <field name="code">model.sync()</field>
        <field name="state">code</field>
        <field name="run_as_queue_job" eval="True"/>
        <field name="channel_id" ref="channel_bravo"/>
        <field name="nextcall" eval="(DateTime.now().replace(hour=17, minute=0, second=0)).strftime('%Y-%m-%d %H:%M:%S')"/>
    </record>

    <record id="ir_cron_synthetic_daily_transfer" model="ir.cron">
        <field name="name">Bravo: Tổng hợp điều chuyển kho hàng ngày</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_synthetic_daily_transfer"/>
        <field name="code">model.synchronize_daily_transfer()</field>
        <field name="state">code</field>
        <field name="nextcall" eval="DateTime.now().strftime('%Y-%m-%d 18:00:00')"/>
    </record>

    <record id="ir_cron_synchronize_accounting_inventory_difference" model="ir.cron">
        <field name="name">Bravo: Đồng bộ hạch toán chênh lệch kiểm kê</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_acc_inv_diff_wizard"/>
        <field name="code">model.synchronize_accounting_inventory_difference()</field>
        <field name="state">code</field>
        <field name="nextcall" eval="DateTime.now().strftime('%Y-%m-%d 18:20:00')"/>
    </record>

    <record id="ir_cron_sync_bravo_picking_daily" model="ir.cron">
        <field name="name">Bravo: Đồng bộ phiếu kho hàng ngày</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_stock_picking"/>
        <field name="code">model.sync_bravo_picking_daily()</field>
        <field name="state">code</field>
        <field name="nextcall" eval="DateTime.now().strftime('%Y-%m-%d 18:40:00')"/>
    </record>

    <record id="ir_cron_sync_bravo_account_move_daily" model="ir.cron">
        <field name="name">Bravo: Đồng bộ bút toán hàng ngày</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_account_move"/>
        <field name="code">model.sync_bravo_account_move_daily()</field>
        <field name="state">code</field>
        <field name="nextcall" eval="DateTime.now().strftime('%Y-%m-%d 19:20:00')"/>
    </record>

    <record id="ir_cron_sync_bravo_account_move_pos_and_so_nhanh" model="ir.cron">
        <field name="name">Bravo: đồng bộ xuất kho bán hàng tổng hợp POS và SO NHANH</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_account_move"/>
        <field name="code">env['synthetic.account.move.pos'].sync_bravo_account_move_pos()
env['synthetic.account.move.so.nhanh'].sync_bravo_account_move_so_nhanh()</field>
        <field name="state">code</field>
        <field name="nextcall" eval="DateTime.now().strftime('%Y-%m-%d 20:00:00')"/>
    </record>

    <record id="ir_cron_sync_bravo_adjusted_invoice" model="ir.cron">
        <field name="name">Bravo: đồng bộ hóa đơn bán hàng điều chỉnh</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_account_move"/>
        <field name="code">env['summary.adjusted.invoice.pos'].sync_bravo_adjusted_invoice_pos()
env['summary.adjusted.invoice.so.nhanh'].sync_bravo_adjusted_invoice_so_nhanh()
env['pos.order'].sync_bravo_pos_order_change_refund_post_bkav_return()</field>
        <field name="state">code</field>
        <field name="nextcall" eval="DateTime.now().strftime('%Y-%m-%d 20:10:00')"/>
    </record>
</odoo>
