<odoo>
    <record id="ir_cron_synchronize_bravo_liquidation_assets" model="ir.cron">
        <field name="name">Bravo: synchronize liquidation assets.assets</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_bravo_sync_liquidation_asset_wizard"/>
        <field name="code">model.sync()</field>
        <field name="state">code</field>
        <field name="run_as_queue_job" eval="True"/>
        <field name="channel_id" ref="channel_bravo"/>
        <field name="nextcall" eval="(DateTime.now().replace(hour=17, minute=0, second=0)).strftime('%Y-%m-%d %H:%M:%S')"/>
    </record>

