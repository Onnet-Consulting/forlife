<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="bravo_sync_asset_wizard_form" model="ir.ui.view">
        <field name="name">Sync Asset Wizard</field>
        <field name="model">bravo.sync.asset.wizard</field>
        <field name="arch" type="xml">
            <form>
                <h2>You will synchronize Assets from Bravo to Odoo for current company</h2>
                <footer>
                    <button string="Synchronize" type="object" name="sync" class="btn-primary"/>
                    <button string="Cancel" special="cancel" data-hotkey="z" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="bravo_sync_asset_wizard_action" model="ir.actions.act_window">
        <field name="name">Bravo synchronize assets</field>
        <field name="res_model">bravo.sync.asset.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="bravo_sync_asset_wizard_menu"
              action="bravo_sync_asset_wizard_action"
              parent="account.account_account_menu"
              sequence="1"
    />
</odoo>