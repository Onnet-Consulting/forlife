<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="bravo_sync_account_wizard_form" model="ir.ui.view">
            <field name="name">Bravo synchronize account</field>
            <field name="model">bravo.sync.account.wizard</field>
            <field name="arch" type="xml">
                <form string="Grant Badge To">
                    <h2>You will synchronize Accounts from Bravo to Odoo for below companies:</h2>
                    <group>
                        <field name="company_ids" widget="many2many_tags" readonly="True"/>
                    </group>
                    <footer>
                        <button string="Synchronize" type="object" name="sync" class="btn-primary"/>
                        <button string="Cancel" special="cancel" data-hotkey="z" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="bravo_sync_account_wizard_action" model="ir.actions.act_window">
            <field name="name">Bravo synchronize account</field>
            <field name="res_model">bravo.sync.account.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="bravo_sync_account_wizard_menu"
                  action="bravo_sync_account_wizard_action"
                  parent="account.account_account_menu"
                  sequence="1"
        />
    </data>
</odoo>