<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="bravo_sync_tax_wizard_form" model="ir.ui.view">
            <field name="name">Bravo synchronize taxes</field>
            <field name="model">bravo.sync.tax.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <h2>You will synchronize Taxes from Bravo to Odoo for all companies</h2>
                    <p style="color:red">(You must run synchronize Accounts wizard first)</p>
                    <footer>
                        <button string="Synchronize" type="object" name="sync" class="btn-primary"/>
                        <button string="Cancel" special="cancel" data-hotkey="z" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="bravo_sync_tax_wizard_action" model="ir.actions.act_window">
            <field name="name">Bravo synchronize taxes</field>
            <field name="res_model">bravo.sync.tax.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="bravo_sync_tax_wizard_menu"
                  action="bravo_sync_tax_wizard_action"
                  parent="account.account_account_menu"
                  sequence="1"
        />
    </data>
</odoo>