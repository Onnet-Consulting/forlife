<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="rabbitmq_queue_view_tree" model="ir.ui.view">
            <field name="name">rabbitmq_queue_view_tree</field>
            <field name="model">rabbitmq.queue</field>
            <field name="arch" type="xml">
                <tree string="rabbitmq_queue_tree" multi_edit="1">
                    <field name="queue_key"/>
                    <field name="queue_name"/>
                    <field name="description"/>
                    <field name="target"/>
                    <field name="rabbitmq_connection_id"/>
                </tree>
            </field>
        </record>

        <record id="rabbitmq_queue_view_form" model="ir.ui.view">
            <field name="name">rabbitmq_queue_view_form</field>
            <field name="model">rabbitmq.queue</field>
            <field name="arch" type="xml">
                <form string="rabbitmq_queue_form">
                    <sheet>
                        <group>
                            <field name="queue_key"/>
                            <field name="queue_name"/>
                            <field name="description"/>
                            <field name="target"/>
                            <field name="rabbitmq_connection_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="rabbitmq_queue_action" model="ir.actions.act_window">
            <field name="name">RabbitMQ Queue</field>
            <field name="res_model">rabbitmq.queue</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>