<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_vendor_invoice_form_view" model="ir.ui.view">
            <field name="name">inherit.vendor.account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_bank_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='invoice_date_due']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='journal_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_date_due']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_payment_term_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='invoice_payment_term_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//span[hasclass('oe_edit_only')]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div[hasclass('oe_title')]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div[@name='journal_div']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='ref']" position="attributes">
                    <attribute name="invisible">1</attribute>
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//label[@for='ref']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='purchase_vendor_bill_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='purchase_vendor_bill_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='date']" position="attributes">
                    <attribute name="required">0</attribute>
                </xpath>
                <xpath expr="//field[@name='company_type']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="domain">[('active', '=', True)]</attribute>
                    <!--                    <attribute name="required">[('is_check_required_partner_id', '=', True)]</attribute>-->
                </xpath>
                <xpath expr="//field[@name='tax_totals']" position="after">
                    <field name="trade_discount"/>
                    <field name="total_trade_discount"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="company_type" readonly="1" string="Loại hình doanh nghiệp"/>
                    <field name="purchase_type" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="tax_totals" invisible="1"/>
                    <field name="number_bills" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="invoice_description" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="reference" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="currency_id" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="exchange_rate" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="is_check_cost_view" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="is_check_cost_out_source" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="is_check_invoice_tnk" invisible="1" force_save="1"/>
                    <field name="type_inv" invisible="1" force_save="1"/>
                    <field name="invoice_vendor_bill_id" string="Auto-Complete"
                           attrs="{'readonly': [('state', '=', 'posted')]}"/>
                </xpath>
                <xpath expr="//field[@name='payment_reference']" position="before">
                    <field name="payment_term_invoice" string="Chính sách thanh toán"
                           attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="invoice_date_due" string="Hạn xử lý"
                           attrs="{'readonly': [('state', '=', 'posted')]}"/>
                </xpath>
                <xpath expr="//div[@name='journal_div']" position="after">
                    <field name="journal_id" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="domain_receiving_warehouse_id" invisible="1"/>
                    <field name="purchase_order_product_id"
                           widget="many2many_tags"
                           options="{'no_open': False}"
                           domain="[('partner_id','=', partner_id), ('type_po_cost','=', type_inv),('custom_state','=', 'approved')]"
                           attrs="{'readonly': [('state', '=', 'posted')], 'invisible': [('move_type', '=', 'out_invoice')]}"/>
                    <field name="receiving_warehouse_id"
                           widget="many2many_tags"
                           domain="domain_receiving_warehouse_id"
                           options="{'no_open': False}"
                           attrs="{'readonly': [('state', '=', 'posted')], 'invisible': [('move_type', '=', 'out_invoice')]}"/>
                    <field name="x_asset_fin" widget="radio"/>
                    <field name="x_root" widget="radio" invisible="context.get('default_move_type', False) == 'out_invoice'"/>
                    <field name="is_check" invisible="1"/>
                    <field name="is_passersby" invisible="1"/>
                    <field name="is_check_quantity_readonly" invisible="1"/>
                </xpath>
                <xpath expr="//notebook/page[@name='invoice_tab']" position="after">
                    <field name="invoice_line_ids" widget="section_and_note_one2many"
                           context="{'default_company_id': company_id}"
                           attrs="{'readonly': ['|',('state', '=', 'posted'), ('is_check', '=', True)]}" force_save="1">
                        <tree editable="bottom" class="width-hh">
                            <control>
                                <create name="add_line_control" id="hide" string="Thêm 1 dòng"/>
                            </control>
                            <field name="is_passersby" invisible="1"/>
                            <field name="is_check_exchange_quantity" invisible="1"/>
                            <field name="is_check_promotions" invisible="0"/>
                            <field name="product_id" string="Sản Phẩm"
                                   context="{'supplier_id': parent.partner_id, 'purchase_type': parent.purchase_type, 'is_passersby': parent.is_passersby}"
                                   domain="[('product_type', '=', parent.purchase_type), ('purchase_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"/>
                            <field name="description" related="product_id.name" string="Mô tả"/>
                            <field name="request_code"/>
                            <field name="type"/>
                            <field name="promotions"
                                   attrs="{'column_invisible': [('parent.purchase_type', '!=', 'product')]}"/>
                            <field name="asset_code"
                                   attrs="{'column_invisible': [('parent.purchase_type', '!=', 'asset')]}"/>
                            <field name="asset_name"
                                   attrs="{'column_invisible': [('parent.purchase_type', '!=', 'asset')]}"/>
                            <field name="quantity_purchased" invisible="context.get('default_move_type', False) == 'out_invoice'"
                                   attrs="{'column_invisible': [('parent.purchase_type', '!=', 'product')], 'readonly': ['|', ('parent.is_check', '=', True), ('parent.is_check_quantity_readonly', '=', True)]}"/>
                            <field name="product_uom_id"
                                   attrs="{'column_invisible': [('parent.purchase_type', '!=', 'product')]}"/>
                            <field name="product_uom_category_id" invisible="1"/>
                            <field name="exchange_quantity" invisible="context.get('default_move_type', False) == 'out_invoice'"
                                   attrs="{'column_invisible': [('parent.purchase_type', '!=', 'product')], 'readonly': ['|',('is_check_exchange_quantity', '=', False), ('parent.is_check_quantity_readonly', '=', True)]}"/>
                            <field name="quantity" readonly="1"/>
                            <field name="vendor_price" invisible="context.get('default_move_type', False) == 'out_invoice'"
                                   attrs="{'column_invisible': [('parent.purchase_type', '!=', 'product')], 'readonly': ['|',('parent.state', '=', 'posted'), ('is_passersby', '=', False), ('is_check_promotions', '=', True)]}"
                                   force_save="1"/>
                            <field name="price_unit" force_save="1" required="1 "
                                   attrs="{'readonly': ['|',('parent.state', '=', 'posted'), ('is_check_promotions', '=', True)]}"/>
                            <field name="warehouse"
                                   attrs="{'column_invisible': [('parent.purchase_type', '!=', 'product')]}"/>
                            <field name="discount" string="Chiết khấu %"
                                   attrs="{'column_invisible': [('parent.purchase_type', '!=', 'product')], 'readonly': ['|',('parent.state', '=', 'posted'), ('is_check_promotions', '=', True)]}"/>
                            <field name="discount_percent"
                                   widget="monetary"
                                   attrs="{'column_invisible': ['|',('parent.purchase_type', '!=', 'product'),('parent.move_type', '=', 'out_invoice')], 'readonly': ['|',('parent.state', '=', 'posted'), ('is_check_promotions', '=', True)]}"/>
                            <field name="tax_ids"
                                   optional="show"
                                   widget="many2many_tags"
                                   string="Thuế %"
                                   domain="[('active', '=', True)]"
                                   attrs="{'readonly': ['|',('parent.state', '=', 'posted'), ('is_check_promotions', '=', True)]}"/>
                            <field name="tax_amount"
                                   attrs="{'column_invisible': ['|',('parent.purchase_type', '!=', 'product'),('parent.move_type', '=', 'out_invoice')], 'readonly': ['|',('parent.state', '=', 'posted'), ('is_check_promotions', '=', True)]}"/>
                            <field name="price_subtotal" string="Thành tiền" widget="monetary" sum="discounted subtotal" force_save="1"/>
                            <field name="total_vnd_amount"
                                   sum="discounted subtotal"
                                   force_save="1"
                                   attrs="{'readonly': ['|',('parent.state', '=', 'posted'), ('is_check_promotions', '=', True)]}"/>
                            <field name="work_order" domain="[('state', '=', 'approved')]"
                                   attrs="{'column_invisible': [('parent.purchase_type', '=', 'asset')]}"/>
                            <field name="event_id"
                                   attrs="{'column_invisible': [('parent.purchase_type', '!=', 'product')]}"/>
                            <field name="account_analytic_id"/>
                        </tree>
                    </field>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='quantity']" position="after">
                    <field name="product_uom_id"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']//tree//field[@name='account_id']" position="after">
                    <field name="text_check_cp_normal" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='discount']" position="after">
                    <field name="tax_ids"/>
                </xpath>
                <xpath expr="//notebook/page[@name='other_info']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//notebook/page[@name='other_info']" position="after">
                    <page string="Thuế nhập khẩu"
                          attrs="{'invisible': [('is_check_invoice_tnk', '=', False)]}">
                        <field name="exchange_rate_line" attrs="{'readonly': [('state', 'not in', ('draft'))]}"
                               widget="section_and_note_one2many">
                            <tree editable="bottom" class="width-hh" create="0" delete="0">
                                <field name="product_id" readonly="1"/>
                                <field name="name" readonly="1"/>
                                <field name="vnd_amount" force_save="1" readonly="1"/>
                                <field name="qty_product" force_save="1" readonly="1" string="Số lượng đặt mua"/>
                                <field name="import_tax"/>
                                <field name="tax_amount" readonly="1" force_save="1"/>
                                <field name="special_consumption_tax"/>
                                <field name="special_consumption_tax_amount" readonly="1" force_save="1"/>
                                <field name="vat_tax"/>
                                <field name="vat_tax_amount" readonly="1" force_save="1"/>
                                <!--                                <field name="total_vnd_amount" readonly="1"/>-->
                                <field name="total_tax_amount" readonly="1" force_save="1"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Chi phí" invisible="context.get('default_move_type', False) == 'out_invoice'" name="product_cost" attrs="{'invisible': [('move_type', '=', 'entry')]}">
                        <field name="cost_line" widget="section_and_note_one2many"
                               attrs="{'readonly': [('state', 'not in', ('draft'))]}">
                            <tree editable="bottom" class="width-hh" create="0" delete="0">
                                <field name="product_id"/>
                                <field name="name" readonly="1" string='Mô tả'/>
                                <field name="currency_id"/>
                                <field name="exchange_rate"/>
                                <field name="foreign_amount"/>
                                <field name="vnd_amount"/>
                                <field name="is_check_pre_tax_costs"/>
                            </tree>
                        </field>
                    </page>
                    <field name="is_check_vendor_page" force_save="1" invisible="1"/>
                    <page string="NCC vãng lai" name="supplier_info"
                          attrs="{'invisible':['|',('is_check_vendor_page', '=', False),('move_type', '=', 'entry')]}">
                        <field name="vendor_back_ids" class="width-hh" widget="one2many" mode="tree">
                            <tree editable="bottom">
                                <control>
                                    <create name="add" string="Thêm mới" readonly="1"/>
                                </control>
                                <field name="vendor"/>
                                <field name="code_tax"/>
                                <field name="street_ven"/>
                                <field name="company_id"/>
                                <field name="invoice_reference"/>
                                <field name="invoice_description"/>
                                <field name="price_subtotal_back" force_save="1"/>
                                <field name="tax_back" force_save="1"/>
                                <field name="tax_percent_back" force_save="1"/>
                                <field name="tax_percent" force_save="1"/>
                                <field name="_x_invoice_date" force_save="1"/>
                                <field name="totals_back" force_save="1"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Tổng hợp" invisible="context.get('default_move_type', False) == 'out_invoice'" name="synthetic">
                        <field name="invoice_synthetic_ids" widget="section_and_note_one2many" mode="tree" readonly="1">
                            <tree editable="bottom" class="width-hh">
                                <field name="description"/>
                                <field name="product_id"/>
                                <field name="product_uom"/>
                                <field name="price_unit"/>
                                <field name="quantity"/>
                                <field name="price_subtotal" sum="discounted subtotal" force_save="1"/>
                                <field name="discount"/>
                                <field name="before_tax"/>
                                <field name="tnk_tax" attrs="{'column_invisible': [('parent.type_inv', '=', 'cost')]}"/>
                                <field name="db_tax" attrs="{'column_invisible': [('parent.type_inv', '=', 'cost')]}"/>
                                <field name="after_tax"/>
                                <field name="total_product" sum="discounted subtotal" force_save="1"/>
                            </tree>
                        </field>
                    </page>
