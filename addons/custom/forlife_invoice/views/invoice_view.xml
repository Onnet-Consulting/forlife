<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_vendor_invoice_form_view" model="ir.ui.view">
            <field name="name">inherit.vendor.account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="view_move_entry" type="object" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible':[('state', 'not in', ('posted'))]}">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Bút toán phát sinh</span>
                        </div>
                    </button>
                </xpath>

                <xpath expr="//field[@name='partner_bank_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='invoice_date_due']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='journal_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_date_due']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_payment_term_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='invoice_payment_term_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//span[hasclass('oe_edit_only')]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div[hasclass('oe_title')]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div[@name='journal_div']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='ref']" position="attributes">
                    <attribute name="invisible">1</attribute>
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//label[@for='ref']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='purchase_vendor_bill_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='purchase_vendor_bill_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='date']" position="attributes">
                    <attribute name="required">0</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="domain">[('active', '=', True)]</attribute>
                </xpath>
                <xpath expr="//field[@name='tax_totals']" position="after">
                    <field name="trade_discount" attrs="{'readonly': [('state', '=', 'posted')]}" force_save="1"/>
                    <field name="total_trade_discount" attrs="{'readonly': [('state', '=', 'posted')]}" force_save="1"/>
                    <field name="x_tax" attrs="{'readonly': [('state', '=', 'posted')]}" force_save="1" invisible="1"/>
                    <field name="trade_tax_id" attrs="{'readonly': [('state', '=', 'posted')]}" force_save="1"/>
                    <field name="x_amount_tax" attrs="{'readonly': [('state', '=', 'posted')]}" force_save="1"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="purchase_type" attrs="{'readonly': ['|', ('state', '=', 'posted'),('is_check_select_type_inv', '=', True)]}"/>
                    <field name="is_check_select_type_inv" invisible="1"/>
                    <field name="select_type_inv" widget="radio" attrs="{'readonly': ['|',('state', '=', 'posted'),('is_check_select_type_inv', '=', True)]}"/>
                    <field name="tax_totals" invisible="1"/>
                    <field name="number_bills" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="invoice_description" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="reference" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="currency_id" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="exchange_rate" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="is_check_invoice_tnk" invisible="1" force_save="1"/>
                    <field name="type_inv" invisible="1" force_save="1"/>
                    <field name="invoice_vendor_bill_id" string="Auto-Complete" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                </xpath>
                <xpath expr="//field[@name='payment_reference']" position="before">
                    <field name="payment_term_invoice" string="Chính sách thanh toán" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="invoice_date_due" string="Hạn xử lý" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                </xpath>
                <xpath expr="//div[@name='journal_div']" position="after">
                    <field name="journal_id" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="domain_receiving_warehouse_id" invisible="1"/>

                    <!-- Với Hóa đơn hàng hóa chi tiết lọc PO theo partner -->
                    <field name="purchase_order_product_id"
                           widget="many2many_tags"
                           options="{'no_open': False}"
                           domain="[('custom_state','=', 'approved'), ('partner_id', '=', partner_id)]"
                           attrs="{'readonly': [('state', '=', 'posted')], 'invisible': ['|', ('move_type', '=', 'out_invoice'), ('select_type_inv', '!=', 'normal')]}"/>

                    <!-- Với Hóa đơn chi phí Mua hàng/Nhân công PO không lọc theo partner -->
                    <field name="purchase_order_product_id"
                           widget="many2many_tags"
                           options="{'no_open': False}"
                           domain="[('custom_state','=', 'approved')]"
                           attrs="{'readonly': [('state', '=', 'posted')], 'invisible': ['|', ('move_type', '=', 'out_invoice'), ('select_type_inv', '=', 'normal')]}"/>

                    <label for="receiving_warehouse_id"/>
                    <div class="o_row">
                        <field name="receiving_warehouse_id"
                           widget="many2many_tags"
                           domain="domain_receiving_warehouse_id"
                           options="{'no_open': False}"
                           attrs="{'readonly': [('state', '=', 'posted')], 'invisible': [('move_type', '=', 'out_invoice')]}"/>
                        <button name="insert_data" type="object" string="Tổng hợp"
                                attrs="{'invisible': [('state', '=', 'posted')]}" icon="fa-plus-square" class="btn btn-primary"/>
                    </div>
                    <!--<field name="x_asset_fin" widget="radio"/> todo: bỏ trường này sau golive. giữ lại để backup cho trường is_tc-->
                    <field name="is_tc"/>
                    <field name="x_root" widget="radio" options="{'horizontal': True}" invisible="context.get('default_move_type', False) == 'out_invoice'" required="context.get('default_move_type', False) != 'out_invoice'"/>
                    <field name="is_check" invisible="1"/>
                    <field name="is_passersby" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']//tree//field[@name='account_id']" position="after">
                    <field name="product_id"/>
                    <field name="product_expense_origin_id" invisible="0" optional="hide"/>
                </xpath>
                <xpath expr="//notebook/page[@name='invoice_tab']" position="after">
                    <field name="invoice_line_ids" widget="section_and_note_one2many"
                           context="{'default_company_id': company_id}"
                           attrs="{'readonly': [('state', '=', 'posted')]}" force_save="1">
                        <tree editable="bottom" class="width-hh">
                            <control>
                                <create name="add_line_control" id="hide" string="Thêm 1 dòng"/>
                            </control>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_currency" invisible="1"/>
                            <field name="stock_move_id" invisible="1"/>
                            <field name="ware_name" invisible="1"/>
                            <field name="readonly_discount" invisible="1"/>
                            <field name="readonly_discount_value" invisible="1"/>
                            <field name="is_passersby" invisible="1"/>
                            <field name="is_check_exchange_quantity" invisible="1"/>
                            <field name="is_check_promotions" invisible="1"/>
                            <field name="product_id" string="Sản Phẩm"
                                   context="{'supplier_id': parent.partner_id, 'purchase_type': parent.purchase_type, 'is_passersby': parent.is_passersby}"
                                   domain="[('product_type', '=', parent.purchase_type), ('purchase_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]" attrs="{'readonly': [ ('parent.state', '=', 'posted'), ('parent.move_type', '=', 'in_invoice')]}"/>
                            <field name="description" related="product_id.name" string="Mô tả"/>
                            <field name="request_code"/>
                            <field name="type"/>
                            <field name="promotions" attrs="{'column_invisible': [('parent.purchase_type', '!=', 'product')]}"/>
                            <field name="asset_code"
                                   attrs="{'column_invisible': [('parent.purchase_type', '!=', 'asset')], 'readonly': [('parent.state', '=', 'posted')]}"/>
                            <field name="asset_name"
                                   attrs="{'column_invisible': [('parent.purchase_type', '!=', 'asset')], 'readonly': [('parent.state', '=', 'posted')]}"/>
                            <field name="purchase_uom" string="Đơn vị mua" attrs="{'readonly': [('parent.state', '=', 'posted')]}"/>
                            <field name="quantity_purchased"
                                   attrs="{'column_invisible': ['|',('parent.purchase_type', '!=', 'product'),('parent.move_type', 'in', ('out_refund','out_invoice'))], 'readonly': ['|', ('parent.purchase_type', '!=', 'product'), ('parent.state', '=', 'posted')]}"/>
                            <field name="product_uom_id"
                                   attrs="{'column_invisible': [('parent.purchase_type', '!=', 'product')]}"/>
                            <field name="product_uom_category_id" invisible="1"/>
                            <field name="exchange_quantity" readonly="1"/>
                            <field name="quantity" attrs="{'readonly': [('parent.state', '=', 'posted'), ('parent.move_type', '=', 'in_invoice')]}" force_save="1"/>
                            <field name="vendor_price"
                                   attrs="{'column_invisible': ['|',('parent.purchase_type', '!=', 'product'),('parent.move_type', 'in', ('out_refund','out_invoice'))], 'readonly': ['|',('parent.state', '=', 'posted'), ('is_passersby', '=', False), ('is_check_promotions', '=', True)]}"
                                   force_save="1"/>
                            <field name="price_unit" attrs="{'readonly': ['|', ('parent.purchase_type', '=', 'product'), ('parent.state', '=', 'posted'), ('parent.move_type', '=', 'in_invoice')]}" force_save="1"/>
                            <field name="warehouse" invisible="1"/>
                            <field name="discount" force_save="1" string="Chiết khấu %"
                                   attrs="{'column_invisible': [('parent.purchase_type', '!=', 'product')], 'readonly': ['|',('parent.state', '=', 'posted'), ('readonly_discount', '=', True), ('is_check_promotions', '=', True)]}"/>
                            <field name="discount_value" force_save="1" string="Chiết khấu" widget="monetary"
                                   attrs="{'column_invisible': ['|',('parent.purchase_type', '!=', 'product'),('parent.move_type', '=', 'out_invoice')], 'readonly': ['|',('parent.state', '=', 'posted'), ('readonly_discount_value', '=', True), ('is_check_promotions', '=', True)]}"/>
                            <field name="tax_ids" optional="show" widget="many2many_tags" string="Thuế %" domain="[('active', '=', True)]"
                                   attrs="{'readonly': ['|',('parent.state', '=', 'posted'), ('is_check_promotions', '=', True)]}"/>
                            <field name="tax_amount" force_save="1"
                                   attrs="{'column_invisible': ['|',('parent.purchase_type', '!=', 'product'),('parent.move_type', '=', 'out_invoice')], 'readonly': ['|',('parent.state', '=', 'posted'), ('is_check_promotions', '=', True)]}"/>
                            <field name="price_subtotal" string="Thành tiền" widget="monetary" sum="discounted subtotal"
                                   attrs="{'readonly': [ ('parent.state', '=', 'posted'), ('parent.move_type', '=', 'in_invoice')]}"/>
                            <field name="total_vnd_amount" widget="monetary" options="{'currency_field': 'company_currency'}"
                                   sum="discounted subtotal" force_save="1" readonly="1"/>
                            <field name="work_order" domain="[('state', '=', 'approved')]" attrs="{'column_invisible': [('parent.purchase_type', '=', 'asset')]}"/>
                            <field name="event_id" attrs="{'column_invisible': [('parent.purchase_type', '!=', 'product')]}"/>
                            <field name="account_analytic_id"/>
                            <field name="total_vnd_exchange" invisible="1"/>
                            <field name="import_tax" invisible="1"/>
                            <field name="amount_tax" invisible="1"/>
                            <field name="special_consumption_tax" invisible="1"/>
                            <field name="special_consumption_tax_amount" invisible="1"/>
                            <field name="vat_tax" invisible="1"/>
                            <field name="vat_tax_amount" invisible="1"/>
                            <field name="total_tax_amount" invisible="1"/>
                            <field name="before_tax" invisible="1"/>
                            <field name="after_tax" invisible="1"/>
                            <field name="total_product" invisible="1"/>
                        </tree>
                    </field>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='quantity']" position="after">
                    <field name="product_uom_id"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']//tree//field[@name='account_id']" position="after">
                    <field name="text_check_cp_normal" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='discount']" position="after">
                    <field name="tax_ids"/>
                </xpath>
                <xpath expr="//notebook/page[@name='other_info']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//notebook/page[@id='aml_tab']" position="before">
                    <page string="Chi tiết hóa đơn" attrs="{'invisible': [('select_type_inv', '=', 'normal')]}">
                        <field name="account_expense_labor_detail_ids" readonly="1" force_save="1">
                            <tree editable="bottom">
                                <field name="currency_id" invisible="1"/>
                                <field name="company_id" invisible="1"/>
                                <field name="product_id"/>
                                <field name="description"/>
                                <field name="uom_id"/>
                                <field name="qty"/>
                                <field name="price_subtotal_back" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="tax_percent"/>
                                <field name="tax_back" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="totals_back" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

                <xpath expr="//notebook/page[@name='other_info']" position="after">
                    <page string="Thông tin thuế"
                          attrs="{'invisible': ['|', '|', ('is_check_invoice_tnk', '=', False), ('select_type_inv', '!=', 'normal'), ('is_purchase_internal', '=', True)]}">
                        <field name="is_purchase_internal" invisible="1"/>
                        <field name="exchange_rate_line_ids" attrs="{'readonly': [('state', 'not in', ('draft'))]}"
                               widget="section_and_note_one2many">
                            <tree editable="bottom" class="width-hh" create="0" delete="0">
                                <field name="currency_id" invisible="1"/>
                                <field name="company_currency" invisible="1"/>
                                <field name="product_id" force_save="1" readonly="1"/>
                                <field name="description" force_save="1" readonly="1"/>
                                <field name="total_vnd_exchange" force_save="1" readonly="1" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                                <field name="quantity" readonly="0" force_save="1" string="Số lượng"/>
                                <field name="import_tax"/>
                                <field name="amount_tax" readonly="0" force_save="1" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                                <field name="special_consumption_tax"/>
                                <field name="special_consumption_tax_amount" readonly="0" force_save="1" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                                <field name="vat_tax" string="% Thuế GTGT"/>
                                <field name="vat_tax_amount" readonly="0" force_save="1" string="Tiền thuế GTGT" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                                <field name="total_tax_amount" force_save="1" readonly="1" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                            </tree>
                        </field>
                    </page>

                    <page string="Chi phí" invisible="context.get('default_move_type', False) == 'out_invoice'" name="product_cost"
                          attrs="{'invisible': ['|', ('move_type', '=', 'entry'), ('select_type_inv', '!=', 'normal')]}">
                        <field name="cost_line" widget="section_and_note_one2many"
                               attrs="{'readonly': [('state', 'not in', ('draft'))]}">
                            <tree editable="bottom" class="width-hh" create="0" delete="0">
                                <field name="company_currency" invisible="1"/>
                                <field name="product_id"/>
                                <field name="name" readonly="1" string='Mô tả'/>
                                <field name="currency_id"/>
                                <field name="exchange_rate" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                                <field name="foreign_amount"/>
                                <field name="vnd_amount" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                                <field name="is_check_pre_tax_costs"/>
                            </tree>
                         </field>
                        <div class="xl-12 d-flex" style="justify-content: end;">
                            <group class="xl-4">
                            </group>
                              <group class="xl-4">
                            </group>
                              <group class="xl-4">
                                <field name="cost_total"/>
                            </group>
                        </div>
                    </page>

                    <page string="Kê khai hóa đơn GTGT" name="supplier_info" attrs="{'invisible':[('move_type', '=', 'entry')]}">
                        <field name="product_expense_ids" invisible="1"/>
                        <field name="vendor_back_ids" attrs="{'readonly': [('state', '!=', 'draft')]}" class="width-hh" widget="one2many" mode="tree">
                            <tree editable="bottom">
                                <control>
                                    <create name="add" string="Thêm mới" readonly="1"/>
                                </control>
                                <field name="vendor_back_id" invisible="1"/>
                                <field name="vendor"/>
                                <field name="code_tax"/>
                                <field name="street_ven"/>
                                <field name="company_id"/>
                                <field name="currency_id" optional="hide"/>
                                <field name="invoice_reference"/>
                                <field name="invoice_description" domain="[('id', 'in', parent.product_expense_ids)]"/>
                                <field name="price_subtotal_back" force_save="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="tax_percent" force_save="1"/>
                                <field name="tax_back" force_save="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="_x_invoice_date" force_save="1"/>
                                <field name="date_due" force_save="1"/>
                                <field name="totals_back" force_save="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </tree>
                        </field>
                    </page>

                    <page string="Tổng hợp" attrs="{'invisible': ['|', ('move_type', '=', 'out_invoice'), ('select_type_inv', 'in', ('expense', 'labor'))]}" name="synthetic">
                        <field name="invoice_synthetic_ids" widget="section_and_note_one2many" mode="tree" readonly="1">
                            <tree editable="bottom" class="width-hh">
                                <field name="product_id"/>
                                <field name="description"/>
                                <field name="product_uom_id"/>
                                <field name="price_unit" string="Đơn giá"/>
                                <field name="quantity" sum="discounted subtotal"/>
                                <field name="total_vnd_amount"/>
                                <field name="discount_value"/>
                                <field name="before_tax"/>
                                <field name="amount_tax" attrs="{'column_invisible': [('parent.type_inv', '=', 'cost')]}"/>
                                <field name="special_consumption_tax_amount" attrs="{'column_invisible': [('parent.type_inv', '=', 'cost')]}"/>
                                <field name="after_tax"/>
                                <field name="total_product"/>
                            </tree>
                        </field>
                    </page>

                    <page string="Tổng hợp"
                          attrs="{'invisible': [('select_type_inv', '=', 'normal')]}">
                        <field name="sum_expense_labor_ids" readonly="1" force_save="1">
                            <tree editable="bottom" class="width-hh">
                                <field name="product_id"/>
                                <field name="description"/>
                                <field name="uom_id"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="company_id" invisible="1"/>
                                <field name="qty_actual"/>
                                <field name="before_est_tax" sum="Sum Estimate Before Tax" widget="monetary"
                                       attrs="{'column_invisible': [('parent.select_type_inv', '!=', 'expense')]}"
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="after_est_tax" sum="Sum Estimate After Tax" widget="monetary"
                                       attrs="{'column_invisible': [('parent.select_type_inv', '!=', 'expense')]}"
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="expense_est_labor" sum="Sum Estimate Expense Labor" widget="monetary"
                                       attrs="{'column_invisible': [('parent.select_type_inv', '!=', 'labor')]}"
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="before_tax" sum="Sum Actual Before Tax" widget="monetary" invisible="1"
                                       attrs="{'column_invisible': [('parent.select_type_inv', '!=', 'expense')]}"
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="after_tax" sum="Sum After Tax" widget="monetary" invisible="1"
                                       attrs="{'column_invisible': [('parent.select_type_inv', '!=', 'expense')]}"
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="expense_labor" sum="Sum Expense Labor" widget="monetary"
                                       attrs="{'column_invisible': [('parent.select_type_inv', '!=', 'labor')]}"
                                       options="{'currency_field': 'currency_id'}"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="action_inherit_vendor_invoice_form_view" model="ir.actions.act_window">
            <field name="name">Hóa đơn</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('account.view_in_invoice_bill_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('forlife_invoice.inherit_vendor_invoice_form_view')})]"/>
            <field name="domain">[('move_type', '=', 'in_invoice')]</field>
            <field name="context">{'default_move_type': 'in_invoice'}
            </field>
        </record>

        <menuitem id="menu_inherit_vendor_invoice_view" parent="account.menu_finance_payables"
                  action="forlife_invoice.action_inherit_vendor_invoice_form_view" name="Hóa đơn nhà cung cấp" sequence="1"/>
        <menuitem id="account.menu_action_move_in_invoice_type" active="False"/>
    </data>
</odoo>
