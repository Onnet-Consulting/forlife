<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_vendor_invoice_form_view" model="ir.ui.view">
            <field name="name">inherit.vendor.account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_bank_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='invoice_date_due']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='journal_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_date_due']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_payment_term_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='invoice_payment_term_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//span[hasclass('oe_edit_only')]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div[hasclass('oe_title')]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div[@name='journal_div']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='ref']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='ref']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='purchase_vendor_bill_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='purchase_vendor_bill_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='date']" position="attributes">
                    <attribute name="required">0</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="domain">[('active', '=', True)]</attribute>
                    <attribute name="required">1</attribute>
                </xpath>
<!--                <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='product_id']" position="after">-->
<!--                    <attribute name="domain">product_domain</attribute>-->
<!--                </xpath>-->
                <xpath expr="//field[@name='tax_totals']" position="after">
                    <field name="is_check_total_and_trade_discount" invisible="1"/>
                    <field name="trade_discount" attrs="{'readonly': [('is_check_total_and_trade_discount', '=', True)]}"/>
                    <field name="total_trade_discount" attrs="{'readonly': [('is_check_total_and_trade_discount', '=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="purchase_type" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="tax_totals" invisible="1"/>
                    <field name="number_bills" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="invoice_description" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="reference" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="currency_id" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="exchange_rate" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="is_check_cost_view" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="invoice_vendor_bill_id" string="Auto-Complete" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="product_product_mm" invisible="1"/>
<!--                    <field name="invoice_line_cost_ids" invisible="1"/>-->
                </xpath>
                <xpath expr="//field[@name='payment_reference']" position="before">
                    <field name="payment_term_invoice" string="Chính sách thanh toán" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="invoice_date_due" string="Hạn xử lý" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                </xpath>
                <xpath expr="//div[@name='journal_div']" position="after">
                    <field name="partner_domain" invisible="1"/>
<!--                    <field name="stock_pinking_domain_by_purchase_order_product_id" invisible="1"/>-->
                    <field name="journal_id" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="purchase_order_product_id"
                           domain="partner_domain"
                           widget="many2many_tags"
                           options="{'no_open': False}"
                           force_save="1"
                           attrs="{'readonly': [('state', '=', 'posted')], 'invisible': [('move_type', '=', 'out_invoice')]}"/>
                    <field name="receiving_warehouse_id"
                           widget="many2many_tags"
                           options="{'no_open': False}"
                           force_save="1"
                           attrs="{'readonly': [('state', '=', 'posted')], 'invisible': [('move_type', '=', 'out_invoice')]}"/>
                     <field name="x_asset_fin"  widget="radio"/>
                     <field name="x_root"  widget="radio"/>
                </xpath>
                <xpath expr="//notebook/page[@name='invoice_tab']" position="after">
                    <field name="is_check" invisible="1"/>
                    <field name="invoice_line_ids" widget="section_and_note_one2many"
                           attrs="{'readonly': [('is_check', '=', True)]}"
                           context="{'default_company_id': company_id}">
                        <tree editable="bottom" class="width-hh">
                            <field name="vendor_sup_invoice" invisible="1"/>
                            <field name="is_check_exchange_quantity" invisible="1"/>
                            <field name="is_check_is_passersby" invisible="1"/>
                            <field name="product_id" string="Sản Phẩm"
                                   context="{'supplier_id': parent.partner_id, 'purchase_type': parent.purchase_type}"
                                   domain="[('product_type', '=', parent.purchase_type),('id', 'in', parent.product_product_mm), ('purchase_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"/>
                            <field name="description" related="product_id.name" string="Mô tả"/>
                            <field name="request_code"/>
                            <field name="type"/>
                            <field name="promotions"
                                   attrs="{'column_invisible': [('parent.purchase_type', '!=', 'product')]}"/>
                            <field name="current_user"/>
                            <field name="asset_code"
                                   attrs="{'column_invisible': [('parent.purchase_type', '!=', 'asset')]}"/>
                            <field name="asset_name"
                                   attrs="{'column_invisible': [('parent.purchase_type', '!=', 'asset')]}"/>
                            <field name="quantity_purchased"
                                   attrs="{'column_invisible': [('parent.purchase_type', '!=', 'product')]}"/>
                            <field name="uom_id"
                                   attrs="{'column_invisible': [('parent.purchase_type', '!=', 'product')]}"/>
                            <field name="exchange_quantity"
                                   attrs="{'column_invisible': [('parent.purchase_type', '!=', 'product')], 'readonly': [('is_check_exchange_quantity', '=', False)]}"/>
                            <field name="quantity"/>
                            <field name="vendor_price"
                                   attrs="{'column_invisible': [('parent.purchase_type', '!=', 'product')], 'readonly': [('is_check_is_passersby', '=', False)]}"
                                   force_save="1"/>
                            <field name="price_unit" force_save="1" required="1"/>
                            <field name="warehouse"
                                   attrs="{'column_invisible': [('parent.purchase_type', '!=', 'product')]}"/>
                            <field name="discount_invoice" attrs="{'column_invisible': ['|',('parent.purchase_type', '!=', 'product'),('parent.move_type', '=', 'out_invoice')]}"/>
                            <field name="discount" attrs="{'column_invisible': [('parent.purchase_type', '!=', 'product')]}"/>
                            <field name="taxes_id" optional="show"/>
                            <field name="tax_amount"/>
                            <field name="price_subtotal"/>
                            <field name="work_order" domain="[('state', '=', 'approved')]"
                                   attrs="{'column_invisible': [('parent.purchase_type', '=', 'asset')]}"/>
                            <field name="event_id"
                                   attrs="{'column_invisible': [('parent.purchase_type', '!=', 'product')]}"/>
                            <field name="account_analytic_id"/>
                            <field name="cost_type" force_save="1" invisible="1"/>
                            <field name="cost_line_id" force_save="1" invisible="1"/>
<!--                            <field name="po_id" force_save="1" invisible="1"/>-->
<!--                            <field name="code_tax"/>-->
<!--                            <field name="company_id"/>-->
<!--                            <field name="invoice_reference"/>-->
<!--                            <field name="invoice_description"/>-->
                        </tree>
                    </field>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='name']" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='quantity']" position="after">
                    <field name="product_uom_id"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='discount']" position="after">
                    <field name="tax_ids"/>
                </xpath>

                 <xpath expr="//notebook/page[@name='aml_tab']//tree//field[@name='analytic_distribution']" position="attributes">
                     <attribute name="invisible">1</attribute>
                 </xpath>

                 <xpath expr="//notebook/page[@name='aml_tab']//tree//field[@name='tax_tag_ids']" position="attributes">
                     <attribute name="invisible">1</attribute>
                 </xpath>

                <xpath expr="//notebook/page[@name='aml_tab']//tree//field[@name='name']" position="after">
                    <field name="production_order"/>
                 </xpath>
                <xpath expr="//notebook/page[@name='other_info']" position="attributes">
                     <attribute name="invisible">1</attribute>
                 </xpath>



                <xpath expr="//notebook/page[@name='other_info']" position="after">
                    <page string="Thuế nhập khẩu">
                        <field name="exchange_rate_line" attrs="{'readonly': [('state', 'not in', ('draft'))]}" widget="section_and_note_one2many">
                            <tree editable="bottom" class="width-hh" create="0" delete="0">
                                <field name="product_id" readonly="1"/>
                                <field name="name" readonly="1"/>
                                <field name="usd_amount" readonly="1" invisible="1"/>
                                <field name="vnd_amount" readonly="1"/>
                                <field name="qty_product" readonly="1" string="Số lượng đặt mua"/>
                                <field name="import_tax"/>
                                <field name="tax_amount" readonly="1"/>
                                <field name="special_consumption_tax"/>
                                <field name="special_consumption_tax_amount" readonly="1"/>
                                <field name="vat_tax"/>
                                <field name="vat_tax_amount" readonly="1"/>
<!--                                <field name="total_vnd_amount" readonly="1"/>-->
                                <field name="total_tax_amount" readonly="1"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Chi phí" name="product_cost">
<!--                        <field name="is_inter_company" invisible="1"/>-->
                        <field name="cost_line" widget="section_and_note_one2many" attrs="{'readonly': [('state', 'not in', ('draft'))]}">
                            <tree editable="bottom" class="width-hh" create="0" delete="0">
                                <field name="product_id" readonly="1"/>
                                <field name="name" readonly="1" string='Mô tả'/>
                                <field name="transportation_costs_percent"/>
                                <field name="transportation_costs" readonly="1"/>
                                <field name="loading_costs_percent"/>
                                <field name="loading_costs" readonly="1"/>
                                <field name="custom_costs_percent"/>
                                <field name="custom_costs" readonly="1"/>
                            </tree>
                        </field>
                        <div class="xl-12 d-flex" style="justify-content: end;">
                            <group class="xl-4">
                                <field name="transportation_total"/>
                            </group>
                              <group class="xl-4">
                                <field name="loading_total"/>
                            </group>
                              <group class="xl-4">
                                <field name="custom_total"/>
                            </group>
                        </div>
                    </page>
                    <field name="is_check_vendor_page" invisible="1"/>
                    <page string="NCC vãng lai" name="supplier_info" attrs="{'invisible':[('is_check_vendor_page', '=', False)]}">
                        <field name="vendor_back_ids" class="width-hh" widget="one2many" mode="tree">
                            <tree editable="bottom">
                                <control>
                                    <create name="add" string="Thêm mới" readonly="1"/>
                                </control>
                                <field name="vendor"/>
                                <field name="code_tax"/>
                                <field name="street_ven"/>
                                <field name="company_id"/>
                                <field name="invoice_reference"/>
                                <field name="invoice_description"/>
                            </tree>
                        </field>
                    </page>
                    <field name="exists_bkav" invisible="1"/>
                    <page string="e-Invoice" name="e_invoice" attrs="{'invisible':[('exists_bkav', '=', False)]}">
                        <field name="is_check_cancel" invisible="1"/>
                        <field name="e_invoice_ids" class="width-hh" widget="one2many" mode="tree">
                            <tree editable="bottom">
                                <control>
                                    <create name="add" string="Thêm mới" readonly="1"/>
                                </control>
                                <field name="number_e_invoice"/>
                                <field name="date_start_e_invoice"/>
                                <field name="state_e_invoice"/>
                            </tree>
                        </field>
                        <div class="xl-12 d-flex" style="justify-content: end;"
                             attrs="{'invisible':[('exists_bkav', '=', False)]}">
                            <div style="padding: 40px;" attrs="{'invisible':[('is_check_cancel', '=', True)]}">
                                <button name="getting_invoice_status" type="object"
                                        string="Cập nhật trạng thái"
                                        class="oe_highlight"/>
                            </div>
                            <div style="padding: 40px;">
                                <button name="action_download_view_e_invoice" type="object"
                                        string="Xem và tải xuống HĐĐT"
                                        class="oe_highlight"/>
                            </div>
                            <div style="padding: 40px;" attrs="{'invisible':[('is_check_cancel', '=', True)]}">
                                <button name="cancel_invoice" type="object"
                                        string="Hủy HĐĐT trên BKAV"
                                        class="oe_highlight"/>
                            </div>
                            <div style="padding: 40px;" attrs="{'invisible':[('is_check_cancel', '=', True)]}">
                                <button name="getting_sign_the_bill_hsm" type="object"
                                        string="Ký HĐĐT trên BKAV"
                                        class="oe_highlight"/>
                            </div>
                        </div>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>