<!--                        </div>-->
<!--                    </page>-->
                </xpath>
            </field>
        </record>
        <record id="action_inherit_vendor_invoice_form_view" model="ir.actions.act_window">
            <field name="name">Hóa đơn</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('account.view_in_invoice_bill_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('forlife_invoice.inherit_vendor_invoice_form_view')})]"/>
            <field name="domain">[('move_type', '=', 'in_invoice')]</field>
            <field name="context">{'default_move_type': 'in_invoice'}
            </field>
        </record>
        <menuitem id="menu_inherit_vendor_invoice_view" parent="account.menu_finance_payables"
                  action="forlife_invoice.action_inherit_vendor_invoice_form_view" name="Hóa đơn nhà cung cấp" sequence="1"/>
        <menuitem id="account.menu_action_move_in_invoice_type" active="False"/>
    </data>
</odoo>