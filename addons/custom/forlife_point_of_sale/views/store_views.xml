<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="store_view_tree" model="ir.ui.view">
            <field name="name">store_view_tree</field>
            <field name="model">store</field>
            <field name="arch" type="xml">
                <tree string="store_tree">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="contact_id"/>
                    <field name="brand_id"/>
                    <field name="stock_location_id"/>
                </tree>
            </field>
        </record>

        <record id="store_view_form" model="ir.ui.view">
            <field name="name">store_view_form</field>
            <field name="model">store</field>
            <field name="arch" type="xml">
                <form string="store_form">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Store Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="company_id" force_save="1" options="{'no_open': True}"/>
                                <field name="code" readonly="1" force_save="1"/>
                                <field name="warehouse_id" options="{'no_create': True}" domain="[('company_id', '=', company_id)]"/>
                                <field name="brand_id" options="{'no_create': True}"/>
                                <field name="contact_id" options="{'no_create': True}"/>
                                <field name="stock_location_id" options="{'no_create': True}" domain="[('usage', '=', 'internal'), ('warehouse_id', '=', warehouse_id)]"/>
                            </group>
                            <group>
                                <field name="cashier_ids" widget="many2many_tags" options="{'no_create': True}"/>
                                <field name="employee_ids" widget="many2many_tags" options="{'no_create': True}"/>
                                <field name="pos_config_ids" widget="many2many_tags"/>
                                <field name="payment_method_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="store_view_filter" model="ir.ui.view">
            <field name="name">store_view_filter</field>
            <field name="model">store</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="contact_id"/>
                    <field name="brand_id"/>
                    <field name="stock_location_id"/>
                </search>
            </field>
        </record>

        <record id="store_action" model="ir.actions.act_window">
            <field name="name">Store</field>
            <field name="res_model">store</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="store_menu" name="Store" parent="point_of_sale.menu_point_config_product" action="store_action" sequence="3"/>

    </data>
</odoo>