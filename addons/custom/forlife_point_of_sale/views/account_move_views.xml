<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_invoice_pos_custom_form_view" model="ir.ui.view">
            <field name="name">inherit.invoice.pos.custom.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="invoice_info_company_name"
                           attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund'))]}"/>
                    <field name="invoice_info_address"
                           attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund'))]}"/>
                    <field name="invoice_info_tax_number"
                           attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund'))]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>