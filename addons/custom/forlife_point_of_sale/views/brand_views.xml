<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="brand_view_tree" model="ir.ui.view">
            <field name="name">brand_view_tree</field>
            <field name="model">res.brand</field>
            <field name="arch" type="xml">
                <tree string="brand_tree" editable="bottom">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="brand_view_filter" model="ir.ui.view">
            <field name="name">brand_view_filter</field>
            <field name="model">res.brand</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name"/>
                    <field name="code"/>
                </search>
            </field>
        </record>

        <record id="brand_action" model="ir.actions.act_window">
            <field name="name">Brand</field>
            <field name="res_model">res.brand</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="brand_menu" name="Brand" parent="point_of_sale.menu_point_config_product" action="brand_action" sequence="5"/>

    </data>
</odoo>