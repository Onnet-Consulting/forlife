<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="from_pos_vietinbank_inherit_pos_config_view_form" model="ir.ui.view">
            <field name="name">Pos Config</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@id='title']" position="after">
                    <group string="Account">
                        <group>
                            <field name="vietinbank_account_no"/>
                            <field name="vietinbank_provider"/>
                            <field name="vietinbank_virtual_account"/>
                        </group>
                    </group>
                </xpath>

            </field>
        </record>


    </data>
</odoo>