<?xml version="1.0" encoding="utf-8" ?>
<template xml:space="preserve">
    <t t-name="RequestLogTransactionVietinbank" t-inherit="point_of_sale.PaymentScreenPaymentLines"
       t-inherit-mode="extension">
        <xpath expr="//div[hasclass('electronic_payment')]" position="inside">
            <t t-if="line.payment_status == 'get_transaction_from_vietinbank'">
                <div class="electronic_status">
                    Payment request pending
                </div>
                <div class="button send_payment_request highlight" title="Send Payment Request"
                     t-on-click="() => this.trigger('get-transaction-vietinbank', line)">
                    Váº¥n tin
                </div>
            </t>
        </xpath>

        <xpath expr="//div[hasclass('selected')]" position="inside">
            <t t-if="line.payment_method.use_payment_terminal === 'vietinbank' and line.payment_status === 'done'">
                <div class="delete-button"
                     t-on-click="() => this.trigger('delete-payment-line', { cid: line.cid })"
                     aria-label="Delete" title="Delete">
                    <i class="fa fa-times-circle"/>
                </div>
            </t>
        </xpath>
    </t>
</template>