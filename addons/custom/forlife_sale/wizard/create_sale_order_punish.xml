<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="crete_sale_order_punish_form" model="ir.ui.view">
            <field name="name">sale.order.punish.wizard</field>
            <field name="model">create.sale.order.punish</field>
            <field name="arch" type="xml">
                <form string="Lost Reason">
                    <sheet>
                        <group class="oe_title">
                            <field name="x_partner_id" />
                        </group>
                    </sheet>
                    <footer>
                        <button name="create_invoice_punish" string="Tạo đơn phạt" type="object" class="btn-primary"/>
                        <button string="Hủy" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="crete_sale_order_punish_action" model="ir.actions.act_window">
            <field name="name">Tạo hóa đơn phạt</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">create.sale.order.punish</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="crete_sale_order_punish_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>