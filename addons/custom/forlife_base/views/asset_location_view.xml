<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="res_asset_location_view_tree" model="ir.ui.view">
            <field name="name">res.asset.location.view.tree</field>
            <field name="model">asset.location</field>
            <field name="arch" type="xml">
                <tree string="Asset Location" editable="top">
                    <field name="code" required="1"/>
                    <field name="name"/>
                    <field name="address"/>
                    <field name="warehouse_id"/>
                </tree>
            </field>
        </record>

        <record id="asset_location_view_form" model="ir.ui.view">
            <field name="name">asset_location_view_form</field>
            <field name="model">asset.location</field>
            <field name="arch" type="xml">
                <form string="asset_location_form" create="0" delete="0" edit="0">
                    <sheet>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="address"/>
                            <field name="warehouse_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="res_asset_location_action" model="ir.actions.act_window">
            <field name="name">Asset Location</field>
            <field name="res_model">asset.location</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>