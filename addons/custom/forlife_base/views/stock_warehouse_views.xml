<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    	<record id="view_warehouse_inherit_forlife" model="ir.ui.view">
            <field name="name">stock.warehouse.form.inherit</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse"/>
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="name_internal"/>
                    <field name="short_name_internal"/>
                </field>
                <xpath expr="//sheet/group[1]/group[2]/field[@name='company_id']" position="before">
                    <field name="warehouse_code_internal"/>
                </xpath>
                <page name="technical_info" position="before">
                    <page string="Information" name="general_info">
                        <group>
                            <group>
                                <field name="brand_id"/>
                                <field name="square"/>
                                <field name="phone"/>
                                <field name="manager_id"/>
                                <field name="status_ids"/>
                                <field name="id_deposit"/>
                                <field name="note"/>
                            </group>
                            <group>
                                <field name="sale_province_id"/>
                                <field name="loc_province_id"/>
                                <field name="weather_province_id"/>
                                <field name="state_id"/>
                                <field name="district_id"/>
                                <field name="longitude"/>
                                <field name="latitude"/>
                            </group>
                        </group>
                	</page>
                </page>
            </field>
        </record>

        <!-- Type of Warehouse -->
        <record id="stock_warehouse_type_view_tree" model="ir.ui.view">
            <field name="name">stock.warehouse.type.view.tree</field>
            <field name="model">stock.warehouse.type</field>
            <field name="arch" type="xml">
                <tree string="Type of Warehouse" editable="top">
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="stock_warehouse_type_view_search" model="ir.ui.view">
                <field name="name">stock.warehouse.type.view.search</field>
                <field name="model">stock.warehouse.type</field>
                <field name="arch" type="xml">
                    <search>
                        <field name="name"/>
                        <field name="code"/>
                        <separator/>
                        <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                    </search>
                </field>
            </record>

        <record id="stock_warehouse_type_action" model="ir.actions.act_window">
            <field name="name">Type of Warehouse</field>
            <field name="res_model">stock.warehouse.type</field>
            <field name="view_mode">tree</field>
        </record>

