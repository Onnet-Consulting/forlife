<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_groups_view_inherit" model="ir.ui.view">
        <field name="name">forlife.res.groups.view.form</field>
        <field name="model">res.groups</field>
        <field name="inherit_id" ref="base.view_groups_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="before">
                <div class="oe_button_box" name="button_box">
                    <button name="model_smart_button" type="object" class="oe_stat_button">
                        <field name="access_count" widget="statinfo" string="Access"/>
                    </button>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
