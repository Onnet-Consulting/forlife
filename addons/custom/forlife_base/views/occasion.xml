<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="res_occasion_code_view_tree" model="ir.ui.view">
            <field name="name">res.occasion.code.view.tree</field>
            <field name="model">occasion.code</field>
            <field name="arch" type="xml">
                <tree string="Occasion Code">
                    <field name="name"/>
                    <field name="group_id"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>
        <record id="occasion_code_view_form" model="ir.ui.view">
            <field name="name">occasion_code_view_form</field>
            <field name="model">occasion.code</field>
            <field name="arch" type="xml">
                <form string="occasion_code_form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
<!--                                <field name="is_auto_name" invisible="1"/>-->
                                 <label for="code"/>
                                <div class="d-flex" style="text-wrap: nowrap">
                                    <label for="is_auto_name" string="Tự sinh mã" attrs="{'invisible': [('group_id', '=', False)]}"/>
                                    <field name="is_auto_name" attrs="{'invisible': [('group_id', '=', False)]}"/>
                                    <field name="code" attrs="{'readonly': [('is_auto_name', '=', True)]}" force_save="1"/>
                                </div>

                            </group>
                            <group>
                                <field name="group_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="res_occasion_gr_view_tree" model="ir.ui.view">
            <field name="name">res.occasion.gr.view.tree</field>
            <field name="model">occasion.group</field>
            <field name="arch" type="xml">
                <tree string="Occasion Group" editable="top">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <record id="res_occasion_code_action" model="ir.actions.act_window">
            <field name="name">Occasion Code</field>
            <field name="res_model">occasion.code</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="res_occasion_gr_action" model="ir.actions.act_window">
            <field name="name">Occasion Group</field>
            <field name="res_model">occasion.group</field>
            <field name="view_mode">tree</field>
        </record>

    </data>
</odoo>