        <record id="res_warehouse_group_view_tree" model="ir.ui.view">
            <field name="name">res.warehouse.group.view.tree</field>
            <field name="model">warehouse.group</field>
            <field name="arch" type="xml">
                <tree string="Nhóm kho">
                    <field name="name" required="1"/>
                    <field name="id" invisible="1"/>
                    <field name="parent_warehouse_group_id" required="1" domain="[('id','!=',id)]"/>
                    <field name="code_level_1"/>
                </tree>
            </field>
        </record>

        <record id="res_warehouse_group_view_form" model="ir.ui.view">
            <field name="name">res.warehouse.group.view.form</field>
            <field name="model">warehouse.group</field>
            <field name="arch" type="xml">
                <form string="Nhóm kho" >
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="id" invisible="1"/>
                            <field name="parent_warehouse_group_id" required="1" domain="[('id','!=',id)]"/>
                            <field name="code_level_1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

