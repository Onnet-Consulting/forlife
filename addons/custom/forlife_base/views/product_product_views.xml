<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_normal_form_view_inherit_forlife" model="ir.ui.view">
            <field name="name">product.product.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <group name="group_standard_price" position="inside">
                    <field name="expiration_date"/>
                    <field name="days_before_alert"/>
                    <field name="alert_date" invisible="1"/>
                    <field name="product_expiry_reminded" invisible="1"/>
                    <field name="responsible_id" domain="[('share', '=', False)]" widget="many2one_avatar_user" groups="stock.group_stock_user"/>
                </group>
                <field name="barcode" position="after">
                    <field name="sku_code"/>
                </field>
            </field>
        </record>
    </data>
</odoo>