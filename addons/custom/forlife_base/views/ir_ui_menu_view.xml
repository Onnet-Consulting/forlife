<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_model_tree_inherit" model="ir.ui.view">
        <field name="model">ir.model</field>
        <field name="inherit_id" ref="base.view_model_tree"/>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <field name="transient" position="after">
                <field name="menu_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>

    <record id="ir_model_view_inherit" model="ir.ui.view">
        <field name="name">forlife.ir.model.view.form</field>
        <field name="model">ir.model</field>
        <field name="inherit_id" ref="base.view_model_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Menu" name="menu" options="{'no_create': True}">
                    <field name="menu_ids" readonly="True" options="{'no_create': True}"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
