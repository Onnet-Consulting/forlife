<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="attribute_code_config_view_form" model="ir.ui.view">
            <field name="name">attribute_code_config_view_form</field>
            <field name="model">attribute.code.config</field>
            <field name="arch" type="xml">
                <form string="attribute_code_config_form">
                    <field name="attr_code" widget="ace" options="{'mode': 'python'}"/>
                </form>
            </field>
        </record>

        <record id="attribute_code_config_action" model="ir.actions.act_window">
            <field name="name">Attribute Code Config</field>
            <field name="res_model">attribute.code.config</field>
            <field name="view_mode">form</field>
            <field name="res_id" ref="forlife_base.attr_code_default"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>