<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="res_partner_bank_data_inherit">
            <field name="name">res.partner.bank.data.inherit</field>
            <field name="model">res.partner.bank</field>
            <field name="inherit_id" ref="base.view_partner_bank_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='allow_out_payment']" position="after">
                    <field name="gl_account"/>
                    <field name="description"/>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="res_partner_bank_tree_data_inherit">
            <field name="name">res.partner.bank.tree.data.inherit</field>
            <field name="model">res.partner.bank</field>
            <field name="inherit_id" ref="account.view_partner_bank_form_inherit_account"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='allow_out_payment']" position="after">
                    <field name="gl_account"/>
                    <field name="description"/>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="res_bank_data_inherit">
            <field name="name">res.bank.data.inherit</field>
            <field name="model">res.bank</field>
            <field name="inherit_id" ref="base.view_res_bank_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='bic']" position="before">
                    <field name="transaction_name"/>
                </xpath>
                <xpath expr="//field[@name='phone']" position="before">
                    <field name="headbank_id"/>
                    <field name="level"/>
                </xpath>
                <xpath expr="//field[@name='email']" position="after">
                    <field name="license_start"/>
                    <field name="date_valid"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>