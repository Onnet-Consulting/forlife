<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_bkav_connector" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.bkav_connector</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="41"/>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='quick_edit_mode']" position="after">
                    <h2>BKAV Config Parameter</h2>
                    <div class="row mt16 o_settings_container" id="bkav_config_parameter">
                        <div class="col-12 col-lg-12 o_setting_box">
                            <group>
                                <group>
                                    <field name="bkav_token_create"/>
                                    <field name="bkav_email"/>
                                    <field name="bkav_password"/>
                                    <field name="bkav_add_einvoice"/>
                                    <field name="bkav_update_einvoice"/>
                                    <field name="bkav_get_invoice_by_id"/>
                                    <field name="bkav_delete_einvoice"/>
                                </group>
                                <group>
                                    <field name="bkav_search_einvoice"/>
                                    <field name="bkav_get_availiable_serial"/>
                                    <field name="bkav_publish_invoice"/>
                                    <field name="bkav_get_status_invoices"/>
                                    <field name="bkav_download_invoice_as_pdf"/>
                                    <field name="bkav_download_invoice_as_xml"/>
                                    <field name="bkav_invoice_business"/>
                                </group>
                            </group>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
