<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="invoice_not_exists_bkav_form" model="ir.ui.view">
        <field name="name">name</field>
        <field name="model">invoice.not.exists.bkav</field>
        <field name="arch" type="xml">
            <form create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="move_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="company_id" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="exists_bkav" readonly="1"/>
                            <field name="is_post_bkav" readonly="1"/>
                            <field name="invoice_no" readonly="1"/>
                            <field name="invoice_form" readonly="1"/>
                            <field name="invoice_serial" readonly="1"/>
                        </group>
                        <group>
                            <field name="invoice_state_e" readonly="1"/>
                            <field name="invoice_guid" readonly="1"/>
                            <field name="invoice_e_date" readonly="1"/>
                        </group>
                    </group>
                    <field name="eivoice_file" attrs="{'invisible':[('eivoice_file', '=', False)]}"/>
                    <button name="create_invoice_bkav" type="object" class="btn btn-primary" attrs="{'invisible':[('invoice_guid', '!=', False)]}" string="Create eInvoice" groups="account.group_account_invoice"/>
                    <button name="get_invoice_bkav" type="object" class="btn btn-primary" attrs="{'invisible':[('invoice_guid', '=', False)]}" string="Get eInvoice" groups="account.group_account_invoice"/>
                    <button name="update_invoice_bkav" type="object" class="btn btn-primary" attrs="{'invisible':[('invoice_guid', '=', False)]}" string="Update eInvoice" groups="account.group_account_invoice"/>
                    <button name="publish_invoice_bkav" type="object" class="btn btn-primary" attrs="{'invisible':['|',('invoice_guid', '=', False),('is_post_bkav', '=', True)]}" string="Publish eInvoice" groups="account.group_account_invoice"/>
                    <button name="download_invoice_bkav" type="object" class="btn btn-primary" attrs="{'invisible':[('invoice_guid', '=', False)]}" string="Download eInvoice" groups="account.group_account_invoice"/>
                    <notebook>
                        <page name="detail" string="Detail">
                            <field name="line_ids" readonly="1">
                                <tree editable="bottom">
                                    <field name="parent_id" invisible="1"/>
                                    <field name="product_id"/>
                                    <field name="uom_id"/>
                                    <field name="taxes_id"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="price_subtotal"/>
                                </tree>
                            </field>
                        </page>
                        <page name="invoice" string="Invoices">
                            <field name="invoice_ids" readonly="1">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="partner_id"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="invoice_not_exists_bkav_tree" model="ir.ui.view">
        <field name="name">invoice.not.exists.bkav.name</field>
        <field name="model">invoice.not.exists.bkav</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="move_date" readonly="1"/>
                <field name="company_id" readonly="1"/>
                <field name="exists_bkav" readonly="1"/>
                <field name="is_post_bkav" readonly="1"/>
                <field name="invoice_no" readonly="1"/>
                <field name="invoice_form" readonly="1"/>
                <field name="invoice_serial" readonly="1"/>
                <field name="invoice_e_date" readonly="1"/>
                <field name="invoice_guid" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="invoice_not_exists_bkav_action" model="ir.actions.act_window">
        <field name="name">General invoice not exists BKAV</field>
        <field name="res_model">invoice.not.exists.bkav</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="invoice_not_exists_bkav_menu" parent="account.account_invoicing_menu" action="invoice_not_exists_bkav_action" sequence="10"/>
</odoo>