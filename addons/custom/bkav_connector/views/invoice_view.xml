<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="bakv_invoice_form_view" model="ir.ui.view">
            <field name="name">bkav.invoice.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="is_post_bkav"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="company_type"/>
                </xpath>
                <xpath expr="//div[@name='journal_div']" position="after">
                    <field name="eivoice_file" attrs="{'invisible':[('eivoice_file', '=', False)]}"/>
                </xpath>
                <xpath expr="//button[@name='button_draft']" position="after">
                    <button name="preview_e_invoice" type="object" class="btn btn-primary"
                            attrs="{'invisible':[('state', '!=', 'draft'), ('eivoice_file', '=', False)]}"
                            string="Preview eInvoice" groups="account.group_account_invoice"/>
                    <button name="dowload_e_invoice" type="object" class="btn btn-primary" string="Dowload eInvoice"
                            attrs="{'invisible':[('state', '!=', 'draft'), ('eivoice_file', '=', False)]}"
                            groups="account.group_account_invoice"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>