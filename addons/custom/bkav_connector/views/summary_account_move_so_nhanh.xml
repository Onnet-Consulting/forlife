<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="summary_account_move_so_nhanh_tree" model="ir.ui.view">
        <field name="name">summary.account.move.so.nhanh.tree</field>
        <field name="model">summary.account.move.so.nhanh</field>
        <field name="arch" type="xml">
            <tree create="true" edit="false">
                <field name="code"/>
                <field name="company_id"/>
                <field name="partner_id"/>
                <field name="invoice_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="summary_account_move_so_nhanh_form" model="ir.ui.view">
        <field name="name">summary.account.move.so.nhanh.form</field>
        <field name="model">summary.account.move.so.nhanh</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="company_id"/>
                            <field name="partner_id"/>
                            <field name="invoice_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="detail" string="Detail">
                            <field name="line_ids">
                                <tree editable="bottom" create="0">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="barcode"/>
                                    <field name="account_id"/>
                                    <field name="invoice_ids" widget="many2many_tags" readonly="1"/>
                                    <field name="quantity"/>
                                    <field name="product_uom_id"/>
                                    <field name="price_unit"/>
                                    <field name="x_free_good"/>
                                    <field name="tax_ids" widget="many2many_tags"/>
                                    <field name="tax_amount"/>
                                    <field name="price_subtotal"/>
                                    <field name="amount_total"/>
                                </tree>
                            </field>
                        </page>
                        <page name="other_info" string="Other Information">
                            <field name="line_discount_ids">
                                <tree editable="bottom" create="0">
                                    <field name="promotion_type"/>
                                    <field name="price_unit"/>
                                    <field name="tax_ids" widget="many2many_tags"/>
                                    <field name="tax_amount"/>
                                    <field name="price_unit_incl"/>
                                    <field name="amount_total"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="summary_invoice_so_sell_nhanh_action" model="ir.actions.act_window">
        <field name="name">Tổng hợp hóa đơn bán</field>
        <field name="res_model">summary.account.move.so.nhanh</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>