<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_compensate_point_wizard_form" model="ir.ui.view">
        <field name="model">compensate.point.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="partner_id" invisible="1"/>
                    <field name="type" invisible="1"/>
                    <group col="3">
                        <group col="2">
                            <field name="date_order"/>
                        </group>
                        <group col="3">
                            <field name="points_fl_order"/>
                        </group>
                        <group col="1">
                            <field name="reason"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_confirm" string="Confirm" type="object"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_compensate_forlife_point_wizard" model="ir.actions.act_window">
        <field name="name">Compensate Forlife Point</field>
        <field name="res_model">compensate.point.wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_type': 'forlife'}</field>
        <field name="target">new</field>
    </record>

    <record id="action_compensate_format_point_wizard" model="ir.actions.act_window">
        <field name="name">Compensate Format Point</field>
        <field name="res_model">compensate.point.wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_type': 'format'}</field>
        <field name="target">new</field>
    </record>

</odoo>
