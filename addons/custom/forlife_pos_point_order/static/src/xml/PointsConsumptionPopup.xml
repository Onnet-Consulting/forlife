<?xml version="1.0" encoding="utf-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="PointsConsumptionPopup" owl="1">
        <div class="popup assign-employee-popup">
            <header class="title">
                <t t-esc="props.title"/>
            </header>
            <main class="body">
                <table style="width:100%; border:1px solid black;">
                    <tr style="width:100%; border:1px solid black;">
                        <th style="border:1px solid black;">Sản phẩm</th>
                        <th style="border:1px solid black;">Giá</th>
                        <th style="border:1px solid black;">Điểm sử dụng</th>
                    </tr>
                    <t t-foreach="env.pos.selectedOrder.orderlines" t-as="line" t-key="line.id">
                        <tr style="width:100%; border:1px solid black;">
                            <td style="border:1px solid black;"><t t-esc="line.product.display_name"/></td>
                            <td style="border:1px solid black;"><t t-esc="env.pos.format_currency(line.get_price_with_tax())"/></td>
                            <td style="border:1px solid black;">10</td>
                        </tr>
                    </t>

                </table>
            </main>
            <footer class="footer">
                <div style="width:100%">
                    <div class="button cancel" t-on-click="cancel">
                        <t t-esc="props.cancelTitle"/>
                    </div>
                    <div class="button confirm highlight">
                        <t t-esc="props.divisionpoint"/>
                    </div>
                    <div class="button confirm highlight" t-on-click="confirm">
                        <t t-esc="props.confirmTitle"/>
                    </div>
                </div>

            </footer>
        </div>
    </t>
</templates>