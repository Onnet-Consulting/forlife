<!--                            domain="[('allow_compensate_point','=', True)]"/>-->
<!--                </field>-->
<!--            </field>-->
<!--        </record>-->
        <record id="action_compensate_point_all" model="ir.actions.server">
            <field name="name">Compensate Points</field>
            <field name="model_id" ref="point_of_sale.model_pos_order"/>
            <field name="groups_id" eval="[(4, ref('forlife_promotion.promotion_manager'))]"/>
            <field name="binding_model_id" ref="point_of_sale.model_pos_order"/>
            <field name="state">code</field>
            <field name="code">action = records.btn_compensate_points_all()</field>
        </record>
    </data>
</odoo>