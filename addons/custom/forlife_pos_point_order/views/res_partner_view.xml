<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="res_partner_forlife_inherit">
            <field name="name">res.partner.forlife.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="is_member_app_forlife" invisible="1"/>
                    <field name="is_member_app_format" invisible="1"/>
                </xpath>
                <xpath expr="//page[@name='accounting']" position="after">
                    <page name="history_point_forlife" string="TokyoLife" attrs="{'invisible': [('is_member_app_forlife','=',False)]}">
                        <button name="%(action_compensate_forlife_point_wizard)d" type="action" class="oe_highlight" string="Compensate"/>
                        <group>
                            <group>
                                <field name="reset_day_of_point_forlife"/>
                                <field name="is_purchased_of_forlife"/>
                            </group>
                            <group>
                                <field name="total_points_available_forlife"/>
                            </group>
                        </group>
                        <group>
                            <field name="history_points_forlife_ids" string="TokyoLife">
                                <tree editable="bottom">
                                    <field name="create_date"/>
                                    <field name="date_order"/>
                                    <field name="points_fl_order"/>
                                    <field name="point_order_type"/>
                                    <field name="points_used"/>
                                    <field name="points_back"/>
                                    <field name="points_store"/>
                                    <field name="reason"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page name="history_point_format" string="Format" attrs="{'invisible': [('is_member_app_format','=',False)]}">
                        <button name="%(action_compensate_format_point_wizard)d" type="action" class="oe_highlight" string="Compensate"/>
                        <group>
                            <group>
                                <field name="reset_day_of_point_format"/>
                                <field name="is_purchased_of_format"/>
                            </group>
                            <group>
                                <field name="total_points_available_format"/>
                            </group>
                        </group>
                        <group>
                            <field name="history_points_format_ids" string="Format">
                                <tree editable="bottom">
                                    <field name="create_date"/>
                                    <field name="date_order"/>
                                    <field name="points_fl_order"/>
                                    <field name="point_order_type"/>
                                    <field name="points_used"/>
                                    <field name="points_back"/>
                                    <field name="points_store"/>
                                    <field name="reason"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>