<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="transfer_not_exists_bkav_form" model="ir.ui.view">
        <field name="name">name</field>
        <field name="model">transfer.not.exists.bkav</field>
        <field name="arch" type="xml">
            <form create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="code" readonly="1"/>
                            <field name="location_id" readonly="1"/>
                            <field name="location_name" readonly="1"/>
                            <field name="location_dest_id" readonly="1"/>
                            <field name="location_dest_name" readonly="1"/>

                        </group>
                        <group>
                            <field name="company_id" readonly="1"/>
                            <field name="date_transfer" readonly="1"/>
                            <field name="vendor_contract_id" readonly="1"/>
                            <field name="delivery_contract_id" readonly="1"/>
                            <field name="transporter_id" readonly="1"/>
                            <field name="state" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="transfers" string="DS điều chuyển">
                            <field name="transfer_ids" readonly="1">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="location_id"/>
                                    <field name="location_dest_id"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page name="detail" string="DS sản phẩm">
                            <field name="line_ids" readonly="1">
                                <tree editable="bottom">
                                    <field name="parent_id" invisible="1"/>
                                    <field name="product_id"/>
                                    <field name="uom_id"/>
                                    <field name="quantity"/>
                                </tree>
                            </field>
                        </page>
                        <page id="bkav_invoice" string="BKAV Invoice">
                            <field name="eivoice_file" attrs="{'invisible':[('eivoice_file', '=', False)]}"/>
                            <button name="create_invoice_bkav" type="object" class="btn btn-primary" attrs="{'invisible':[('invoice_guid', '!=', False)]}" string="Create eInvoice" groups="account.group_account_invoice"/>
                            <button name="get_invoice_bkav" type="object" class="btn btn-primary" attrs="{'invisible':[('invoice_guid', '=', False)]}" string="Get eInvoice" groups="account.group_account_invoice"/>
                            <button name="update_invoice_bkav" type="object" class="btn btn-primary" attrs="{'invisible':['|',('invoice_guid', '=', False),('is_post_bkav', '=', True)]}" string="Update eInvoice" groups="account.group_account_invoice"/>
                            <button name="publish_invoice_bkav" type="object" class="btn btn-primary" attrs="{'invisible':['|',('invoice_guid', '=', False),('is_post_bkav', '=', True)]}" string="Publish eInvoice" groups="account.group_account_invoice"/>
                            <button name="download_invoice_bkav" type="object" class="btn btn-primary" attrs="{'invisible':[('invoice_guid', '=', False)]}" string="Download eInvoice" groups="account.group_account_invoice"/>
                            <br/>
                            <br/>
                            <group>
                                <group>
                                    <field name="exists_bkav" readonly="1"/>
                                    <field name="is_post_bkav" readonly="1"/>
                                    <field name="invoice_no" readonly="1"/>
                                    <field name="invoice_form" readonly="1"/>
                                    <field name="invoice_serial" readonly="1"/>
                                </group>
                                <group>
                                    <field name="invoice_state_e" readonly="1"/>
                                    <field name="invoice_guid" readonly="1"/>
                                    <field name="invoice_e_date" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="transfer_not_exists_bkav_tree" model="ir.ui.view">
        <field name="name">transfer.not.exists.bkav.name</field>
        <field name="model">transfer.not.exists.bkav</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="code" readonly="1"/>
                <field name="location_id" readonly="1"/>
                <field name="location_name" readonly="1"/>
                <field name="location_dest_id" readonly="1"/>
                <field name="location_dest_name" readonly="1"/>
                <field name="company_id" readonly="1"/>
                <field name="date_transfer" readonly="1"/>
                <field name="vendor_contract_id" readonly="1"/>
                <field name="delivery_contract_id" readonly="1"/>
                <field name="transporter_id" readonly="1"/>
                <field name="invoice_e_date"/>
                <field name="invoice_guid"/>
                <field name="invoice_no"/>
            </tree>
        </field>
    </record>

    <record id="transfer_not_exists_bkav_action" model="ir.actions.act_window">
        <field name="name">General transfer not exists BKAV</field>
        <field name="res_model">transfer.not.exists.bkav</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="transfer_not_exists_bkav_menu" parent="stock.menu_stock_config_settings" action="transfer_not_exists_bkav_action" sequence="100"/>
</odoo>