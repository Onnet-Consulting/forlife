<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="stock_incoming_outgoing_report_view_form" model="ir.ui.view">
        <field name="name">stock_incoming_outgoing_report_view_form</field>
        <field name="model">stock.value.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1 class="text-center" >
                        Stock Incoming Outgoing Report
                    </h1>
                    <separator/>
                    <group>
                        <group>
                            <label for="date_from" string="Từ ngày"/>
                            <div class="o_row">
                                <field name="date_from"/> <span style="margin: 0px 10px; font-weight: 600;">đến ngày</span><field name="date_to"/>
                            </div>
                        </group>
                        <group>
                            <field name="account_id" options="{'no_create': True,'no_create_edit': True, 'no_open': True}"/>
                            <field name="based_on_account" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="category_ids" widget="many2many_tags" options="{'no_create': True,'no_create_edit': True, 'no_open': True}"/>
                        <field name="product_ids" widget="many2many_tags" options="{'no_create': True,'no_create_edit': True, 'no_open': True}"/>
                    </group>

                    <notebook>
                        <page id="detail_report" string="Detail">
                            <button name="action_get_stock_incoming_outgoing_report" string="Get Report" type="object" class="btn-primary"/>
                            <div style="display: inline-block; margin: 5px;"></div>
                            <button name="action_export_stock_incoming_outgoing_report" string="Export Report" type="object" class="btn-primary"/>
                            <div style="display: inline-block; margin: 5px;"></div>
                            <button name="action_create_quant_period" string="Create Quant" type="object" class="btn-primary"/>
                            <field name="detail_ids" readonly="1">
                                <tree limit="1000">
                                    <field name="report_id" invisible="1"/>
                                    <field name="account_id" invisible="1"/>
                                    <field name="account_code"/>
                                    <field name="product_code"/>
                                    <field name="product_id"/>
                                    <field name="opening_quantity" sum="Total Opening Quantity"/>
                                    <field name="opening_value" sum="Total Opening Value"/>
                                    <field name="incoming_quantity" sum="Total Incoming Quantity"/>
                                    <field name="incoming_value" sum="Total Incoming Value"/>
                                    <field name="odoo_outgoing_quantity" sum="Total Outgoing Quantity"/>
                                    <field name="real_outgoing_value" sum="Total Outgoing Value"/>
                                    <field name="closing_quantity" sum="Total Closing Quantity"/>
                                    <field name="closing_value" sum="Total Closing Value"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="stock_incoming_outgoing_report_action" model="ir.actions.act_window">
        <field name="name">Stock Incoming Outgoing Report</field>
        <field name="res_model">stock.value.report</field>
        <field name="view_mode">form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'form', 'view_id': ref('forlife_stock_report.stock_incoming_outgoing_report_view_form')})]"/>
        <field name="context">{'default_name': 'Stock Incoming Outgoing Report'}</field>
    </record>

    <menuitem id="stock_incoming_outgoing_report_menu" name="Stock Incoming Outgoing Report"
              parent="stock.menu_warehouse_report" action="stock_incoming_outgoing_report_action" sequence="315"/>

</odoo>