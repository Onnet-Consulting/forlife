<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="calculate_final_value_view_tree" model="ir.ui.view">
            <field name="name">calculate_final_value_view_tree</field>
            <field name="model">calculate.final.value</field>
            <field name="arch" type="xml">
                <tree string="calculate_final_value_tree">
                    <field name="name"/>
                    <field name="category_type_id"/>
                    <field name="month"/>
                    <field name="year"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                </tree>
            </field>
        </record>

        <record id="calculate_final_value_view_form" model="ir.ui.view">
            <field name="name">calculate_final_value_view_form</field>
            <field name="model">calculate.final.value</field>
            <field name="arch" type="xml">
                <form string="calculate_final_value_form">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" name="action_view_pinv" class="oe_stat_button"
                                    icon="fa-pencil-square-o">
                                <div class="o_stat_info">
                                    <field name="product_inv_count" class="o_stat_value" readonly="1"/>
                                    <span class="o_stat_text">Tồn cuối kỳ</span>
                                </div>
                            </button>
                            <button type="object" name="action_view_entry1" class="oe_stat_button"
                                    icon="fa-pencil-square-o">
                                <div class="o_stat_info">
                                    <field name="entry1_count" class="o_stat_value" readonly="1"/>
                                    <span class="o_stat_text">Bút toán lần 1</span>
                                </div>
                            </button>
                            <button type="object" name="action_view_entry2" class="oe_stat_button"
                                    icon="fa-pencil-square-o">
                                <div class="o_stat_info">
                                    <field name="entry2_count" class="o_stat_value" readonly="1"/>
                                    <span class="o_stat_text">Bút toán lần 2</span>
                                </div>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="month"/>
                                <field name="from_date"/>
                            </group>
                            <group>
                                <field name="year"/>
                                <field name="to_date"/>
                            </group>
                        </group>
                        <group col="2">
                            <group>
                                <field name="category_type_id"/>
                            </group>
                        </group>
                        <div class="d-flex">
                            <button name="get_data_unit_price_product" string="Đơn giá bình quân sản phẩm"
                                    type="object"/>
                            <span class="fa fa-arrow-right" style="display: flex; align-items: center;"/>
                            <button name="get_data_diff_value" string="Tính bảng kê chênh lệch" type="object"/>
                            <span class="fa fa-arrow-right" style="display: flex; align-items: center;"/>
                            <button name="create_invoice_diff_entry1" string="Hạch toán chênh lệch lần 1"
                                    type="object"/>
                            <span class="fa fa-arrow-right" style="display: flex; align-items: center;"/>
                            <button name="create_invoice_diff_entry2" string="Hạch toán chênh lệch lần 2"
                                    type="object"/>
                        </div>

                        <notebook>
                            <page name="product_inv_lines" string="Đơn giá tồn cuối kỳ">
                                <field name="product_inv_lines" readonly="1">
                                    <tree>
                                        <field name="product_id"/>
                                        <field name="qty_begin_period"/>
                                        <field name="amount_begin_period"/>
                                        <field name="qty_in_period"/>
                                        <field name="amount_period"/>
                                        <field name="amount_product"/>
                                    </tree>
                                </field>
                            </page>

                            <page name="goods_diff_lines" string="Bảng kê chênh lệch">
                                <field name="goods_diff_lines" readonly="1">
                                    <tree>
                                        <field name="product_id"/>
                                        <field name="account_id"/>
                                        <field name="production_code"/>
                                        <field name="occasion_code"/>
                                        <field name="account_analytic"/>
                                        <field name="asset_code"/>
                                        <field name="product_end_id"/>
                                        <field name="qty"/>
                                        <field name="amount_export"/>
                                        <field name="amount_avg"/>
                                        <field name="amount_diff"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="calculate_final_value_action" model="ir.actions.act_window">
            <field name="name">Tính giá trị cuối kỳ</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">calculate.final.value</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem
                id="calculate_final_value_action_menu"
                parent="stock.menu_warehouse_report"
                action="forlife_stock_report.calculate_final_value_action"
                groups="base.group_user"
        />
    </data>
</odoo>