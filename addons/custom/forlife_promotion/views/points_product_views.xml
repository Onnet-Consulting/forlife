<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="points_product_view_tree" model="ir.ui.view">
            <field name="name">points_product_view_tree</field>
            <field name="model">points.product</field>
            <field name="arch" type="xml">
                <tree string="points_product_tree">
                    <field name="product_ids"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="point_addition"/>
                    <field name="state"/>
                    <button name="btn_effective" string="Active" class="oe_highlight" states="new" type="object"/>
                </tree>
            </field>
        </record>

        <record id="points_product_view_form" model="ir.ui.view">
            <field name="name">points_product_view_form</field>
            <field name="model">points.product</field>
            <field name="arch" type="xml">
                <form string="points_product_form">
                    <header>
                        <button name="btn_effective" string="Active" class="oe_highlight" states="new" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="point_addition" attrs="{'readonly': [('state', '!=', 'new')]}"/>
                            </group>
                            <group>
                                <field name="from_date" attrs="{'readonly': [('state', '!=', 'new')]}"/>
                                <field name="to_date" attrs="{'readonly': [('state', '!=', 'new')]}"/>
                            </group>
                        </group>
                        <group>
                            <field name="product_ids" attrs="{'readonly': [('state', '!=', 'new')]}">
                                <tree edit="0">
                                    <field name="default_code"/>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <field name="points_promotion_id" invisible="1"/>
                </form>
            </field>
        </record>

    </data>
</odoo>