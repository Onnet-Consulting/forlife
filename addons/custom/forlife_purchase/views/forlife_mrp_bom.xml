<odoo>
    <record id="forlife_mrp_bom_tree" model="ir.ui.view">
        <field name="name">forlife.mrp.bom.tree</field>
        <field name="model">forlife.mrp.bom</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree>
                <field name="forlife_production_id"/>
                <field name="product_id" optional="show"/>
                <field name="create_date" optional="show"/>
                <field name="write_date" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="forlife_mrp_bom_form" model="ir.ui.view">
        <field name="name">forlife.mrp.bom.form</field>
        <field name="model">forlife.mrp.bom</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="forlife_production_id"/>
                            <field name="product_id"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="quantity"/>
                            <field name="uom_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Materials">
                            <field name="materials_line" mode="tree">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description" readonly="1"/>
                                    <field name="colour" readonly="1"/>
                                    <field name="uom_id"/>
                                    <field name="quantity"/>
                                    <field name="loss"/>
                                    <field name="coefficient_exchange"/>
                                    <field name="plant"/>
                                    <field name="demand_m"/>
                                    <field name="demand_kg"/>
                                    <field name="warehouse"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Cost Services">
                            <field name="cost_line" mode="tree">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description" readonly="1"/>
                                    <field name="uom_id"/>
                                    <field name="quantity"/>
                                    <field name="prices"/>
                                    <field name="total"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_forlife_mrp_bom" model="ir.actions.act_window">
        <field name="name">Work Order</field>
        <field name="res_model">forlife.mrp.bom</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('forlife_mrp_bom_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('forlife_mrp_bom_form')})]"/>
    </record>

    <menuitem id="forlife_mrp_bom_menu"
              parent="purchase.menu_purchase_root"
              action="forlife_purchase.action_forlife_mrp_bom"
              name="MRP BOM" sequence="1"/>
</odoo>