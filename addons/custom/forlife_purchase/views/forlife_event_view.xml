<odoo>
    <record id="forlife_event_tree" model="ir.ui.view">
        <field name="name">forlife.event.tree</field>
        <field name="model">forlife.event</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Forlife Event" editable="top">
                <field name="name"/>
                <field name="code"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="forlife_event_action" model="ir.actions.act_window">
        <field name="name">Program of events</field>
        <field name="res_model">forlife.event</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>