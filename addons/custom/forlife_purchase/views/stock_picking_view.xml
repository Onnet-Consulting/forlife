<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="forlife_stock_stock_picking_po_form_view" model="ir.ui.view">
            <field name="name">forlife.stock.stock.picking.po.form.view</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='owner_id']" position="after">
                    <field name="is_pk_purchase" invisible="1"/>
				</xpath>
                <xpath expr="//page[@name='detailed_operations']//field[@name='move_line_ids_without_package']"
                       position="replace">
                    <field name="move_line_ids_without_package">
                        <tree editable="bottom" class="width-hh">
                            <field name="product_id"/>
                            <field name="location_dest_id"/>
                            <field name="lot_name"/>
                            <field name="purchase_uom"
                                   attrs="{'column_invisible': [('parent.is_pk_purchase', '=', False)]}"/>
                            <field name="quantity_change"
                                   attrs="{'column_invisible': [('parent.is_pk_purchase', '=', False)]}"/>
                            <field name="quantity_purchase_done"
                                   attrs="{'column_invisible': [('parent.is_pk_purchase', '=', False)]}"/>
                            <field name="qty_done"
                                   decoration-warning="reserved_uom_qty &lt; qty_done"
                                   decoration-success="reserved_uom_qty == qty_done" readonly="1" force_save="1"/>
                            <field name="product_uom_id"/>
                            <field name="product_uom_category_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                             <field name="reserved_uom_qty" invisible="1"/>
                        </tree>
                    </field>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
