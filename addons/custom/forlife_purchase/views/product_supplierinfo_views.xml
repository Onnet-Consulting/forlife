<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_supplierinfo_form_view_forlife_inherit" model="ir.ui.view">
            <field name="name">view.form.purchase.provider.forlife.inherit</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="amount_conversion"/>
                </xpath>
                <xpath expr="//field[@name='date_start']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//field[@name='product_uom']" position="before">
                    <label for="product_uom" string="Đơn vị mua"/>
                </xpath>
                <xpath expr="//field[@name='product_uom']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//field[@name='date_end']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
            </field>
        </record>
        <record id="product_supplierinfo_tree_view_forlife_inherit" model="ir.ui.view">
            <field name="name">view.tree.purchase.provider.forlife.inherit</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="default_order">create_date desc</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>