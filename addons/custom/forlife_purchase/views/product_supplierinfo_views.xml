<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_supplierinfo_form_view_forlife_inherit" model="ir.ui.view">
            <field name="name">view.form.purchase.provider.forlife.inherit</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="uom_product_tmpl"/>
                    <field name="amount_conversion"/>
                </xpath>
                <field name="partner_id" position="after">
<!--                    <field name="vendor_code"/>-->
                    <field name="uom_product_tmpl" invisible="1"/>
                    <field name="uom_product" invisible="1"/>
                </field>
                <xpath expr="//field[@name='date_start']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//field[@name='date_end']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>