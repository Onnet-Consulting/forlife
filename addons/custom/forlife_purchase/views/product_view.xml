<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_product_form_view" model="ir.ui.view">
            <field name="name">product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']//field[@name='detailed_type']" position="after">
                    <field name="barcode_country"/>
                    <field name="x_type_cost_product" widget="radio"/>
                </xpath>
                <xpath expr="//div[@name='options']" position="inside">
                    <span class="d-inline-block">
                        <field name="pos_ok"/>
                        <label for="pos_ok"/>
                    </span>
                </xpath>
                <xpath expr="//field[@name='detailed_type']" position="after">
                    <field name="product_type"/>
                    <field name="is_store_spend"/>
                </xpath>
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="expiration_date"/>
                    <field name="warning_date"/>
                </xpath>
            </field>
        </record>

         <record id="inherit_product_form_view_forlife_purchase" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']//field[@name='detailed_type']" position="after">
                    <field name="x_type_cost_product" widget="radio"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>