<odoo>
    <record id="forlife_production_tree" model="ir.ui.view">
        <field name="name">forlife.production.tree</field>
        <field name="model">forlife.production</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Forlife Production" default_order="id desc,version desc">
                <field name="active" invisible="1"/>
                <field name="code"/>
                <field name="name"/>
                <field name="implementation_id"/>
                <field name="management_id"/>
                <field name="production_department"/>
                <field name="user_id"/>
                <field name="created_date"/>
                <field name="company_id"/>
                <button name="action_open_history" attrs="{'invisible': [('active', '=', False)]}" string="History" type="object" class="oe_title"/>
            </tree>
        </field>
    </record>

    <record id="forlife_production_form" model="ir.ui.view">
        <field name="name">forlife.production.form</field>
        <field name="model">forlife.production</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <button string="Trở về nháp" name="action_draft" type="object"
                            attrs="{'invisible': [('state', '!=', 'wait_confirm')]}"/>
                    <button string="Gửi duyệt" name="action_wait_confirm"
                            type="object" attrs="{'invisible':[('state', '!=', 'draft')]}"/>
                    <button string="Phê duyệt" name="action_approved" type="object"
                            attrs="{'invisible':[ ('state', '!=', 'wait_confirm')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <header>
                    <button string="Đóng" name="action_done" type="object"
                            attrs="{'invisible':[ '|', ('state', '!=', 'approved'),('status', '=', 'done')]}"/>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="version" attrs="{'invisible':[ ('version', '=', 0)], 'readonly':True}"/>
                            <field name="code" attrs="{'readonly':[ ('state', '=', 'approved')]}"/>
                            <field name="name" attrs="{'readonly':[ ('state', '=', 'approved')]}"/>
                            <field name="user_id" attrs="{'readonly':[ ('state', '=', 'approved')]}"/>
                            <field name="created_date" attrs="{'readonly':[ ('state', '=', 'approved')]}"/>
                            <field name="selected_product_ids" invisible="1"/>
                            <field name="order_manager_id"/>
                        </group>
                        <group>
                            <field name="implementation_id" attrs="{'readonly':[ ('state', '=', 'approved')]}"/>
                            <field name="management_id" attrs="{'readonly':[ ('state', '=', 'approved')]}"/>
                            <field name="production_department" attrs="{'readonly':[ ('state', '=', 'approved')]}"/>
                            <field name="brand_id" attrs="{'readonly':[ ('state', '=', 'approved')]}"/>

                            <field name="produced_from_date" attrs="{'readonly':[ ('state', '=', 'approved')]}"/>
                            <field name="to_date" attrs="{'readonly':[ ('state', '=', 'approved')]}"/>
                        </group>
                    </group>
                    <div style="text-align: right;">
                        <button name="update_bom" type="object" string="Cập nhật BOM"/>
                    </div>
                    <notebook>
                        <page string="Finished Product" name="finished_product">
                            <field name="forlife_production_finished_product_ids" mode="tree"
                                   attrs="{'readonly': [('state', '=', 'approved')]}">
                                <tree editable="bottom">
                                    <field name="forlife_production_id" invisible="1"/>
                                    <field name="is_check" invisible="1"/>
                                    <field name="product_id" domain="[('id', 'not in', parent.selected_product_ids)]"/>
                                    <field name="description"/>
                                    <field name="color"/>
                                    <field name="size"/>
                                    <field name="produce_qty"/>
                                    <field name="uom_id"/>
                                    <field name="unit_price" force_save="1"/>
                                    <field name="stock_qty" readonly="1" force_save="1"/>
                                    <field name="remaining_qty"/>
                                    <button name="action_open_bom" attrs="{'invisible': [('is_check', '=', False)]}" string="BOM" type="object"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Nguyên liệu chính" name="material_product">
                            <field name="material_import_ids" mode="tree" attrs="{'readonly': [('state', '=', 'approved')]}">
                                <tree editable="bottom">
                                    <field name="production_id" invisible="1"/>
                                    <field name="product_id"/>
                                    <field name="product_backup_id"/>
                                    <field name="size"/>
                                    <field name="color"/>
                                    <field name="uom_id"/>
                                    <field name="production_uom_id"/>
                                    <field name="conversion_coefficient"/>
                                    <field name="rated_level" force_save="1"/>
                                    <field name="loss" force_save="1"/>
                                    <field name="qty"/>
                                    <field name="total"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Chi phí" name="expense_product">
                            <field name="expense_import_ids" mode="tree" attrs="{'readonly': [('state', '=', 'approved')]}">
                                <tree editable="bottom">
                                    <field name="production_id" invisible="1"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="cost_norms" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="total_cost_norms" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="forlife_production_bom_view_search" model="ir.ui.view">
        <field name="name">forlife.production.bom.search</field>
        <field name="model">forlife.production</field>
        <field name="arch" type="xml">
            <search string="Worksheet Template Search">
                <field name="code"/>
                <field name="name"/>
                <field name="user_id"/>
                <field name="create_date"/>
                <field name="company_id"/>
            </search>
        </field>
    </record>

    <record id="forlife_production_finished_tree" model="ir.ui.view">
        <field name="name">forlife.production.finished.tree</field>
        <field name="model">forlife.production.finished.product</field>
        <field name="arch" type="xml">
            <tree string="" duplicate="0">
                <field name="forlife_production_id"/>
                <field name="description"/>
                <field name="implementation_id"/>
                <field name="management_id"/>
                <field name="production_department"/>
                <field name="product_id"/>
                <field name="unit_price"/>
                <field name="create_date"/>
                <field name="write_date"/>
            </tree>
        </field>
    </record>

    <record id="forlife_production_finished_form" model="ir.ui.view">
            <field name="name">forlife.production.finished.form</field>
            <field name="model">forlife.production.finished.product</field>
            <field name="arch" type="xml">
                <form string="" duplicate="0">
                    <sheet>
                        <group>
                            <group>
                                <field name="forlife_production_id" readonly="1"/>
                                <field name="product_id" readonly="1"/>
                                <field name="produce_qty" readonly="1"/>
                                <field name="implementation_id" />
                                <field name="management_id" />
                                <field name="production_department" />
                            </group>
                            <group>
                                <field name="forlife_production_name"/>
                                <field name="description"/>
                                <field name="uom_id"/>
                                <field name="write_date"/>
                            </group>
                            <group class="d-flex">
                                <field name="unit_price" readonly="1"/>
                                <button name="update_price" string="Cập nhật giá" type="object"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Materials" name="materials">
                                <field name="forlife_bom_material_ids" mode="tree" string="Nguyên vật liệu">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="product_backup_id"/>
                                        <field name="description"/>
                                        <field name="uom_id"/>
                                        <field name="production_uom_id"/>
                                        <field name="conversion_coefficient"/>
                                        <field name="rated_level"/>
                                        <field name="loss"/>
                                        <field name="total"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Service Costs" name="service_costs">
                                <field name="forlife_bom_service_cost_ids" mode="tree" string="Chi phí dịch vụ">
                                    <tree editable="bottom">
                                        <field name="currency_id" invisible="1"/>
                                        <field name="product_id"/>
                                        <field name="rated_level" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

    <record id="forlife_production_finished_action" model="ir.actions.act_window">
        <field name="name">BOM</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">forlife.production.finished.product</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="forlife_production_action" model="ir.actions.act_window">
        <field name="name">Forlife Production</field>
        <field name="res_model">forlife.production</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>