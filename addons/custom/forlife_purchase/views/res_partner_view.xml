<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_res_partner_form_view" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//span[@name='address_name']" position="before">
					<field name="active"/>
                    <field name="code"/>
					<field name="internal_code"/>
					<field name="is_passersby"/>
                    <field name="is_purchase_inter_company" invisible="1"/>
                </xpath>
				<field name="vat" position="after">
					<field name="supplier_group"/>
<!--					<field name="product_category_id"/>-->
				</field>
            </field>
        </record>

        <record id="forlife_partner_action" model="ir.actions.act_window">
            <field name="name">Supplier</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('base.view_partner_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('inherit_res_partner_form_view')})]"/>
            <field name="context">{'default_supplier_rank': 1}</field>
        </record>
    </data>
</odoo>