<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="forlife_bom_tree" model="ir.ui.view">
            <field name="name">forlife.bom.tree</field>
            <field name="model">forlife.bom</field>
            <field name="arch" type="xml">
                <tree string="">
<!--                    <field name="code"/>-->
<!--                    <field name="name"/>-->
<!--                    <field name="quantity"/>-->
                    <field name="forlife_production_id"/>
                    <field name="forlife_production_name"/>
                    <field name="product_id"/>
                    <field name="unit_prices"/>
                    <field name="create_date"/>
                    <field name="write_date"/>
                </tree>
            </field>
        </record>

        <record id="forlife_bom_form" model="ir.ui.view">
            <field name="name">forlife.bom.form</field>
            <field name="model">forlife.bom</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
<!--                                <field name="code"/>-->
<!--                                <field name="name"/>-->
<!--                                <field name="quantity"/>-->
                                <field name="forlife_production_id"/>
                                <field name="product_id"/>
                                <field name="quantity"/>
                            </group>
                            <group>
                                <field name="forlife_production_name"/>
                                <field name="description"/>
                                <field name="uom_id"/>
                                <field name="write_date"/>
                            </group>
                            <group class="d-flex">
                                <field name="unit_prices"/>
                                <button name="update_price" string="Cập nhật giá" type="object"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Materials" name="materials">
                                <field name="forlife_bom_material_ids" mode="tree"
                                       attrs="{'readonly': [('state', 'in', ('confirm', 'approved', 'done'))]}">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="description"/>
                                        <field name="uom_id"/>
                                        <field name="production_uom_id"/>
                                        <field name="conversion_coefficient"/>
                                        <field name="rated_level"/>
                                        <field name="loss"/>
                                        <field name="total"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Ingredients" name="ingredients">
                                <field name="forlife_bom_ingredients_ids" mode="tree">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="description"/>
                                        <field name="uom_id"/>
                                        <field name="production_uom_id"/>
                                        <field name="conversion_coefficient"/>
                                        <field name="rated_level"/>
                                        <field name="loss"/>
                                        <field name="total"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Service Costs" name="service_costs">
                                <field name="forlife_bom_service_cost_ids" mode="tree"
                                       attrs="{'readonly': [('state', 'in', ('confirm', 'approved', 'done'))]}">
                                    <tree editable="bottom">
<!--                                        <field name="currency_id" invisible="1"/>-->
<!--                                        <field name="product_id"/>-->
<!--                                        <field name="description"/>-->
<!--                                        <field name="prices" widget="monetary"-->
<!--                                               options="{'currency_field': 'currency_id'}"/>-->
                                        <field name="product_id"/>
                                        <field name="rated_level"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="forlife_bom_action" model="ir.actions.act_window">
            <field name="name">BOM</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">forlife.bom</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>