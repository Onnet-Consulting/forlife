<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="forlife_bom_tree" model="ir.ui.view">
            <field name="name">forlife.bom.tree</field>
            <field name="model">forlife.bom</field>
            <field name="arch" type="xml">
                <tree string="" duplicate="0" create="0">
<!--                    <field name="code"/>-->
<!--                    <field name="name"/>-->
<!--                    <field name="quantity"/>-->
                    <field name="forlife_production_id"/>
                    <field name="forlife_production_name"/>
                    <field name="implementation_id"/>
                    <field name="management_id"/>
                    <field name="production_department"/>
                    <field name="product_id"/>
                    <field name="unit_prices"/>
                    <field name="create_date"/>
                    <field name="write_date"/>
                </tree>
            </field>
        </record>

        <record id="forlife_bom_form" model="ir.ui.view">
            <field name="name">forlife.bom.form</field>
            <field name="model">forlife.bom</field>
            <field name="arch" type="xml">
                <form string="" duplicate="0" create="0">
                    <sheet>
                        <group>
                            <group>
                                <field name="forlife_production_id" readonly="1"/>
                                <field name="product_id" readonly="1"/>
                                <field name="quantity" readonly="1"/>
                                <field name="implementation_id" readonly="1"/>
                                <field name="management_id" readonly="1"/>
                                <field name="production_department" readonly="1"/>
                            </group>
                            <group>
                                <field name="forlife_production_name"/>
                                <field name="description"/>
                                <field name="uom_id"/>
                                <field name="write_date"/>
                            </group>
                            <group class="d-flex">
                                <field name="unit_prices" readonly="1"/>
                                <button name="update_price" string="Cập nhật giá" type="object"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="forlife_bom_action" model="ir.actions.act_window">
            <field name="name">BOM</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">forlife.bom</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>