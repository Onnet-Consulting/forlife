<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="import_tax_info_wizard_view_form" model="ir.ui.view">
            <field name="name">import_tax_info_wizard_view_form</field>
            <field name="model">import.tax.info.wizard</field>
            <field name="arch" type="xml">
                <form string="import_tax_info_wizard_form">
                    <sheet>
                        <group>
                            <field name="import_file" filename="import_file_name"/>
                            <field name="import_file_name" invisible="1"/>
                            <field name="po_id" invisible="1" force_save="1"/>
                        </group>
                        <group string="Lỗi nhập liệu" attrs="{'invisible': [('error_file', '=', False)]}">
                            <field name="error_file" filename="error_file_name" readonly="1" force_save="1"/>
                            <field name="error_file_name" invisible="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button special="cancel" string="Hủy"/>
                        <button name="action_import" type="object" string="Nhập" class="oe_highlight" attrs="{'invisible': [('import_file', '=', False)]}"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="import_tax_info_wizard_action" model="ir.actions.act_window">
            <field name="name">Nhập thông tin thuế</field>
            <field name="res_model">import.tax.info.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>