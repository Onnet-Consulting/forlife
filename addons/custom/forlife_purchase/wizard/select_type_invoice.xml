<?xml version="1.0"?>
<odoo>
        <record id="select_type_invoice_wizard_from" model="ir.ui.view">
            <field name="name">select.type.invoice.form</field>
            <field name="model">select.type.invoice</field>
            <field name="arch" type="xml">
                <form string="Chọn type PO">
                    <group>
                        <group>
                            <field name="select_type_inv" widget="radio" string="Chọn loại"/>
                        </group>
                        <group>
                            <field name="partner_id" string="Đối tác" attrs="{'invisible': [('select_type_inv','=','normal')], 'required': [('select_type_inv','!=','normal')]}"/>
                            <field name="currency_id" string="Tiền tệ" attrs="{'invisible': [('select_type_inv','=','normal')], 'required': [('select_type_inv','!=','normal')]}"/>
                            <field name="exchange_rate" string="Tỷ giá" attrs="{'invisible': [('select_type_inv','=','normal')], 'required': [('select_type_inv','!=','normal')]}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="select_type_invoice" string="Đồng ý" type="object" class="btn-primary"/>
                        <button name="cancel" string="Từ chối" type="object" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_select_type_invoice_wizard" model="ir.actions.act_window">
            <field name="name">Chọn loại hóa đơn</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">select.type.invoice</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="select_type_invoice_wizard_from"/>
            <field name="target">new</field>
        </record>
</odoo>
