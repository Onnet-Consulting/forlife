<?xml version="1.0"?>
<odoo>
        <record id="reject_order_wizard_from" model="ir.ui.view">
            <field name="name">reject.purchase.order.form</field>
            <field name="model">reject.purchase.order</field>
            <field name="arch" type="xml">
                <form string="Lost Reason">
                    <group class="oe_title">
                        <field name="rejection_reason" />
                    </group>
                    <footer>
                        <button name="reject_confirm_action" string="Submit" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="reject_order_wizard" model="ir.actions.act_window">
            <field name="name">Reject Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">reject.purchase.order</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="reject_order_wizard_from"/>
            <field name="target">new</field>
        </record>
</odoo>
