<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-inherit="forlife_pos_layout.OrderlineChangeRefund" t-inherit-mode="extension" owl="1">
        <xpath expr="//ul[hasclass('custom-info-list')]" position="inside">
            <t t-if="props.line.card_rank_applied">
                <li class="info orderline-card-rank" style="width: 50%;">
                    <em>Giảm giá theo CT <t t-esc="props.line.order.card_rank_program.card_rank_name"/></em>
                </li>
                <li class="info orderline-card-rank" style="width: 40%;">
                    <i class="fa fa-id-card-o" role="img" aria-label="Discount Card" title="Discount Card"/>
                    <span>&#160;<t t-esc="env.pos.format_currency(-props.line.get_card_rank_discount())"/></span>
                </li>
            </t>
            <t t-if="props.line.money_reduce_from_product_defective >0">
                <li class="info orderline-product-defective" style="width: 65%;">
                    <em>Giảm giá hàng lỗi</em>
                </li>
                <li class="info orderline-product-defective" style="width: 35%;">
                    <span>&#160;<t t-esc="env.pos.format_currency(props.line.money_reduce_from_product_defective)"/></span>
                </li>
            </t>
        </xpath>
    </t>
</templates>