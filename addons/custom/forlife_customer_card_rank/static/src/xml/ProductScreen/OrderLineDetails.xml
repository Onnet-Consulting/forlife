<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="Orderline" t-inherit="point_of_sale.Orderline" t-inherit-mode="extension" owl="1">
        <xpath expr="//span[hasclass('price')]" position="inside">
            <t t-if="props.line.card_rank_applied">
                <t t-set="total_price" t-value="props.line.quantity * props.line.price"/>
                <li class="info orderline-card-rank">
                    <i class="fa fa-id-card-o" role="img" aria-label="Discount Card" title="Discount Card"/>
                    <span>&#160;-<t t-esc="env.pos.format_currency((total_price - (total_price * props.line.discount / 100)) * props.line.discount_card_rank / 100)"/></span>
                    <span>&#160;(<t t-esc="props.line.discount_card_rank"/>%)</span>
                </li>
            </t>
        </xpath>
    </t>
</templates>