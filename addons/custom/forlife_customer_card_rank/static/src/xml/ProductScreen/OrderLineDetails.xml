<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="CustomOrderline" t-inherit="forlife_pos_layout.CustomOrderline" t-inherit-mode="extension" owl="1">
        <xpath expr="//ul[hasclass('custom-info-list')]" position="inside">
            <t t-if="props.line.card_rank_applied">
                <li class="info orderline-card-rank" style="width: 65%;">
                    <em>Giảm giá theo hạng thẻ</em>
                </li>
                <li class="info orderline-card-rank" style="width: 35%;">
                    <i class="fa fa-id-card-o" role="img" aria-label="Discount Card" title="Discount Card"/>
                    <span>&#160;<t t-esc="env.pos.format_currency(-props.line.get_card_rank_discount())"/></span>
                </li>
            </t>
        </xpath>
    </t>
</templates>