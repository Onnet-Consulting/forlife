<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="import_partner_card_rank_view_form" model="ir.ui.view">
            <field name="name">import_partner_card_rank_view_form</field>
            <field name="model">import.partner.card.rank</field>
            <field name="arch" type="xml">
                <form string="import_partner_card_rank_form">
                    <sheet>
                        <div class="alert alert-success">Với lượng dữ liệu lớn ta nên chọn nhập qua queue job, điều đó giúp ta không phải chờ đợi trong lúc hệ thống thực hiện tiến trình</div>
                        <group>
                            <field name="brand_id" class="oe_inline"/>
                            <field name="row_start" class="oe_inline"/>
                            <field name="with_queue" class="oe_inline"/>
                            <field name="import_file" filename="import_file_name"/>
                            <field name="import_file_name" invisible="1"/>
                        </group>
                        <group string="Import error" attrs="{'invisible': [('error_file', '=', False)]}">
                            <field name="error_file" filename="error_file_name" readonly="1" force_save="1"/>
                            <field name="error_file_name" invisible="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button special="cancel" string="Cancel"/>
                        <button name="download_template_file" type="object" string="Download Template" class="oe_highlight"/>
                        <button name="action_import" type="object" string="Import" class="oe_highlight"
                                attrs="{'invisible': ['|', '|', ('import_file', '=', False), ('brand_id', '=', False), ('with_queue', '=', False)]}"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="import_partner_card_rank_action" model="ir.actions.act_window">
            <field name="name">Import Card Rank</field>
            <field name="res_model">import.partner.card.rank</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="import_partner_card_rank_menu" parent="member_card_categ_menu" action="import_partner_card_rank_action" sequence="200"/>

    </data>
</odoo>