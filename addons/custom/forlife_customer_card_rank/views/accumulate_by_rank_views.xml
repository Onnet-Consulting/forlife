<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="accumulate_by_rank_view_tree" model="ir.ui.view">
            <field name="name">accumulate_by_rank_view_tree</field>
            <field name="model">accumulate.by.rank</field>
            <field name="arch" type="xml">
                <tree string="accumulate_by_rank_tree" editable="top">
                    <field name="sequence" widget="handle"/>
                    <field name="points_promotion_id" invisible="1"/>
                    <field name="card_rank_id"/>
                    <field name="accumulative_rate"/>
                </tree>
            </field>
        </record>

        <record id="accumulate_by_rank_view_form" model="ir.ui.view">
            <field name="name">accumulate_by_rank_view_form</field>
            <field name="model">accumulate.by.rank</field>
            <field name="arch" type="xml">
                <form string="accumulate_by_rank_form">
                    <sheet>
                        <group>
                            <field name="card_rank_id"/>
                            <field name="accumulative_rate"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>