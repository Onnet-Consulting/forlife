<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="card_rank_view_tree" model="ir.ui.view">
            <field name="name">card_rank_view_tree</field>
            <field name="model">card.rank</field>
            <field name="arch" type="xml">
                <tree string="card_rank_tree" editable="bottom">
                    <field name="priority"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="card_rank_action" model="ir.actions.act_window">
            <field name="name">Card Rank</field>
            <field name="res_model">card.rank</field>
            <field name="view_mode">tree</field>
        </record>

    </data>
</odoo>