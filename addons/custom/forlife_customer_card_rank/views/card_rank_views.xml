<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="card_rank_view_tree" model="ir.ui.view">
            <field name="name">card_rank_view_tree</field>
            <field name="model">card.rank</field>
            <field name="arch" type="xml">
                <tree string="card_rank_tree">
                    <field name="name"/>
                    <field name="priority"/>
                </tree>
            </field>
        </record>

        <record id="card_rank_view_form" model="ir.ui.view">
            <field name="name">card_rank_view_form</field>
            <field name="model">card.rank</field>
            <field name="arch" type="xml">
                <form string="card_rank_form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="priority" class="oe_inline"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="card_rank_action" model="ir.actions.act_window">
            <field name="name">Card Rank</field>
            <field name="res_model">card.rank</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>