<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="partner_card_rank_view_tree" model="ir.ui.view">
            <field name="name">partner_card_rank_view_tree</field>
            <field name="model">partner.card.rank</field>
            <field name="arch" type="xml">
                <tree string="partner_card_rank_tree">
                    <field name="customer_id"/>
                    <field name="brand_id"/>
                    <field name="card_rank_id"/>
                    <field name="accumulated_sales"/>
                    <field name="last_order_date"/>
                </tree>
            </field>
        </record>

        <record id="partner_card_rank_view_form" model="ir.ui.view">
            <field name="name">partner_card_rank_view_form</field>
            <field name="model">partner.card.rank</field>
            <field name="arch" type="xml">
                <form string="partner_card_rank_form">
                    <sheet>
                        <group>
                            <group>
                                <field name="customer_id"/>
                                <field name="brand_id"/>
                                <field name="card_rank_id"/>
                            </group>
                            <group>
                                <field name="accumulated_sales"/>
                                <field name="last_order_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="detail" string="Detail">
                                <field name="line_ids" readonly="1"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="partner_card_rank_view_filter" model="ir.ui.view">
            <field name="name">partner.card.rank.view.filter</field>
            <field name="model">partner.card.rank</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="customer_id"/>
                    <field name="brand_id"/>
                    <field name="card_rank_id"/>
                    <group expand="0" string="Group By...">
                        <filter string="Customer" name="customer_group" context="{'group_by':'customer_id'}"/>
                        <filter string="Brand" name="brand_group" context="{'group_by':'brand_id'}"/>
                        <filter string="Card Rank" name="rank_group" context="{'group_by':'card_rank_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="partner_card_rank_action" model="ir.actions.act_window">
            <field name="name">Customer Card Rank</field>
            <field name="res_model">partner.card.rank</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
    </data>

    <data>
        <record id="partner_card_rank_line_view_tree" model="ir.ui.view">
            <field name="name">partner_card_rank_line_view_tree</field>
            <field name="model">partner.card.rank.line</field>
            <field name="arch" type="xml">
                <tree string="partner_card_rank_line_tree">
                    <field name="partner_card_rank_id" invisible="1"/>
                    <field name="order_id" invisible="1"/>
                    <field name="invoice_id" invisible="1"/>
                    <field name="name"/>
                    <field name="order_date"/>
                    <field name="value_orders"/>
                    <field name="value_to_upper"/>
                    <field name="old_card_rank_id"/>
                    <field name="new_card_rank_id"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record id="partner_card_rank_line_view_form" model="ir.ui.view">
            <field name="name">partner_card_rank_line_view_form</field>
            <field name="model">partner.card.rank.line</field>
            <field name="arch" type="xml">
                <form string="partner_card_rank_line_form">
                    <sheet>
                        <group string="Thông tin chung">
                            <group>
                                <field name="name"/>
                                <field name="order_date"/>
                                <field name="value_orders"/>
                            </group>
                            <group>
                                <field name="old_card_rank_id"/>
                                <field name="new_card_rank_id"/>
                                <field name="value_to_upper"/>
                            </group>
                        </group>
                        <group string="Nguồn đơn hàng">
                            <group>
                                <field name="order_id"/>
                            </group>
                            <group>
                                <field name="invoice_id"/>
                            </group>
                        </group>
                        <field name="partner_card_rank_id" invisible="1"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="partner_card_rank_line_view_form_update_manual" model="ir.ui.view">
            <field name="name">partner_card_rank_line_view_form_update_manual</field>
            <field name="model">partner.card.rank.line</field>
            <field name="priority">1000</field>
            <field name="arch" type="xml">
                <form string="partner_card_rank_line_form">
                    <sheet>
                        <group>
                            <group>
                                <field name="old_card_rank_id" readonly="1" force_save="1"/>
                            </group>
                            <group>
                                <field name="program_cr_id" string="New Rank" context="{'display_rank_name': True}"
                                       domain="[('card_rank_id', '!=', old_card_rank_id),
                                        ('from_date', '&lt;=', context_today().strftime('%Y-%m-%d')),
                                        ('to_date', '&gt;=', context_today().strftime('%Y-%m-%d')),
                                        ('brand_id', '=', context.get('brand_id', False))]"/>
                            </group>
                        </group>
                        <field name="partner_card_rank_id" invisible="1"/>
                        <field name="order_date" invisible="1"/>
                        <field name="new_card_rank_id" invisible="1" force_save="1"/>
                        <field name="status" invisible="1" force_save="1"/>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>