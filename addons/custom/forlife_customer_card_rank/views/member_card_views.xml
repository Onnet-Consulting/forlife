<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="member_card_view_tree" model="ir.ui.view">
            <field name="name">member_card_view_tree</field>
            <field name="model">member.card</field>
            <field name="arch" type="xml">
                <tree string="member_card_tree" decoration-muted="(not active)">
                    <field name="name"/>
                    <field name="card_rank_id"/>
                    <field name="from_date" string="From Date"/>
                    <field name="to_date"/>
                    <field name="min_turnover"/>
                    <field name="is_register"/>
                    <field name="time_set_rank"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="member_card_view_form" model="ir.ui.view">
            <field name="name">member_card_view_form</field>
            <field name="model">member.card</field>
            <field name="arch" type="xml">
                <form string="member_card_form" duplicate="0">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_pos_order" type="object" class="oe_stat_button" icon="fa-list" groups="forlife_customer_card_rank.member_card_manager">
                                <field name="qty_order" widget="statinfo"/>
                            </button>
                            <button name="btn_duplicate_member_card" icon="fa-clone" class="oe_stat_button" type="object" string=" Duplicate" groups="forlife_customer_card_rank.member_card_manager"/>
                        </div>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                        <group col="1">
                            <group>
                                <field name="is_register"/>
                            </group>
                            <group attrs="{'invisible': [('is_register', '=', False)]}">
                                <label for="register_from_date"/>
                                <div>from
                                    <field name="register_from_date" class="oe_inline"/>
                                    to
                                    <field name="register_to_date" class="oe_inline"/>
                                </div>
                            </group>
                            <group>
                                <label for="from_date"/>
                                <div>from
                                    <field name="from_date" class="oe_inline" required="1"/>
                                    to
                                    <field name="to_date" class="oe_inline" required="1"/>
                                </div>
                            </group>
                            <group>
                                <field name="time_set_rank"/>
                                <field name="customer_group_id" readonly="1" force_save="1"/>
                                <field name="partner_retail_ids" widget="many2many_tags" required="1" domain="[('brand_id', '=', brand_id)]"/>
                                <field name="payment_method_ids" widget="many2many_tags" required="1"/>
                                <field name="card_rank_id" class="oe_inline" required="1"/>
                                <field name="min_turnover" class="oe_inline"/>
                                <field name="original_price" class="oe_inline"/>
                            </group>
                            <div>From
                                <field name="apply_value_from_1" class="oe_inline"/>
                                to
                                <field name="apply_value_to_1" class="oe_inline"/>
                                discount (%)
                                <field name="value1" class="oe_inline"/>
                            </div>
                            <div>From
                                <field name="apply_value_from_2" class="oe_inline"/>
                                to
                                <field name="apply_value_to_2" class="oe_inline"/>
                                discount (%)
                                <field name="value2" class="oe_inline"/>
                            </div>
                            <div>From
                                <field name="apply_value_from_3" class="oe_inline"/>
                                to
                                <field name="apply_value_to_3" class="oe_inline"/>
                                discount (%)
                                <field name="value3" class="oe_inline"/>
                            </div>
                            <group>
                                <field name="journal_ids" widget="many2many_tags" required="1"/>
                                <field name="discount_account_id"/>
                                <field name="value_account_id"/>
                            </group>
                        </group>
                        <field name="active" invisible="1"/>
                        <field name="brand_id" invisible="1"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="member_card_view_filter" model="ir.ui.view">
            <field name="name">member_card_view_filter</field>
            <field name="model">member.card</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name"/>
                    <field name="card_rank_id"/>
                    <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record id="member_card_format_action" model="ir.actions.act_window">
            <field name="name">Format</field>
            <field name="res_model">member.card</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_brand_code': 'FMT'}</field>
            <field name="domain">[('brand_code', '=', 'FMT')]</field>
        </record>

        <record id="member_card_tokyolife_action" model="ir.actions.act_window">
            <field name="name">TokyoLife</field>
            <field name="res_model">member.card</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_brand_code': 'TKL'}</field>
            <field name="domain">[('brand_code', '=', 'TKL')]</field>
        </record>

    </data>
</odoo>