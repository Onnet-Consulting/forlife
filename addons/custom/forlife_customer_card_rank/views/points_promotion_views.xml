<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="points_promotion_view_form_inherit" model="ir.ui.view">
            <field name="name">points_promotion_view_form_inherit</field>
            <field name="model">points.promotion</field>
            <field name="inherit_id" ref="forlife_promotion.points_promotion_view_form"/>
            <field name="arch" type="xml">

                <xpath expr=".//notebook" position="inside">
                    <page name="card_rank_accumulate" string="Card Rank Accumulate">
                        <group>
                            <group>
                                <field name="card_rank_value_convert" attrs="{'readonly': [('state', 'not in', ('new', 'in_progress'))]}"/>
                                <field name="card_rank_active" attrs="{'readonly': [('state', 'not in', ('new', 'in_progress'))]}"/>
                            </group>
                            <group>
                                <field name="card_rank_point_addition" attrs="{'readonly': [('state', 'not in', ('new', 'in_progress'))]}"/>
                            </group>
                        </group>
                        <field name="accumulate_by_rank_ids" nolabel="1" attrs="{'readonly': [('state', 'not in', ('new', 'in_progress'))]}"/>
                    </page>
                </xpath>

            </field>
        </record>

    </data>
</odoo>