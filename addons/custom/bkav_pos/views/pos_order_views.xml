<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="bkav_invoice_pos_form_view" model="ir.ui.view">
            <field name="name">view.pos.form.voucher.inherit</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='notes']" position="after">
                    <field name="is_refunded" invisible="1"/>
                    <page id="bkav_invoice" string="BKAV Invoice">
                        <field name="eivoice_file" attrs="{'invisible':[('eivoice_file', '=', False)]}"/>
                        <button name="create_invoice_bkav" type="object" class="btn btn-primary"
                                attrs="{'invisible':['|',('exists_bkav', '!=', False),('invoice_guid', '!=', False)]}"
                                string="Create eInvoice" groups="account.group_account_invoice"/>
                        <button name="publish_invoice_bkav" type="object" class="btn btn-primary"
                                attrs="{'invisible':['|',('invoice_guid', '=', False),('is_post_bkav', '=', True)]}"
                                string="Publish eInvoice" groups="account.group_account_invoice"/>
                        <button name="create_publish_invoice_bkav" type="object" class="btn btn-primary"
                                attrs="{'invisible':['|',('invoice_guid', '=', False),('is_post_bkav', '=', True)]}"
                                string="Create &amp; Publish eInvoice" groups="account.group_account_invoice"/>
                        <button name="get_invoice_bkav" type="object" class="btn btn-primary"
                                attrs="{'invisible':[('invoice_guid', '=', False)]}"
                                string="Get eInvoice" groups="account.group_account_invoice"/>
                        <button name="update_invoice_bkav" type="object" class="btn btn-primary"
                                attrs="{'invisible':['|',('invoice_guid', '=', False),('is_post_bkav', '=', True)]}"
                                string="Update eInvoice" groups="account.group_account_invoice"/>
                        <button name="cancel_invoice_bkav" type="object" class="btn btn-primary"
                                string="Cancel eInvoice"
                                attrs="{'invisible':[('invoice_guid', '=', False)]}"
                                groups="account.group_account_invoice"/>
                        <button name="download_invoice_bkav" type="object" class="btn btn-primary"
                                attrs="{'invisible':[('invoice_guid', '=', False)]}"
                                string="Download eInvoice" groups="account.group_account_invoice"/>
                        <br/>
                        <group>
                            <group>
                                <field name="exists_bkav" readonly="1"/>
                                <field name="is_general" readonly="1"/>
                                <field name="invoice_no" readonly="1"/>
                                <field name="invoice_form" readonly="1"/>
                            </group>
                            <group>
                                <field name="is_post_bkav" readonly="1"/>
                                <field name="invoice_serial" readonly="1"/>
                                <field name="invoice_state_e" readonly="1"/>
                                <field name="invoice_guid" readonly="1"/>
                                <field name="invoice_e_date" readonly="1"/>
                            </group>
                        </group>
                    </page>
                    <page id="bkav_invoice_return" string="BKAV Invoice Return" attrs="{'invisible':[('is_refunded', '!=', False)]}">
                        <field name="eivoice_file_return" attrs="{'invisible':[('eivoice_file_return', '=', False)]}"/>
                        <button name="create_invoice_bkav_return" type="object" class="btn btn-primary"
                                attrs="{'invisible':['|',('exists_bkav_return', '!=', False),('invoice_guid_return', '!=', False)]}"
                                string="Create eInvoice" groups="account.group_account_invoice"/>
                        <button name="publish_invoice_bkav_return" type="object" class="btn btn-primary"
                                attrs="{'invisible':['|',('invoice_guid_return', '=', False),('is_post_bkav_return', '=', True)]}"
                                string="Publish eInvoice" groups="account.group_account_invoice"/>
                        <button name="create_publish_invoice_bkav_return" type="object" class="btn btn-primary"
                                attrs="{'invisible':['|','|',('exists_bkav', '!=', False),('invoice_guid', '=', False),('is_post_bkav', '=', True)]}"
                                string="Create &amp; Publish eInvoice" groups="account.group_account_invoice"/>
                        <button name="get_invoice_bkav_return" type="object" class="btn btn-primary"
                                attrs="{'invisible':[('invoice_guid_return', '=', False)]}"
                                string="Get eInvoice" groups="account.group_account_invoice"/>
                        <button name="update_invoice_bkav_return" type="object" class="btn btn-primary"
                                attrs="{'invisible':['|',('invoice_guid_return', '=', False),('is_post_bkav_return', '=', True)]}"
                                string="Update eInvoice" groups="account.group_account_invoice"/>
                        <button name="cancel_invoice_bkav_return" type="object" class="btn btn-primary"
                                string="Cancel eInvoice"
                                attrs="{'invisible':[('invoice_guid_return', '=', False)]}"
                                groups="account.group_account_invoice"/>
                        <button name="download_invoice_bkav_return" type="object" class="btn btn-primary"
                                attrs="{'invisible':[('invoice_guid_return', '=', False)]}"
                                string="Download eInvoice" groups="account.group_account_invoice"/>
                        <br/>
                        <group>
                            <group>
                                <field name="exists_bkav_return" readonly="1"/>
                                <field name="issue_invoice_type" attrs="{'readonly': [('invoice_guid_return','!=',False)]}"/>
                                <field name="origin_move_id"
                                       attrs="{'invisible': [('issue_invoice_type','=','vat')], 'readonly': [('invoice_guid_return','!=',False)]}"/>
                                <field name="invoice_no_return" readonly="1"/>
                                <field name="invoice_form_return" readonly="1"/>
                            </group>
                            <group>
                                <field name="is_post_bkav_return" readonly="1"/>
                                <field name="invoice_serial_return" readonly="1"/>
                                <field name="invoice_state_e_return" readonly="1"/>
                                <field name="invoice_guid_return" readonly="1"/>
                                <field name="invoice_e_date_return" readonly="1"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>