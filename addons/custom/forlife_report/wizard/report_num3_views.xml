<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_num3_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">report.num3</field>
        <field name="arch" type="xml">
            <form string="Stock in time range by branch/area" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="print_xlsx" type="object" icon="fa-file-excel-o" string="Download Excel" title="Download Excel"/>
                        <button name="view_report" type="object" icon="fa-bar-chart" string="View" class="btn-primary" title="View"/>
                    </div>
                    <group>
                        <group>
                            <field name="report_by"/>
                            <field name="all_products"/>
                            <field name="all_warehouses" attrs="{'invisible': [('report_by', '=', 'area')]}"/>
                            <field name="all_areas" attrs="{'invisible': [('report_by', '=', 'branch')]}"/>
                        </group>
                        <group>
                            <field name="to_date"/>
                            <field name="defective_inventory"/>
                            <field name="order_inventory"/>
                        </group>
                    </group>
                    <group>
                        <field name="product_ids" attrs="{'invisible': [('all_products', '=', True)], 'required': [('all_products', '=', False)]}" widget="many2many_tags"/>
                        <field name="warehouse_ids" widget="many2many_tags"
                               attrs="{'invisible': ['|', ('all_warehouses', '=', True), ('report_by', '=', 'area')], 'required': [('all_warehouses', '=', False), ('report_by', '=', 'branch')]}"/>
                        <field name="area_ids" widget="many2many_tags" attrs="{'invisible': ['|', ('all_areas', '=', True), ('report_by', '=', 'branch')]}"/>
                        <field name="product_brand_id" required="1" class="oe_inline"/>
                        <field name="product_group_ids" widget="many2many_tags" domain="[('parent_id', '=', product_brand_id), ('parent_id', '!=', False)]"/>
                        <field name="product_line_ids" widget="many2many_tags" domain="[('parent_id', 'in', product_group_ids)]"/>
                        <field name="product_texture_ids" widget="many2many_tags" domain="[('parent_id', 'in', product_line_ids)]"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="report_num3_window_action" model="ir.actions.act_window">
        <field name="name">Report stock in time range by branch/area</field>
        <field name="res_model">report.num3</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="report_num3_menu"
              action="report_num3_window_action"
              parent="report_menu_stock"
              sequence="2"/>
</odoo>