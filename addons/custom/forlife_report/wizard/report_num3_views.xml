<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_num3_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">report.num3</field>
        <field name="arch" type="xml">
            <form string="Báo cáo tồn kho theo chi nhánh_khu vực" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="print_xlsx" type="object" icon="fa-file-excel-o" string="Download Excel" title="Download Excel"/>
                        <button name="view_report" type="object" icon="fa-bar-chart" string="View" class="btn-primary" title="View"/>
                    </div>
                    <group>
                        <group>
                            <field name="report_by" widget="radio" options="{'horizontal': True}"/>
                            <field name="warehouse_ids" widget="many2many_tags" options="{'no_create': True}" attrs="{'invisible': [('report_by', '=', 'area')]}"
                                   context="{'show_code_name': True, 'report_ctx': 'report.num3,stock.warehouse'}"/>
                            <field name="all_areas" attrs="{'invisible': [('report_by', '=', 'branch')]}"/>
                            <field name="area_ids" widget="many2many_tags" attrs="{'invisible': ['|', ('all_areas', '=', True), ('report_by', '=', 'branch')]}" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="to_date"/>
                            <field name="defective_inventory"/>
                            <field name="order_inventory"/>
                        </group>
                    </group>
                    <group>
                        <field name="sku_code" placeholder="Sku1,Sku2,Sku3..."/>
                        <field name="product_ids" widget="many2many_tags" options="{'no_create': True}" context="{'report_ctx': 'report.num3,product.product'}"/>
                        <field name="category_type_id" options="{'no_create': True}" context="{'report_ctx': 'report.num3,product.category.type'}"/>
                        <field name="product_brand_id" domain="[('category_type_id', '=', category_type_id), ('category_type_id', '!=', False), ('parent_id', '=', False)]"
                               options="{'no_create': True}" context="{'report_ctx': 'report.num3,product.category,product_brand_id'}"/>
                        <field name="product_group_ids" widget="many2many_tags" domain="[('parent_id', '=', product_brand_id), ('parent_id', '!=', False)]"
                               options="{'no_create': True}" context="{'report_ctx': 'report.num3,product.category,product_group_ids'}"/>
                        <field name="product_line_ids" widget="many2many_tags" domain="[('parent_id', '=', product_group_ids), ('parent_id', '!=', False)]"
                               options="{'no_create': True}" context="{'report_ctx': 'report.num3,product.category,product_line_ids'}"/>
                        <field name="texture_ids" widget="many2many_tags" domain="[('parent_id', '=', product_line_ids), ('parent_id', '!=', False)]"
                               options="{'no_create': True}" context="{'report_ctx': 'report.num3,product.category,texture_ids'}"/>
                        <field name="collection" class="oe_inline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="report_num3_window_action" model="ir.actions.act_window">
        <field name="name">Báo cáo tồn kho theo chi nhánh_khu vực</field>
        <field name="res_model">report.num3</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="report_num3_menu"
              action="report_num3_window_action"
              parent="report_menu_stock"
              sequence="2"/>
</odoo>