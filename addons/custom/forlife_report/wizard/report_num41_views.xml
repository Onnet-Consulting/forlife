<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_num41_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">report.num41</field>
        <field name="arch" type="xml">
            <form string="report_num41_form" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="print_xlsx" type="object" icon="fa-file-excel-o" string="Download Excel" title="Download Excel"/>
                        <button name="view_report" type="object" icon="fa-bar-chart" string="View" class="btn-primary" title="View"/>
                    </div>
                    <group>
                        <group>
                            <label for="from_date" string="Date"/>
                            <div>from
                                <field name="from_date" class="oe_inline" required="1"/>
                                to
                                <field name="to_date" class="oe_inline" required="1"/>
                            </div>
                            <field name="machining_id" class="oe_inline" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="leader_id" class="oe_inline" options="{'no_create': True}"/>
                            <field name="production_ids" widget="many2many_tags" options="{'no_create': True}" context="{'order_manager': leader_id, 'machining': machining_id, 'received': 1}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="report_num41_window_action" model="ir.actions.act_window">
        <field name="name">Báo cáo quyết toán lệnh sản xuất</field>
        <field name="res_model">report.num41</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="report_num41_menu"
              action="report_num41_window_action"
              parent="report_menu_stock"
              sequence="41"/>
</odoo>