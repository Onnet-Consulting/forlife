<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_num21_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">report.num21</field>
        <field name="arch" type="xml">
            <form string="Report stock transfer" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="print_xlsx" type="object" icon="fa-file-excel-o" string="Download Excel" title="Download Excel"/>
                        <button name="view_report" type="object" icon="fa-bar-chart" string="View" class="btn-primary" title="View"/>
                    </div>
                    <group>
                        <group>
                            <label for="from_date" string="Date"/>
                            <div>from
                                <field name="from_date" class="oe_inline" required="1"/>
                                to
                                <field name="to_date" class="oe_inline" required="1"/>
                            </div>
                            <field name="location_province_ids" widget="many2many_checkboxes"/>
                        </group>
                        <group>
                            <label for="is_all" string="Status"/>
                            <div>
                                <div>
                                    <field name="is_all"/>All
                                </div>
                                <div attrs="{'invisible': [('is_all', '=', True)]}">
                                    <field name="is_delivery"/>Delivery
                                </div>
                                <div attrs="{'invisible': [('is_all', '=', True)]}">
                                    <field name="is_receive"/>Receive
                                </div>
                                <div attrs="{'invisible': [('is_all', '=', True)]}">
                                    <field name="is_done"/>Done
                                </div>
                            </div>
                        </group>
                    </group>
                    <group>
                        <field name="warehouse_ids" widget="many2many_tags" domain="[('loc_province_id', 'in', (location_province_ids or [False]))]" context="{'show_code_name': True}" options="{'no_create': True}"/>
                        <field name="product_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="category_type_id" options="{'no_create': True}"/>
                        <field name="product_brand_id" domain="[('category_type_id', '=', category_type_id), ('category_type_id', '!=', False), ('parent_id', '=', False)]" options="{'no_create': True}"/>
                        <field name="product_group_ids" widget="many2many_tags" domain="[('parent_id', '=', product_brand_id), ('parent_id', '!=', False)]" options="{'no_create': True}"/>
                        <field name="product_line_ids" widget="many2many_tags" domain="[('parent_id', '=', product_group_ids), ('parent_id', '!=', False)]" options="{'no_create': True}"/>
                        <field name="texture_ids" widget="many2many_tags" domain="[('parent_id', '=', product_line_ids), ('parent_id', '!=', False)]" options="{'no_create': True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="report_num21_window_action" model="ir.actions.act_window">
        <field name="name">Report stock transfer</field>
        <field name="res_model">report.num21</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="report_num21_menu"
              action="report_num21_window_action"
              parent="report_menu_stock"
              sequence="21"/>
</odoo>