<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_num13_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">report.num13</field>
        <field name="arch" type="xml">
            <form string="Báo cáo tình hình thực hiện đơn hàng mua" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="print_xlsx" type="object" icon="fa-file-excel-o" string="Download Excel" title="Download Excel"/>
                        <button name="view_report" type="object" icon="fa-bar-chart" string="View" class="btn-primary" title="View"/>
                    </div>
                    <div class="alert alert-danger">Nếu đã nhập thông tin Số PO thì không bắt buộc nhập ngày, sản phẩm và danh mục sản phẩm</div>
                    <group>
                        <field name="po_number" placeholder="PO001,PO002,..."/>
                        <label for="from_date" string="Date"/>
                        <div>from
                            <field name="from_date" class="oe_inline" attrs="{'required': [('po_number', '=', False)]}"/>
                            to
                            <field name="to_date" class="oe_inline" attrs="{'required': [('po_number', '=', False)]}"/>
                        </div>
                    </group>
                    <group>
                        <field name="product_ids" widget="many2many_tags" options="{'no_create': True}" context="{'report_ctx': 'report.num13,product.product'}"/>
                        <field name="category_type_id" options="{'no_create': True}" context="{'report_ctx': 'report.num13,product.category.type'}"/>
                        <field name="product_brand_id" domain="[('category_type_id', '=', category_type_id), ('category_type_id', '!=', False), ('parent_id', '=', False)]"
                               options="{'no_create': True}" context="{'report_ctx': 'report.num13,product.category,product_brand_id'}"/>
                        <field name="product_group_ids" widget="many2many_tags" domain="[('parent_id', '=', product_brand_id), ('parent_id', '!=', False)]"
                               options="{'no_create': True}" context="{'report_ctx': 'report.num13,product.category,product_group_ids'}"/>
                        <field name="product_line_ids" widget="many2many_tags" domain="[('parent_id', '=', product_group_ids), ('parent_id', '!=', False)]"
                               options="{'no_create': True}" context="{'report_ctx': 'report.num13,product.category,product_line_ids'}"/>
                        <field name="texture_ids" widget="many2many_tags" domain="[('parent_id', '=', product_line_ids), ('parent_id', '!=', False)]"
                               options="{'no_create': True}" context="{'report_ctx': 'report.num13,product.category,texture_ids'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="report_num13_window_action" model="ir.actions.act_window">
        <field name="name">Báo cáo tình hình thực hiện đơn hàng mua</field>
        <field name="res_model">report.num13</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="report_num13_menu"
              action="report_num13_window_action"
              parent="report_menu_purchase"
              sequence="0"/>
</odoo>