<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_num2_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">report.num2</field>
        <field name="arch" type="xml">
            <form string="Stock with sale price by warehouse">
                <sheet>
                    <group>
                        <group>
                            <field name="all_products"/>
                            <field name="product_ids"
                                   attrs="{'invisible': [('all_products', '=', True)], 'required': [('all_products', '=', False)]}"
                                   widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="all_warehouses"/>
                            <field name="warehouse_ids"
                                   attrs="{'invisible': [('all_warehouses', '=', True)], 'required': [('all_warehouses', '=', False)]}"
                                   widget="many2many_tags"/>
                        </group>
                    </group>
                    <group>
                        <field name="product_brand_id" required="1"/>
                        <field name="product_group_ids" widget="many2many_tags"/>
                        <field name="product_line_ids" widget="many2many_tags"/>
                        <field name="product_texture_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
                <footer>
                    <button name="print_xlsx" type="object" string="Download Excel" class="btn-primary"/>
                    <button name="view_report" type="object" string="View" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="report_num2_window_action" model="ir.actions.act_window">
        <field name="name">Report stock with sale price by warehouse</field>
        <field name="res_model">report.num2</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="report_num2_menu"
              action="report_num2_window_action"
              parent="report_menu_sale"
              sequence="2"/>
</odoo>