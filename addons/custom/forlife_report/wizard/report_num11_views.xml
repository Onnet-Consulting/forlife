<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_num11_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">report.num11</field>
        <field name="arch" type="xml">
            <form string="About to rank up" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="print_xlsx" type="object" icon="fa-file-excel-o" string="Download Excel" title="Download Excel"/>
                        <button name="view_report" type="object" icon="fa-bar-chart" string="View" class="btn-primary" title="View"/>
                    </div>
                    <group>
                        <group>
                            <field name="to_date" class="oe_inline" required="1"/>
                            <field name="from_rank_ids" class="oe_inline" widget="many2many_tags"/>
                            <field name="number_of_days"/>
                        </group>
                        <group>
                            <field name="brand_id" widget="radio" options="{'horizontal': True}"/>
                            <field name="store_ids" domain="[('brand_id', '=', brand_id)]" widget="many2many_tags"/>
                            <field name="customer_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="report_num11_window_action" model="ir.actions.act_window">
        <field name="name">About to rank up</field>
        <field name="res_model">report.num11</field>
        <field name="view_mode">form</field>
        <field name="target">main</field>
    </record>

    <menuitem id="report_num11_menu"
              action="report_num11_window_action"
              parent="report_menu_card_rank"
              sequence="10"/>
</odoo>