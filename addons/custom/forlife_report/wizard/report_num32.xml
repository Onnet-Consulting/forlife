<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_num32_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">report.num32</field>
        <field name="arch" type="xml">
            <form string="Tra cứu thông tin điểm tích lũy" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="view_report" type="object" icon="fa-bar-chart" string="View" class="btn-primary" title="View"/>
                    </div>
                    <group>
                        <group>
                            <field name="brand" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="phone" options="{'no_create': True, 'no_edit': True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="report_num32_window_action" model="ir.actions.act_window">
        <field name="name">Tra cứu thông tin điểm tích lũy</field>
        <field name="res_model">report.num32</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="report_num32_menu"
              action="report_num32_window_action"
              parent="report_menu_sale"
              sequence="32"/>
</odoo>