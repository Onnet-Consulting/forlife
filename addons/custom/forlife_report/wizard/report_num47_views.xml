<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_num47_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">report.num47</field>
        <field name="arch" type="xml">
            <form string="report_num47_form" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="print_xlsx" type="object" icon="fa-file-excel-o" string="Download Excel" title="Download Excel"/>
                        <button name="view_report" type="object" icon="fa-bar-chart" string="View" class="btn-primary" title="View"/>
                    </div>
                    <group>
                        <label for="month" string="Time"/>
                        <div>
                            <field name="month" widget="selection" class="oe_inline"/>
                            năm
                            <field name="year" widget="char" class="oe_inline"/>
                        </div>
                        <field name="brand_id" widget="radio" options="{'horizontal': True}" context="{'report_ctx': 'report.num47,res.brand'}"/>
                        <field name="store_id" domain="[('brand_id', '=', brand_id)]" options="{'no_create': True}" context="{'report_ctx': 'report.num47,store'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="report_num47_window_action" model="ir.actions.act_window">
        <field name="name">Bảng kê Doanh thu</field>
        <field name="res_model">report.num47</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="report_num47_menu"
              action="report_num47_window_action"
              parent="report_menu_accounting"
              sequence="47"/>

</odoo>