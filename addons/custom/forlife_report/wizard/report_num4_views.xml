<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_num4_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">report.num4</field>
        <field name="arch" type="xml">
            <form string="Report stock by product" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="print_xlsx" type="object" icon="fa-file-excel-o" string="Download Excel" title="Download Excel"/>
                        <button name="view_report" type="object" icon="fa-bar-chart" string="View" class="btn-primary" title="View"/>
                    </div>
                    <group>
                        <field name="to_date" class="oe_inline"/>
                        <field name="product_ids" widget="many2many_tags" options="{'no_create': True}" context="{'report_ctx': 'report.num4,product.product'}"/>
                        <field name="category_type_id" options="{'no_create': True}" context="{'report_ctx': 'report.num4,product.category.type'}"/>
                        <field name="product_brand_id" domain="[('category_type_id', '=', category_type_id), ('category_type_id', '!=', False), ('parent_id', '=', False)]"
                               options="{'no_create': True}" context="{'report_ctx': 'report.num4,product.product,product_brand_id'}"/>
                        <field name="product_group_ids" widget="many2many_tags" domain="[('parent_id', '=', product_brand_id), ('parent_id', '!=', False)]"
                               options="{'no_create': True}" context="{'report_ctx': 'report.num4,product.product,product_group_ids'}"/>
                        <field name="product_line_ids" widget="many2many_tags" domain="[('parent_id', '=', product_group_ids), ('parent_id', '!=', False)]"
                               options="{'no_create': True}" context="{'report_ctx': 'report.num4,product.product,product_line_ids'}"/>
                        <field name="texture_ids" widget="many2many_tags" domain="[('parent_id', '=', product_line_ids), ('parent_id', '!=', False)]"
                               options="{'no_create': True}" context="{'report_ctx': 'report.num4,product.product,texture_ids'}"/>
                        <field name="warehouse_ids" widget="many2many_tags" options="{'no_create': True}" context="{'show_code_name': True, 'report_ctx': 'report.num4,stock.warehouse'}"/>
                        <field name="location_ids" widget="many2many_tags" options="{'no_create': True}" context="{'report_ctx': 'report.num4,stock.location'}"
                               domain="[('warehouse_id', '=', warehouse_ids), ('warehouse_id', '!=', False), ('usage', '=', 'internal')]"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="report_num4_window_action" model="ir.actions.act_window">
        <field name="name">Report stock by product</field>
        <field name="res_model">report.num4</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="report_num4_menu"
              action="report_num4_window_action"
              parent="report_menu_stock"
              sequence="3"/>
</odoo>