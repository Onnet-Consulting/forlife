<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_num4_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">report.num4</field>
        <field name="arch" type="xml">
            <form string="Report stock by product" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="print_xlsx" type="object" icon="fa-file-excel-o" string="Download Excel" title="Download Excel"/>
                        <button name="view_report" type="object" icon="fa-bar-chart" string="View" class="btn-primary" title="View"/>
                    </div>
                    <group>
                        <group>
                            <field name="product_domain" widget="domain" options="{'model': 'product.product', 'in_dialog': true}"/>
                            <field name="warehouse_domain" widget="domain" options="{'model': 'stock.warehouse', 'in_dialog': true}"/>
                        </group>
                        <group>
                            <field name="to_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="report_num4_window_action" model="ir.actions.act_window">
        <field name="name">Report stock by product</field>
        <field name="res_model">report.num4</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="report_num4_menu"
              action="report_num4_window_action"
              parent="report_menu_stock"
              sequence="3"/>
</odoo>