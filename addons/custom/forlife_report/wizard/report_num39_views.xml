<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_num39_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">report.num39</field>
        <field name="arch" type="xml">
            <form string="report_num39_form" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="print_xlsx" type="object" icon="fa-file-excel-o" string="Download Excel" title="Download Excel"/>
                        <button name="view_report" type="object" icon="fa-bar-chart" string="View" class="btn-primary" title="View"/>
                    </div>
                    <group>
                        <label for="from_date" string="Date"/>
                        <div>from
                            <field name="from_date" class="oe_inline" required="1"/>
                            to
                            <field name="to_date" class="oe_inline" required="1"/>
                        </div>
                        <field name="product_ids" widget="many2many_tags" options="{'no_create': True}" context="{'report_ctx': 'report.num39,product.product'}"/>
                        <field name="category_type_id" options="{'no_create': True}" context="{'report_ctx': 'report.num39,product.category.type'}"/>
                        <field name="product_brand_id" domain="[('category_type_id', '=', category_type_id), ('category_type_id', '!=', False), ('parent_id', '=', False)]"
                               context="{'report_ctx': 'report.num39,product.category,product_brand_id'}" options="{'no_create': True}"/>
                        <field name="product_group_ids" widget="many2many_tags" domain="[('parent_id', '=', product_brand_id), ('parent_id', '!=', False)]"
                               context="{'report_ctx': 'report.num39,product.category,product_group_ids'}" options="{'no_create': True}"/>
                        <field name="product_line_ids" widget="many2many_tags" domain="[('parent_id', '=', product_group_ids), ('parent_id', '!=', False)]"
                               context="{'report_ctx': 'report.num39,product.category,product_line_ids'}" options="{'no_create': True}"/>
                        <field name="texture_ids" widget="many2many_tags" domain="[('parent_id', '=', product_line_ids), ('parent_id', '!=', False)]"
                               context="{'report_ctx': 'report.num39,product.category,texture_ids'}" options="{'no_create': True}"/>
                        <field name="warehouse_ids" widget="many2many_tags" options="{'no_create': True}" context="{'show_code_name': True, 'report_ctx': 'report.num39,stock.warehouse'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="report_num39_window_action" model="ir.actions.act_window">
        <field name="name">Báo cáo chi tiết nhập hàng theo phiếu kho</field>
        <field name="res_model">report.num39</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="report_num39_menu"
              action="report_num39_window_action"
              parent="report_menu_stock"
              sequence="39"/>
</odoo>