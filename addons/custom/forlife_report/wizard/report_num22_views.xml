<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_num22_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">report.num22</field>
        <field name="arch" type="xml">
            <form string="Cash receipts report" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="view_report" type="object" icon="fa-bar-chart" string="View" class="btn-primary" title="View"/>
                    </div>
                    <group>
                        <group>
                            <label for="from_date" string="Date"/>
                            <div>from
                                <field name="from_date" class="oe_inline" required="1"/>
                                to
                                <field name="to_date" class="oe_inline" required="1"/>
                            </div>
                            <field name="brand_id" widget="radio" options="{'horizontal': True}" context="{'report_ctx': 'report.num22,res.brand'}"/>
                            <field name="store_ids" domain="[('brand_id', '=', brand_id)]" nolabel="1" colspan="2" context="{'report_ctx': 'report.num22,store'}">
                                <tree create="0" edit="0" delete="0" limit="20">
                                    <field name="code"/>
                                    <field name="name"/>
                                </tree>
                                <form edit="0" create="0" delete="0">
                                    <group>
                                        <field name="code"/>
                                        <field name="name"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                        <group>
                            <field name="group_by" widget="radio" options="{'horizontal': True}"/>
                            <field name="type" widget="radio" options="{'horizontal': True}"/>
                            <field name="so_ct"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="report_num22_window_action" model="ir.actions.act_window">
        <field name="name">Cash receipts report</field>
        <field name="res_model">report.num22</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="report_num22_menu"
              action="report_num22_window_action"
              parent="report_menu_sale"
              sequence="22"/>
</odoo>