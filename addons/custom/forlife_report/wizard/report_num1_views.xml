<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_num1_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">report.num1</field>
        <field name="arch" type="xml">
            <form string="Revenue by Product" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="print_xlsx" type="object" icon="fa-file-excel-o" string="Download Excel" title="Download Excel"/>
                        <button name="view_report" type="object" icon="fa-bar-chart" string="View" class="btn-primary" title="View"/>
                    </div>
                    <group>
                        <group>
                            <label for="from_date" string="Date"/>
                            <div>from
                                <field name="from_date" class="oe_inline" required="1"/>
                                to
                                <field name="to_date" class="oe_inline" required="1"/>
                            </div>
                            <field name="product_domain" widget="domain" options="{'model': 'product.product', 'in_dialog': true}"/>
                        </group>
                        <group>
                            <field name="picking_type" widget="radio" options="{'horizontal': True}"/>
                            <field name="warehouse_domain" widget="domain" options="{'model': 'stock.warehouse', 'in_dialog': true}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="report_num1_window_action" model="ir.actions.act_window">
        <field name="name">Report revenue by product</field>
        <field name="res_model">report.num1</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="report_num1_menu"
              action="report_num1_window_action"
              parent="report_menu_sale"
              sequence="1"/>
</odoo>