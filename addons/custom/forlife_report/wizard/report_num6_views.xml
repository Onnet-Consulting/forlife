<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_num6_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">report.num6</field>
        <field name="arch" type="xml">
            <form string="Report sale and stock" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="print_xlsx" type="object" icon="fa-file-excel-o" string="Download Excel" title="Download Excel"/>
                        <button name="view_report" type="object" icon="fa-bar-chart" string="View" class="btn-primary" title="View"/>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="brand_id" widget="radio" options="{'horizontal': True}"/>
                        </group>
                        <group>
                            <label for="start_time" string="Time slot"/>
                            <div>from
                                <field name="start_time" widget="float_time" class="oe_inline" required="1"/>
                                to
                                <field name="end_time" widget="float_time" class="oe_inline" required="1"/>
                            </div>
                            <field name="warehouse_domain" widget="domain" options="{'model': 'stock.warehouse', 'in_dialog': true}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="report_num6_window_action" model="ir.actions.act_window">
        <field name="name">Report sale and stock</field>
        <field name="res_model">report.num6</field>
        <field name="view_mode">form</field>
        <field name="target">main</field>
    </record>

    <menuitem id="report_num6_menu"
              action="report_num6_window_action"
              parent="report_menu_sale"
              sequence="3"/>
</odoo>