<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_num42_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">report.num42</field>
        <field name="arch" type="xml">
            <form string="Báo cáo nhập kho theo đơn mua" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="print_xlsx" type="object" icon="fa-file-excel-o" string="Download Excel" title="Download Excel"/>
                        <button name="view_report" type="object" icon="fa-bar-chart" string="View" class="btn-primary" title="View"/>
                    </div>
                    <group>
                        <group>
                            <label for="from_date" string="Date"/>
                            <div>from
                                <field name="from_date" class="oe_inline" required="1"/>
                                to
                                <field name="to_date" class="oe_inline" required="1"/>
                            </div>
                        </group>
                        <group>
                            <field name="po_number" placeholder="PO001,PO002,..."/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="report_num42_window_action" model="ir.actions.act_window">
        <field name="name">Báo cáo nhập kho theo đơn mua</field>
        <field name="res_model">report.num42</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="report_num42_menu"
              action="report_num42_window_action"
              parent="report_menu_purchase"
              sequence="0"/>
</odoo>