<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_num25_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">report.num25</field>
        <field name="arch" type="xml">
            <form string="Estimated income by revenue report" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="print_xlsx" type="object" icon="fa-file-excel-o" string="Download Excel" title="Download Excel"/>
                        <button name="view_report" type="object" icon="fa-bar-chart" string="View" class="btn-primary" title="View"/>
                    </div>
                    <group>
                        <group>
                            <field name="brand_id" widget="radio" options="{'horizontal': True}"/>
                            <field name="bo_plan_id" domain="[('brand_id', '=', brand_id)]" context="{'show_date': 1}" options="{'no_create': True, 'no_open': True}"/>
                            <field name="sale_province_id" options="{'no_create': True, 'no_open': True}"/>
                        </group>
                        <group>
                            <label for="from_date" string="Date"/>
                            <div>from
                                <field name="from_date" class="oe_inline" required="1"/>
                                to
                                <field name="to_date" class="oe_inline" required="1"/>
                            </div>
                            <field name="employee_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="view_type" widget="radio" options="{'horizontal': True}"/>
                        </group>
                    </group>
                    <group>
                        <field name="store_ids" domain="[('brand_id', '=', brand_id)]" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="report_num25_window_action" model="ir.actions.act_window">
        <field name="name">Estimated income by revenue report</field>
        <field name="res_model">report.num25</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'show_date': 1}</field>
    </record>

    <menuitem id="report_num25_menu"
              action="report_num25_window_action"
              parent="report_menu_sale"
              sequence="25"/>
</odoo>