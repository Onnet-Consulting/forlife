<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_num23_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">report.num23</field>
        <field name="arch" type="xml">
            <form string="Báo cáo giá trị chiết khấu hạng thẻ" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="print_xlsx" type="object" icon="fa-file-excel-o" string="Download Excel" title="Download Excel"/>
                        <button name="view_report" type="object" icon="fa-bar-chart" string="View" class="btn-primary" title="View"/>
                    </div>
                    <group>
                        <group>
                            <label for="from_date" string="Date"/>
                            <div>from
                                <field name="from_date" class="oe_inline" required="1"/>
                                to
                                <field name="to_date" class="oe_inline" required="1"/>
                            </div>
                            <field name="type" widget="radio" options="{'horizontal': True}"/>
                        </group>
                        <group>
                            <field name="brand_id" widget="radio" options="{'horizontal': True}" context="{'report_ctx': 'report.num23,res.brand'}"/>
                            <field name="store_ids" domain="[('brand_id', '=', brand_id)]" widget="many2many_tags" options="{'no_create': True}" context="{'report_ctx': 'report.num23,store'}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="report_num23_window_action" model="ir.actions.act_window">
        <field name="name">Báo cáo giá trị chiết khấu hạng thẻ</field>
        <field name="res_model">report.num23</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="report_num23_menu"
              action="report_num23_window_action"
              parent="report_menu_sale"
              sequence="23"/>
</odoo>