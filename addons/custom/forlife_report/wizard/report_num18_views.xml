<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_num18_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">report.num18</field>
        <field name="arch" type="xml">
            <form string="Purchase Request Detail Report" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="print_xlsx" type="object" icon="fa-file-excel-o" string="Download Excel" title="Download Excel"/>
                        <button name="view_report" type="object" icon="fa-bar-chart" string="View" class="btn-primary" title="View"/>
                    </div>
                    <group>
                        <group>
                            <label for="from_date" string="Date"/>
                            <div>from
                                <field name="from_date" class="oe_inline" required="1"/>
                                to
                                <field name="to_date" class="oe_inline" required="1"/>
                            </div>
                            <field name="state" widget="radio" options="{'horizontal': True}"/>
                        </group>
                        <group>
                            <field name="pr_number" placeholder="PR001,PR002,..."/>
                        </group>
                    </group>
                    <group>
                        <field name="request_user_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="receiver_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="product_brand_ids" widget="many2many_tags" domain="[('parent_id', '=', False), ('category_type_id.code', '=', '1')]"
                               context="{'report_ctx': 'report.num18,product.category,product_brand_ids'}" options="{'no_create': True}"/>
                        <field name="product_group_ids" widget="many2many_tags" domain="[('parent_id', '=', product_brand_ids), ('parent_id', '!=', False)]"
                               context="{'report_ctx': 'report.num18,product.category,product_group_ids'}" options="{'no_create': True}"/>
                        <field name="product_line_ids" widget="many2many_tags" domain="[('parent_id', '=', product_group_ids), ('parent_id', '!=', False)]"
                               context="{'report_ctx': 'report.num18,product.category,product_line_ids'}" options="{'no_create': True}"/>
                        <field name="texture_ids" widget="many2many_tags" domain="[('parent_id', '=', product_line_ids), ('parent_id', '!=', False)]"
                               context="{'report_ctx': 'report.num18,product.category,texture_ids'}" options="{'no_create': True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="report_num18_window_action" model="ir.actions.act_window">
        <field name="name">Purchase Request Detail Report</field>
        <field name="res_model">report.num18</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="report_num18_menu"
              action="report_num18_window_action"
              parent="report_menu_purchase"
              sequence="5"/>
</odoo>