<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_num24_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">report.num24</field>
        <field name="arch" type="xml">
            <form string="Point customer report" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="print_xlsx" type="object" icon="fa-file-excel-o" string="Download Excel" title="Download Excel"/>
                        <button name="view_report" type="object" icon="fa-bar-chart" string="View" class="btn-primary" title="View"/>
                    </div>
                    <group>
                        <group>
                            <field name="brand_id" widget="radio" options="{'horizontal': True}" context="{'report_ctx': 'report.num24,res.brand'}"/>
                            <field name="store_id" domain="[('brand_id', '=', brand_id)]" options="{'no_create': True}" context="{'report_ctx': 'report.num24,store'}"/>
                        </group>
                        <group>
                            <label for="from_date" string="Date"/>
                            <div>from
                                <field name="from_date" class="oe_inline" required="1"/>
                                to
                                <field name="to_date" class="oe_inline" required="1"/>
                            </div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="report_num24_window_action" model="ir.actions.act_window">
        <field name="name">Point customer report</field>
        <field name="res_model">report.num24</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="report_num24_menu"
              action="report_num24_window_action"
              parent="report_menu_sale"
              sequence="24"/>
</odoo>