<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_num43_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">report.num43</field>
        <field name="arch" type="xml">
            <form string="báo cáo hình thức thanh toán trên POS" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="print_xlsx" type="object" icon="fa-file-excel-o" string="Download Excel" title="Download Excel"/>
                        <button name="view_report" type="object" icon="fa-bar-chart" string="View" class="btn-primary" title="View"/>
                    </div>
                    <group>
                        <group>
                            <label for="from_date" string="Ngày"/>
                            <div>Từ ngày
                                <field name="from_date" class="oe_inline" required="1"/>
                                đến ngày
                                <field name="to_date" class="oe_inline" required="1"/>
                            </div>
                        </group>

                    </group>
                    <group>
                        <group>
                            <field name="brand_id" options="{'no_create': True}"/>
                            <field name="pos_order"/>
                        </group>
                        <group>
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="pos_reference"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="report_num43_window_action" model="ir.actions.act_window">
        <field name="name">báo cáo hình thức thanh toán trên POS</field>
        <field name="res_model">report.num43</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="report_num43_menu"
              action="report_num43_window_action"
              parent="report_menu_sale"
              sequence="0"/>
</odoo>