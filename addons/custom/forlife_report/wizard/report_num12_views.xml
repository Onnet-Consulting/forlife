<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_num12_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">report.num12</field>
        <field name="arch" type="xml">
            <form string="Report customers not buying" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="view_report" type="object" icon="fa-bar-chart" string="View" class="btn-primary" title="View"/>
                    </div>
                    <group>
                        <group>
                            <field name="to_date" class="oe_inline" required="1"/>
                            <field name="brand_id" widget="radio" options="{'horizontal': True}"/>
                        </group>
                        <group>
                            <field name="number_of_days"/>
                            <field name="store_ids" domain="[('brand_id', '=', brand_id)]" widget="many2many_tags" options="{'no_create': True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="report_num12_window_action" model="ir.actions.act_window">
        <field name="name">Report customers not buying</field>
        <field name="res_model">report.num12</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="report_num12_menu"
              action="report_num12_window_action"
              parent="report_menu_card_rank"
              sequence="15"/>
</odoo>