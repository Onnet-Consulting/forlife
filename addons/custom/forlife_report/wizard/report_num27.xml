<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_num27_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">report.num27</field>
        <field name="arch" type="xml">
            <form string="Báo cáo danh sách phiếu nhập/xuất khác" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="print_xlsx" type="object" icon="fa-file-excel-o" string="Download Excel" title="Download Excel"/>
                        <button name="view_report" type="object" icon="fa-bar-chart" string="View" class="btn-primary" title="View"/>
                    </div>
                    <group>
                        <group>
                            <field name="request_id" widget="many2many_tags" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="location_id" options="{'no_create': True, 'no_edit': True}"/>
                        </group>
                        <group>
                            <field name="type"/>
                            <field name="status"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="report_num27_window_action" model="ir.actions.act_window">
        <field name="name">Báo cáo danh sách phiếu nhập/xuất khác</field>
        <field name="res_model">report.num27</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="report_num27_menu"
              action="report_num27_window_action"
              parent="report_menu_stock"
              sequence="27"/>
</odoo>