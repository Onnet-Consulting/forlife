<?xml version="1.0" encoding="utf-8" ?>
<template xml:space="preserve">
    <t t-name="ReportNum15Template" t-inherit="ReportBase" t-inherit-mode="primary">
        <xpath expr="//div[@id='main-content']" position="inside">
            <t t-call="ReportNum15MainTemplate"/>
        </xpath>
    </t>

    <t t-name="ReportNum15MainTemplate">
        <table t-att-id="widget.report_type_id" class="o_list_table table table-sm table-hover mb-0 o_list_table_ungrouped table-striped report_table">
            <t t-call="ReportTitle"/>
            <tbody>
                <t t-set="num" t-value="1"/>
                <t t-foreach="widget.data" t-as="line">
                    <tr>
                        <td><t t-esc="num"/></td>
                        <td><t t-esc="line.store_name"/></td>
                        <td><t t-esc="line.department"/></td>
                        <td><t t-esc="line.date"/></td>
                        <td><t t-esc="line.invoice_num"/></td>
                        <td><t t-esc="line.customer_name"/></td>
                        <td><t t-esc="line.voucher"/></td>
                        <td><t t-esc="line.program_name"/></td>
                        <td><t t-esc="line.start_date"/></td>
                        <td><t t-esc="line.end_date"/></td>
                    </tr>
                    <t t-set="num" t-value="num + 1"/>
                </t>
            </tbody>
        </table>
    </t>
</template>