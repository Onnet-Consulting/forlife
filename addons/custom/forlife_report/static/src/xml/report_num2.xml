<?xml version="1.0" encoding="utf-8" ?>
<template xml:space="preserve">
    <t t-name="ReportNum2Template" t-inherit="ReportBase" t-inherit-mode="primary">
        <xpath expr="//div[@id='main-content']" position="inside">
            <t t-call="ReportNum2MainTemplate"/>
        </xpath>
        <xpath expr="//div[@id='main-content']" position="attributes">
            <attribute name="class" add="report_stock_price_main_table" separator=" "/>
        </xpath>
    </t>
    <t t-name="ReportNum2MainTemplate">
        <t t-set="format_decimal" t-value="widget.func.format_decimal"/>
        <table class="o_list_table table table-sm table-hover mb-0 o_list_table_ungrouped table-striped report_table">
            <t t-call="ReportTitle"/>
            <tbody>
                <t t-foreach="options.data" t-as="line">
                    <tr class="line_stock_detail" style="cursor: pointer;" t-att-id="line.product_id">
                        <td class="column_nowrap"><t t-esc="line.product_barcode"/></td>
                        <td class="product_name"><t t-esc="line.product_name"/></td>
                        <td><t t-esc="line.product_size"/></td>
                        <td><t t-esc="line.product_color"/></td>
                        <td class="right"><t t-esc="format_decimal(line.quantity)"/></td>
                        <td class="right"><t t-esc="format_decimal(line.list_price)"/></td>
                        <td class="right"><t t-esc="format_decimal(line.discount_price)"/></td>
                    </tr>
                </t>
            </tbody>
        </table>
        <div id="product-detail">
        </div>
    </t>

    <t t-name="ReportNum2DetailTemplate">
        <div>
            <h2><t t-esc="detail.product_name"/></h2>
        </div>
        <table class="report_table">
            <thead>
                <tr>
                    <th>Kho</th>
                    <th>Tá»“n</th>
                </tr>
            </thead>
            <tbody>
                <t t-foreach="detail.lines" t-as="line">
                    <tr>
                        <td><t t-esc="line.warehouse_name"/></td>
                        <td class="right"><t t-esc="format_decimal(line.quantity)"/></td>
                    </tr>
                </t>
            </tbody>
        </table>
    </t>
</template>