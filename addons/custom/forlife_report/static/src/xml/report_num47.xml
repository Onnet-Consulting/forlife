<?xml version="1.0" encoding="utf-8" ?>
<template xml:space="preserve">
    <t t-name="ReportNum47Template" t-inherit="ReportBase" t-inherit-mode="primary">
        <xpath expr="//div[@id='main-content']" position="inside">
            <t t-call="ReportNum47MainTemplate"/>
        </xpath>
    </t>

    <t t-name="ReportNum47MainTemplate">
        <table t-att-id="widget.report_type_id" class="o_list_table table table-sm table-hover mb-0 o_list_table_ungrouped table-striped report_table">
            <t t-call="ReportTitle"/>
            <tbody>
                <t t-set="format_decimal" t-value="widget.func.format_decimal"/>
                <t t-foreach="options.data" t-as="line">
                    <tr>
                        <td class="index-report column_nowrap"><t t-esc="line.ngay"/></td>
                        <td class="right"><t t-esc="format_decimal(line.dt_tong, 0)"/></td>
                        <t t-foreach="widget.column_add" t-as="detail">
                            <td class="right"><t t-esc="format_decimal(line.thanh_toan[detail], 0)"/></td>
                        </t>
                        <td class="right"><t t-esc="format_decimal(line.chi_phi, 0)"/></td>
                        <td class="right"><t t-esc="format_decimal(line.chenh_lech, 0)"/></td>
                        <td><t t-esc="line.ghi_chu"/></td>
                    </tr>
                </t>
            </tbody>
        </table>
    </t>
</template>