<?xml version="1.0" encoding="utf-8" ?>
<template xml:space="preserve">
    <t t-name="ReportRevenueByProduct" t-inherit="ReportBase" t-inherit-mode="primary">
        <xpath expr="//div[@id='main-content']" position="inside">
            <t t-call="ReportRevenueByProductMain"/>
        </xpath>
    </t>
    <t t-name="ReportRevenueByProductMain">
        <table>
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Mã SP</th>
                    <th>Tên SP</th>
                    <th>Đơn vị</th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Chiết khấu</th>
                    <th>Thành tiền</th>
                    <th>Thành tiền có thuế</th>
                </tr>
            </thead>
            <tbody>
                    <t t-foreach="options.data" t-as="line">
                        <tr>
                            <td><t t-esc="line.num"/></td>
                            <td><t t-esc="line.product_barcode"/></td>
                            <td><t t-esc="line.product_name"/></td>
                            <td><t t-esc="line.uom_name"/></td>
                            <td><t t-esc="line.price_unit"/></td>
                            <td><t t-esc="line.qty"/></td>
                            <td><t t-esc="line.discount_percent"/></td>
                            <td><t t-esc="line.amount_without_tax"/></td>
                            <td><t t-esc="line.amount_with_tax"/></td>
                        </tr>
                </t>
            </tbody>
        </table>
    </t>
</template>