<?xml version="1.0" encoding="utf-8" ?>
<template xml:space="preserve">
    <t t-name="ReportNum6Template" t-inherit="ReportBase" t-inherit-mode="primary">
        <xpath expr="//div[@id='main-content']" position="inside">
            <t t-call="ReportNum6MainTemplate"/>
        </xpath>
    </t>

    <t t-name="ReportNum6MainTemplate">
        <div class="row">
            <div class="col-9" style="color: red;">Có <t t-esc="widget.total_records"/>
                bản ghi được tìm thấy
            </div>
            <div class="col-3">
                <button type="button" class="button_export_right export_data" aria-label="Xuất Excel" title="Xuất Excel"
                        t-att-button-id="widget.report_type_id" t-att-filename="widget.report_filename">Xuất Excel</button>
            </div>
        </div>
        <div class="oe_max_height_700">
            <table t-att-id="widget.report_type_id" class="o_list_table table table-sm table-hover mb-0 o_list_table_ungrouped table-striped report_table">
                <t t-call="ReportTitle"/>
                <tbody>
                    <t t-set="format_decimal" t-value="widget.func.format_decimal"/>
                    <t t-set="num" t-value="1"/>
                    <t t-foreach="options.data" t-as="line">
                        <tr>
                            <td><t t-esc="num"/></td>
                            <td><t t-esc="line.product_group"/></td>
                            <td><t t-esc="line.product_line"/></td>
                            <td><t t-esc="line.product_barcode"/></td>
                            <td><t t-esc="line.product_name"/></td>
                            <td><t t-esc="line.product_size"/></td>
                            <td><t t-esc="line.product_color"/></td>
                            <td><t t-esc="line.gender"/></td>
                            <td><t t-esc="line.sale_qty"/></td>
                            <td><t t-esc="line.stock_qty"/></td>
                            <td><t t-esc="line.employee_name"/></td>
                        </tr>
                        <t t-set="num" t-value="num + 1"/>
                    </t>
                </tbody>
            </table>
        </div>
        <br/>
        <div id="employee-detail">
        </div>
        <br/>
        <div id="order-detail">
        </div>
    </t>
</template>