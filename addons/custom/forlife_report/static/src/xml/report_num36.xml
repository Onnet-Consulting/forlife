<?xml version="1.0" encoding="utf-8" ?>
<template xml:space="preserve">
    <t t-name="ReportNum36Template" t-inherit="ReportBase" t-inherit-mode="primary">
        <xpath expr="//div[@id='main-content']" position="inside">
            <t t-call="ReportNum36MainTemplate"/>
        </xpath>
    </t>

    <t t-name="ReportNum36MainTemplate">
        <table t-att-id="widget.report_type_id" class="o_list_table table table-sm table-hover mb-0 o_list_table_ungrouped table-striped report_table">
            <t t-call="ReportTitle"/>
            <tbody>
                <t t-set="index" t-value="0"></t>
                <t t-foreach="options.data" t-as="line">
                    <tr t-if="line.lsx != 'Tổng'">
                        <t t-if="line.lsx">
                            <t t-set="index" t-value="index + 1"/>
                            <td><t t-esc="index"/></td>
                        </t>
                        <t t-else="">
                            <td></td>
                        </t>
                        <td t-if="line.lsx == 'Tổng'" colspan="6" style="background: #714B67; color: white; text-align: right"><t t-esc="line.lsx"/></td>
                        <td t-else=""><t t-esc="line.lsx"/></td>
                        <td><t t-esc="line.ql_donhang"/></td>
                        <td><t t-esc="line.dv_giacong"/></td>
                        <td><t t-esc="line.ma_thanhpham"/></td>
                        <td><t t-esc="line.ten_thanhpham"/></td>
                        <td><t t-esc="line.dvt"/></td>
                        <td><t t-esc="line.sl_sanxuat"/></td>
                        <td><t t-esc="line.sl_nhapkho"/></td>
                        <td><t t-esc="line.sl_conlai"/></td>
                    </tr>
                    <tr t-if="line.lsx and line.lsx == 'Tổng'">
                        <td t-if="line.lsx == 'Tổng'" colspan="7" style="text-align: right"><b><t t-esc="line.lsx"/></b></td>
<!--                        <td t-else=""><t t-esc="line.lsx"/></td>-->
<!--                        <td><t t-esc="line.ql_donhang"/></td>-->
<!--                        <td><t t-esc="line.dv_giacong"/></td>-->
<!--                        <td><t t-esc="line.ma_thanhpham"/></td>-->
<!--                        <td><t t-esc="line.dvt"/></td>-->
                        <td><b><t t-esc="line.sl_sanxuat"/></b></td>
                        <td><b><t t-esc="line.sl_nhapkho"/></b></td>
                        <td><b><t t-esc="line.sl_conlai"/></b></td>
                    </tr>
                </t>
            </tbody>
        </table>
    </t>
</template>