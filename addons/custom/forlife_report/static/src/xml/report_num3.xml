<?xml version="1.0" encoding="utf-8" ?>
<template xml:space="preserve">
    <t t-name="ReportNum3Template" t-inherit="ReportBase" t-inherit-mode="primary">
        <xpath expr="//div[@id='main-content']" position="inside">
            <t t-call="ReportNum3MainTemplate"/>
        </xpath>
    </t>

    <t t-name="ReportNum3MainTemplate">
        <table>
            <thead>
                <tr>
                    <t t-foreach="widget.titles" t-as="title">
                        <th><t t-esc="title"/></th>
                    </t>
                </tr>
            </thead>
            <tbody>
                <t t-foreach="options.data" t-as="line">
                    <tr>
                        <td><t t-esc="line.product_barcode"/></td>
                        <td><t t-esc="line.product_name"/></td>
                        <td><t t-esc="line.uom_name"/></td>
                        <td><t t-esc="line.total_qty"/></td>
                        <t t-foreach="widget.warehouse_ids" t-as="wh_id">
                            <td><t t-esc="line.product_qty_by_warehouse[wh_id] or ''"/></td>
                        </t>
                    </tr>
                </t>
            </tbody>
        </table>
    </t>
</template>