<?xml version="1.0" encoding="utf-8" ?>
<template xml:space="preserve">
    <t t-name="ReportNum3Template" t-inherit="ReportBase" t-inherit-mode="primary">
        <xpath expr="//div[@id='main-content']" position="inside">
            <t t-call="ReportNum3MainTemplate"/>
        </xpath>
    </t>

    <t t-name="ReportNum3MainTemplate">
        <t t-set="format_decimal" t-value="widget.func.format_decimal"/>
        <table class="o_list_table table table-sm table-hover mb-0 o_list_table_ungrouped table-striped report_table">
            <t t-call="ReportTitle"/>
            <tbody>
                <t t-foreach="options.data" t-as="line">
                    <tr>
                        <td style="text-align: center;"><t t-esc="line.num"/></td>
                        <td><t t-esc="line.brand"/></td>
                        <td><t t-esc="line.product_group"/></td>
                        <td><t t-esc="line.product_line"/></td>
                        <td><t t-esc="line.texture"/></td>
                        <td><t t-esc="line.season"/></td>
                        <td><t t-esc="line.gender"/></td>
                        <td class="column_nowrap"><t t-esc="line.product_barcode"/></td>
                        <td><t t-esc="line.product_name"/></td>
                        <td><t t-esc="line.uom_name"/></td>
                        <td><t t-esc="line.color"/></td>
                        <td><t t-esc="line.size"/></td>
                        <td><t t-esc="line.label"/></td>
                        <td class="right"><t t-esc="format_decimal(line.total_qty, 2)"/></td>
                        <td class="right"><t t-esc="format_decimal(line.total_pending, 2)"/></td>
                        <t t-foreach="widget.warehouse_ids" t-as="wh_id">
                            <td class="right"><t t-esc="format_decimal(line.product_qty_by_warehouse[wh_id] or 0, 2)"/></td>
                        </t>
                    </tr>
                </t>
            </tbody>
        </table>
    </t>
</template>