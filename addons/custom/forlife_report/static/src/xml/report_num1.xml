<?xml version="1.0" encoding="utf-8" ?>
<template xml:space="preserve">
    <t t-name="ReportNum1Template" t-inherit="ReportBase" t-inherit-mode="primary">
        <xpath expr="//div[@id='main-content']" position="inside">
            <t t-call="ReportNum1MainTemplate"/>
        </xpath>
    </t>
    <t t-name="ReportNum1MainTemplate">
        <t t-set="format_decimal" t-value="widget.func.format_decimal"/>
        <table class="o_list_table table table-sm table-hover mb-0 o_list_table_ungrouped table-striped report_table">
            <t t-call="ReportTitle"/>
            <tbody>
                <t t-foreach="options.data" t-as="line">
                    <tr>
                        <td style="text-align: center;"><t t-esc="line.num"/></td>
                        <td><t t-esc="line.warehouse"/></td>
                        <td><t t-esc="line.product_barcode"/></td>
                        <td><t t-esc="line.product_name"/></td>
                        <td><t t-esc="line.product_size"/></td>
                        <td><t t-esc="line.product_color"/></td>
                        <td><t t-esc="line.uom_name"/></td>
                        <td style="text-align: right;"><t t-esc="format_decimal(line.price_unit, 0)"/></td>
                        <td style="text-align: center;"><t t-esc="format_decimal(line.qty, 0)"/></td>
                        <td style="text-align: right;"><t t-esc="format_decimal(line.discount, 0)"/></td>
                        <td style="text-align: right;"><t t-esc="format_decimal(line.total_amount, 0)"/></td>
                        <td><t t-esc="line.product_group"/></td>
                        <td><t t-esc="line.product_line"/></td>
                        <td><t t-esc="line.texture_name"/></td>
                        <td><t t-esc="line.product_type_code"/></td>
                        <td><t t-esc="line.sale_channel"/></td>
                    </tr>
                </t>
            </tbody>
        </table>
    </t>
</template>