<?xml version="1.0" encoding="utf-8" ?>
<template xml:space="preserve">
    <t t-name="ReportNum1Template" t-inherit="ReportBase" t-inherit-mode="primary">
        <xpath expr="//div[@id='main-content']" position="inside">
            <t t-call="ReportNum1MainTemplate"/>
        </xpath>
    </t>
    <t t-name="ReportNum1MainTemplate">
        <t t-set="format_decimal" t-value="widget.func.format_decimal"/>
        <table>
            <thead>
                <tr>
                    <t t-foreach="widget.titles" t-as="title">
                        <th><t t-esc="title"/></th>
                    </t>
                </tr>
            </thead>
            <tbody>
                <t t-foreach="options.data" t-as="line">
                    <tr>
                        <td><t t-esc="line.num"/></td>
                        <td><t t-esc="line.product_barcode"/></td>
                        <td><t t-esc="line.product_name"/></td>
                        <td><t t-esc="line.uom_name"/></td>
                        <td><t t-esc="format_decimal(line.price_unit, 2)"/></td>
                        <td><t t-esc="format_decimal(line.qty)"/></td>
                        <td><t t-esc="format_decimal(line.discount_percent, 2)"/></td>
                        <td><t t-esc="format_decimal(line.amount_without_tax, 2)"/></td>
                        <td><t t-esc="format_decimal(line.amount_with_tax, 2)"/></td>
                    </tr>
                </t>
            </tbody>
        </table>
    </t>
</template>