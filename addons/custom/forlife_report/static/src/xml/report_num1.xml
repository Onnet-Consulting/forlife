<?xml version="1.0" encoding="utf-8" ?>
<template xml:space="preserve">
    <t t-name="ReportNum1Template" t-inherit="ReportBase" t-inherit-mode="primary">
        <xpath expr="//div[@id='main-content']" position="inside">
            <t t-call="ReportNum1MainTemplate"/>
        </xpath>
    </t>
    <t t-name="ReportNum1MainTemplate">
        <t t-set="format_decimal" t-value="widget.func.format_decimal"/>
        <table class="o_list_table table table-sm table-hover mb-0 o_list_table_ungrouped table-striped">
            <t t-call="ReportTitle"/>
            <tbody>
                <t t-foreach="options.data" t-as="line">
                    <tr>
                        <td style="text-align: center;"><t t-esc="line.num"/></td>
                        <td><t t-esc="line.warehouse"/></td>
                        <td><t t-esc="line.product_barcode"/></td>
                        <td><t t-esc="line.product_name"/></td>
                        <td><t t-esc="line.product_size"/></td>
                        <td><t t-esc="line.product_color"/></td>
                        <td><t t-esc="line.uom_name"/></td>
                        <td style="text-align: right;"><t t-esc="format_decimal(line.price_unit, 2)"/></td>
                        <td style="text-align: center;"><t t-esc="format_decimal(line.qty)"/></td>
                        <td style="text-align: right;"><t t-esc="format_decimal(line.discount, 2)"/></td>
                        <td style="text-align: right;"><t t-esc="format_decimal(line.amount_without_tax, 2)"/></td>
                        <td style="text-align: right;"><t t-esc="format_decimal(line.amount_with_tax, 2)"/></td>
                        <td><t t-esc="line.nhom_hang"/></td>
                        <td><t t-esc="line.dong_hang"/></td>
                        <td><t t-esc="line.ket_cau"/></td>
                        <td><t t-esc="line.ma_loai_sp"/></td>
                        <td><t t-esc="line.kenh_ban"/></td>
                    </tr>
                </t>
            </tbody>
        </table>
    </t>
</template>