<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="permission_report_import_view_form" model="ir.ui.view">
            <field name="name">permission_report_import_view_form</field>
            <field name="model">permission.report.import</field>
            <field name="arch" type="xml">
                <form string="permission_report_import_form">
                    <sheet>
                        <group>
                            <field name="import_file" filename="import_file_name"/>
                            <field name="import_file_name" invisible="1"/>
                        </group>
                        <group string="Lỗi nhập liệu" attrs="{'invisible': [('error_file', '=', False)]}">
                            <field name="error_file" filename="error_file_name" readonly="1" force_save="1"/>
                            <field name="error_file_name" invisible="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button special="cancel" string="Hủy"/>
                        <button name="print_xlsx" type="object" string="Tải mẫu" class="oe_highlight"/>
                        <button name="action_import" type="object" string="Nhập" class="oe_highlight" attrs="{'invisible': [('import_file', '=', False)]}"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="permission_report_import_action" model="ir.actions.act_window">
            <field name="name">Nhập quyền dữ liệu báo cáo</field>
            <field name="res_model">permission.report.import</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="permission_report_import_menu" parent="root_permission_report_menu" action="permission_report_import_action" sequence="90"/>

    </data>
</odoo>