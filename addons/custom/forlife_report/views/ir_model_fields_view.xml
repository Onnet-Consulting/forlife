<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_rule_tree_inherit" model="ir.ui.view">
            <field name="name">view_rule_tree_inherit</field>
            <field name="model">ir.rule</field>
            <field name="inherit_id" ref="base.view_rule_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='perm_unlink']" position="after">
                    <field name="is_report_rule"/>
                </xpath>

            </field>
        </record>

        <record id="view_rule_form_inherit" model="ir.ui.view">
            <field name="name">view_rule_form_inherit</field>
            <field name="model">ir.rule</field>
            <field name="inherit_id" ref="base.view_rule_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='perm_create']" position="after">
                    <field name="is_report_rule" widget="boolean_toggle"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>