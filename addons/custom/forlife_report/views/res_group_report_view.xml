<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_group_report_view_tree" model="ir.ui.view">
            <field name="name">res_group_report_view_tree</field>
            <field name="model">res.group.report</field>
            <field name="arch" type="xml">
                <tree string="res_group_report_tree">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="user_ids"/>
                </tree>
            </field>
        </record>

        <record id="res_group_report_view_form" model="ir.ui.view">
            <field name="name">res_group_report_view_form</field>
            <field name="model">res.group.report</field>
            <field name="arch" type="xml">
                <form string="res_group_report_form">
                    <sheet>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                        </group>
                        <notebook>
                            <page name="" string="Người dùng">
                                <field name="user_ids">
                                    <tree create="0" delete="0" edit="0">
                                        <field name="login" string="Mã người dùng"/>
                                        <field name="name" string="Tên người dùng"/>
                                    </tree>
                                    <form create="0" delete="0" edit="0">
                                        <group>
                                            <field name="login" string="Mã người dùng" readonly="1"/>
                                            <field name="name" string="Tên người dùng" readonly="1"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page name="" string="Quyền dữ liệu">
                                <field name="data_permission_ids">
                                    <tree create="0" delete="0" edit="0">
                                        <field name="name"/>
                                        <field name="report"/>
                                        <field name="field_id" context="{'report_permission': 1}"/>
                                        <field name="value_ids"/>
                                    </tree>
                                    <form create="0" delete="0" edit="0">
                                        <group>
                                            <field name="name" readonly="1"/>
                                            <field name="report" readonly="1"/>
                                            <field name="field_id" widget="selection" context="{'report_permission': 1}" readonly="1"/>
                                            <field name="value_ids">
                                                <tree create="0" delete="0" edit="0">
                                                    <field name="name"/>
                                                    <field name="description"/>
                                                </tree>
                                                <form create="0" delete="0" edit="0">
                                                    <group>
                                                        <field name="name" readonly="1"/>
                                                        <field name="description" readonly="1"/>
                                                    </group>
                                                </form>
                                            </field>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="res_group_report_filter" model="ir.ui.view">
            <field name="name">res_group_report_filter</field>
            <field name="model">res.group.report</field>
            <field name="arch" type="xml">
                <search string="">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="user_ids"/>
                </search>
            </field>
        </record>

        <record id="res_group_report_action" model="ir.actions.act_window">
            <field name="name">Nhóm quyền</field>
            <field name="res_model">res.group.report</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'report_permission': 1}</field>
        </record>

        <menuitem id="res_group_report_menu" parent="root_permission_report_menu" action="res_group_report_action" sequence="5"/>

    </data>
</odoo>