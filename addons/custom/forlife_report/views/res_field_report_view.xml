<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_field_report_view_tree" model="ir.ui.view">
            <field name="name">res_field_report_view_tree</field>
            <field name="model">res.field.report</field>
            <field name="arch" type="xml">
                <tree string="res_field_report_tree">
                    <field name="name"/>
                    <field name="report_id"/>
                    <field name="field_id" context="{'report_permission': 1}"/>
                    <field name="value_ids"/>
                </tree>
            </field>
        </record>

        <record id="res_field_report_view_form" model="ir.ui.view">
            <field name="name">res_field_report_view_form</field>
            <field name="model">res.field.report</field>
            <field name="arch" type="xml">
                <form string="res_field_report_form">
                    <sheet>
                        <button name="reset_all_value" type="object" string="Gỡ tất cả Dữ liệu" class="oe_highlight oe_right" confirm="Xác nhận gỡ tất cả dữ liệu đã chọn"/>
                        <group>
                            <field name="name" class="oe_inline"/>
                            <field name="report_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="field_id" widget="selection" context="{'report_permission': 1}" class="oe_inline"
                                   domain="[('model_id', '=', report_id), ('model_id', '!=', False), ('readonly', '=', False), ('ttype', 'ilike', 'many')]" required="1"/>
                            <field name="value_ids">
                                <tree create="0" delete="0" edit="0">
                                    <field name="name"/>
                                    <field name="description"/>
                                </tree>
                                <form create="0" delete="0" edit="0">
                                    <group>
                                        <field name="name"/>
                                        <field name="description"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="res_field_report_filter" model="ir.ui.view">
            <field name="name">res_field_report_filter</field>
            <field name="model">res.field.report</field>
            <field name="arch" type="xml">
                <search string="">
                    <field name="name"/>
                    <field name="report_id"/>
                    <field name="field_id"/>
                    <field name="value_ids"/>
                </search>
            </field>
        </record>

        <record id="res_field_report_action" model="ir.actions.act_window">
            <field name="name">Phân quyền trường dữ liệu</field>
            <field name="res_model">res.field.report</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'report_permission': 1}</field>
        </record>

        <menuitem id="res_field_report_menu" parent="root_permission_report_menu" action="res_field_report_action" sequence="10"/>

    </data>
</odoo>