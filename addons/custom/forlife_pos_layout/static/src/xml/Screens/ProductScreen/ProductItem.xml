<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-name="CustomProductItem" owl="1">
        <tr class="product" tabindex="0" t-on-keypress="spaceClickProduct"
                t-on-click="() => this.trigger('click-product', props.product)"
                t-att-data-product-id="props.product.id"
                t-attf-aria-labelledby="article_product_{{props.product.id}}">
                <td class="product-code"><t t-if="props.product.barcode" t-esc="props.product.barcode" /></td>
                <td class="product-name" t-attf-id="article_product_{{props.product.id}}"><t t-esc="props.product.display_name" /></td>
                <td class="product-price"><t t-esc="price" /></td>
                <td class="product-unit"><t t-esc="props.product.uom_id[1]" /></td>
            </tr>
    </t>

</templates>
