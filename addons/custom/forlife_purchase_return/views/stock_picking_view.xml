<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="forlife_purchase_return_stock_picking_form_view" model="ir.ui.view">
        <field name="name">forlife.purchase.return.stock.picking.form.view</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_id'][2]" position="attributes">
                <attribute name="attrs">{'invisible': [('picking_type_code', '=', 'incoming'), ('is_pk_purchase', '=', False)]}</attribute>
            </xpath>

            <field name="user_id" position="after">
                <field name="return_reason" attrs="{'invisible': [('return_reason', '=', False)]}"/>
                <field name="is_picking_return" invisible="1"/>
            </field>
        </field>
    </record>
</odoo>