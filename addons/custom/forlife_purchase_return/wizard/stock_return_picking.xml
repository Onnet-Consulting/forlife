<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    	<record id="inherit_view_stock_return_picking_form" model="ir.ui.view">
            <field name="name">stock.return.picking.form</field>
            <field name="model">stock.return.picking</field>
            <field name="inherit_id" ref="stock.view_stock_return_picking_form"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="for_po" invisible="1"/>
                    <label for="select_all" attrs="{'invisible': [('for_po', '=', False)]}"/>
                    <field name="select_all" attrs="{'invisible': [('for_po', '=', False)]}"/>
                </field>
                <xpath expr="//field[@name='product_return_moves']//tree/field[@name='quantity']" position="before">
                    <field name="quantity_init" readonly="1" force_save="1" attrs="{'column_invisible': [('parent.for_po', '=', False)]}"/>
                    <field name="quantity_returned" readonly="1" force_save="1" attrs="{'column_invisible': [('parent.for_po', '=', False)]}"/>
                    <field name="quantity_remain" readonly="1" force_save="1" attrs="{'column_invisible': [('parent.for_po', '=', False)]}"/>
                </xpath>
                <field name="location_id" position="after">
                    <field name="return_reason" attrs="{'invisible': [('for_po', '=', False)], 'required': [('for_po', '=', True)]}"/>
                </field>
                <xpath expr="//field[@name='product_return_moves']//tree/field[@name='product_id']" position="before">
                    <field name="select_line" attrs="{'column_invisible': [('parent.for_po', '=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='product_return_moves']//tree/field[@name='quantity']" position="attributes">
                    <attribute name="attrs">{
                        'readonly': [('select_line', '=', False), ('parent.for_po', '=', True)]
                    }</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>