<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_wizard_purchase_order_return" model="ir.actions.act_window">
        <field name="name">Purchase Return</field>
        <field name="res_model">purchase.return.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_purchase_order_return_form" model="ir.ui.view">
        <field name="name">Return lines</field>
        <field name="model">purchase.return.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="purchase_id" invisible="1" force_save="1"/>
                <field name="company_id" invisible="1"/>
                <group>
                    <group>
                        <field name="selected_all"/>
                    </group>
                    <group>
                        <field name="company_id"/>
                    </group>
                </group>
                <field name="purchase_return_lines">
                    <tree editable="top" create="0" delete="0">
                        <field name="wizard_id" invisible="1"/>
                        <field name="is_selected"/>
                        <field name="product_id" readonly="1" options="{'no_create': True, 'no_open': True}" force_save="1"/>
                        <field name="purchase_received" readonly="1" force_save="1"/>
                        <field name="purchase_returned" readonly="1" force_save="1"/>
                        <field name="purchase_remain" readonly="1" force_save="1"/>
                        <field name="quantity" attrs="{'readonly': [('is_selected', '=', False)], 'required': [('is_selected', '=', True)]}"/>
                        <field name="uom_id" groups="uom.group_uom" string="Đơn vị mua" readonly="1" force_save="1"/>
                        <field name="exchange_quantity" readonly="1" force_save="1" string="Tỷ lệ quy đổi"/>
                        <field name="vendor_price" invisible="1"/>
                        <field name="purchase_line_id" invisible="1"/>
                    </tree>
                </field>
                <group>
                    <field name="location_id" options="{'no_create': True, 'no_open': True}" groups="stock.group_stock_multi_locations"/>
                </group>
                <footer>
                    <button name="create_returns" string="Return" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
